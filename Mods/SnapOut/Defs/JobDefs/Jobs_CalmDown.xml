<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <WorkGiverDef>
    <defName>CalmPawnDown</defName>
    <label>calm down another pawn</label>
    <giverClass>Calm_Down.WorkGiver_CalmPawnDown</giverClass>
    <workType>Warden</workType>
    <verb>calm</verb>
    <gerund>calming</gerund>
    <priorityInType>18</priorityInType>
    <requiredCapacities>
      <li>Manipulation</li>
      <li>Talking</li>
    </requiredCapacities>
  </WorkGiverDef>
   
  <JobDef>
    <defName>CDCalmDown</defName>
    <driverClass>Calm_Down.JobDriver_CalmDown</driverClass>
    <reportString>calming TargetA down.</reportString>
    <casualInterruptible>true</casualInterruptible>
  </JobDef>
  
  <JobDef>
	<defName>CDSnappingOut</defName>
	<driverClass>Calm_Down.JobDriver_SnappingOut</driverClass>
	<reportString>spending time alone.</reportString>
	<casualInterruptible>false</casualInterruptible>
  </JobDef>
  
</Defs>
