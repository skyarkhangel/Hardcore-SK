<?xml version="1.0" encoding="utf-8" ?>
<WeatherDefs>

  <WeatherDef>
    <defName>TerraformingThunderstorm</defName>
    <label>strange thunderstorm</label>
    <description>Dry thunderstorms generated by mechanoid terraformers are dangerous because the lightning can start fires and there is no rain to put them out.
But they also generate a high quantity of energy...</description>
    <temperatureRange>
      <min>-999</min>
      <max>999</max>
    </temperatureRange>
    <windSpeedFactor>1.5</windSpeedFactor>
    <favorability>VeryBad</favorability>
    <ambientSounds>
      <li>AmbientWind_Storm</li>
    </ambientSounds>
    <durationRange>
      <min>1200</min>
      <max>3600</max>
    </durationRange>
    <eventMakers>
      <li>
        <averageInterval>400</averageInterval>
        <eventClass>WeatherEvent_LightningFlash</eventClass>
      </li>
      <li>
        <averageInterval>400</averageInterval>
        <eventClass>WeatherEvent_LightningStrike</eventClass>
      </li>
    </eventMakers>
    <!-- Colors are Overcast -->
    <skyColorsDay>
      <sky>(0.8,0.8,0.8)</sky>
      <shadow>(0.92,0.92,0.92)</shadow>
      <overlay>(0.7,0.7,0.7)</overlay>
      <saturation>0.9</saturation>
    </skyColorsDay>
    <skyColorsDusk>
      <sky>(1,1,1)</sky>
      <shadow>(0.92,0.92,0.92)</shadow>
      <overlay>(0.6,0.6,0.6)</overlay>
