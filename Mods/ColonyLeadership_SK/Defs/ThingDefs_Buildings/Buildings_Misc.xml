<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef Name="BuildingBaseCL" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
  </ThingDef>
  
  <!--============================ Spots =============================-->
  
  <ThingDef ParentName="BuildingBaseCL">
    <defName>TeachingSpot</defName>
    <label>Teacher Table</label>
	  <thingClass>Nandonalt_ColonyLeadership.Building_TeachingSpot</thingClass>
    <description>Designates a spot where lessons will be held.</description>
    <tickerType>Rare</tickerType>	
    <graphicData>
      <texPath>ColonyLeadership/teaching_table</texPath>
     <graphicClass>Graphic_Multi</graphicClass>
	   <shaderType>CutoutComplex</shaderType>
         <damageData>
        <rectN>(0.125,0.296875,0.734375,0.421875)</rectN>
        <rectS>(0.125,0.296875,0.734375,0.421875)</rectS>
        <rectE>(0.234375,0.296875,0.5,0.546875)</rectE>
        <rectW>(0.234375,0.296875,0.5,0.546875)</rectW>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
	<hasInteractionCell>true</hasInteractionCell>
	<castEdgeShadows>true</castEdgeShadows>
	<fillPercent>0.5</fillPercent>
	  <socialPropernessMatters>true</socialPropernessMatters>	
	   <defaultPlacingRot>South</defaultPlacingRot>
      <useHitPoints>True</useHitPoints>
	  <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>		  
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
	 <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>	  
    </stuffCategories>
	<costStuffCount>60</costStuffCount>
	<costList>
		<ComponentMedieval>4</ComponentMedieval>
	</costList>
    <statBases>
		<WorkToBuild>500</WorkToBuild>
		<MaxHitPoints>150</MaxHitPoints>
		<Flammability>1.0</Flammability>
		<Beauty>5</Beauty>
		<LearningSpeedFactor>1</LearningSpeedFactor>
    </statBases>
	<scatterableOnMapGen>false</scatterableOnMapGen>
	<designationCategory>LeadershipModTab</designationCategory>
	<passability>PassThroughOnly</passability>
	<pathCost>70</pathCost>
	<inspectorTabs>
      <li>Nandonalt_ColonyLeadership.ITab_LessonSchedule</li>	  
    </inspectorTabs>
    <building>
        <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
	  	<watchBuildingStandDistanceRange>
		<min>1</min>
		<max>7</max>
	</watchBuildingStandDistanceRange>
	<watchBuildingStandRectWidth>7</watchBuildingStandRectWidth>   	
    </building>
	    <comps>
      <li>	  
        <compClass>CompQuality</compClass>		
      </li>	  
	     <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>GlobeCL</li>
		  <li>ChalkboardCL</li>
        </linkableFacilities>
		</li>
    </comps>
	<placeWorkers>
        <li>Nandonalt_ColonyLeadership.PlaceWorker_TeachingSpot</li>
    </placeWorkers>
  </ThingDef>

    <ThingDef ParentName="BuildingBaseCL">
    <defName>GlobeCL</defName>
    <label>RimWorld Globe</label>
    <graphicData>
      <texPath>ColonyLeadership/globe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	   <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <offset>(0,0,-0.3)</offset>
        <volume>(0.3, 0.3, 0.4)</volume>
      </shadowData>
      <damageData>
        <rectN>(0.078125,0.46875,0.859375,0.53125)</rectN>
        <rectS>(0.078125,0.46875,0.859375,0.53125)</rectS>
        <rectE>(0.125,0.46875,0.625,0.296875)</rectE>
        <rectW>(0.25,0.46875,0.625,0.296875)</rectW>
        <cornerTR>Damage/Corner</cornerTR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.2</fillPercent>
    <statBases>
	   <MarketValue>200</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>4000</WorkToBuild>
      <Mass>20</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
	    <rotatable>false</rotatable>
    <description>Putting this globe on a classroom will improve the effectiveness of teaching.</description>
    <size>(1,1)</size>
	<stuffCategories>
		<li>Metallic</li>
		<li>Woody</li>
		<li>Stony</li>
		<li>Plastic</li>
    </stuffCategories>
	<costStuffCount>70</costStuffCount>
	<costList>
		<ComponentIndustrial>8</ComponentIndustrial>
	</costList>
	<designationCategory>LeadershipModTab</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
	<building>
		<ai_chillDestination>false</ai_chillDestination>
	</building>
	<thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <comps>
	   <li>	  
        <compClass>CompQuality</compClass>		
      </li>
         <li Class="CompProperties_Facility">
        <statOffsets>
        <LearningSpeedFactor>0.1</LearningSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
      </li>
    </comps>
 		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
  </ThingDef>
  
