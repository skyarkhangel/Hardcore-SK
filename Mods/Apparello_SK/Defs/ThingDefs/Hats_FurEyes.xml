<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="ApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>3</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
    </statBases>
    <techLevel>Midworld</techLevel>
    <thingCategories>
      <li>Apparelloeyehats</li>
    </thingCategories>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>



  <!--Visors-->

  <ThingDef ParentName="ApparelBase">
    <defName>Apparello_Visoor</defName>
    <label>Shuttlepilot's Visor</label>
    <description>Shuttlepilot's visors. used to fulfill your usual piloting needs like calling in "houston; mayday mayday - landing struts are jammed, I repeat landing struts are jammed. Copy? Roger Wilco. Starfox one out."</description>
    <graphicData>
      <texPath>Hats/Display/Visoor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <ArmorRating_Blunt>0.01</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.01</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.01</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
      <worngraphicPath>Hats/Goggles/Visoor</worngraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <commonality>1</commonality>
      <tags>
        <li>Spacer</li>
        <li>SetTalker</li>
      <li>Military</li>
	<li>FreedomLight</li>
	<li>DutyLight</li>
	<li>MonolithLight</li>
	<li>ClearSkyLight</li>
	<li>MercenariesLight</li>
	<li>LonersLight</li>
	<li>FreedomScout</li>
	<li>DutyScout</li>
	<li>MonolithScout</li>
	<li>ClearSkyScout</li>
	<li>MercenariesScout</li>
	<li>LonersScout</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>4</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.9,0.9,0.9,1)</max>
        </li>
      </options>
    </colorGenerator>
    <thingCategories>
      <li>ApparelloSetSocialite</li>
    </thingCategories>
  </ThingDef>


