<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>
  
   <ThingDef ParentName="BuildingBase">
	    <DefName>BarrelDye</DefName>
	    <label>Dye Barrel</label>
	    <ThingClass>Building_WorkTable</ThingClass>
	    <Description>A barrel for dyeing cloth into various colors.</Description>
	    <graphicData>
	      <texPath>Things/AreaRugs/Building/DyeTable</texPath>
	      <graphicClass>Graphic_Multi</graphicClass>
	      <drawSize>(1,1)</drawSize>
	    </graphicData>
	<stuffCategories>
		<li>Metallic</li>
	</stuffCategories>
	<costStuffCount>60</costStuffCount>
		<CostList>
			<Components>7</Components>
			<ElectronicComponents>2</ElectronicComponents>
			<Mechanism>4</Mechanism>
		</CostList>
	    <AltitudeLayer>Waist</AltitudeLayer>
	    <fillPercent>0.5</fillPercent>
	    <useHitPoints>True</useHitPoints>
	    <statBases>
	      <WorkToMake>2500</WorkToMake>
	      <MaxHitPoints>180</MaxHitPoints>
	      <Flammability>1.0</Flammability>
	      <Cleanliness>-5</Cleanliness>
	    </statBases>
	    <Size>(1,1)</Size>
	    <DesignationCategory>Production</DesignationCategory>
	    <Passability>PassThroughOnly</Passability>
	    <pathCost>70</pathCost>
	    <hasInteractionCell>True</hasInteractionCell>
	    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
	    <surfaceType>Item</surfaceType>
	    <inspectorTabs>
	      <li>ITab_Bills</li>
	    </inspectorTabs>
	    <building>
	      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
	    </building>
	    <comps>
	       <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
	    </comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<researchPrerequisites><li>CarpetMaking</li></researchPrerequisites>
	</ThingDef>

