<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef>
		<defName>FishingRod</defName>
    <label>Fishing Rod</label>
    <description>A simple fishing rod made of wood. With some patience you can catch fish with it. Equip on hands!</description>
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <texPath>Things/Item/Resource/FishingRod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <OnGroundRandomRotateAngle>35</OnGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
		<statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
			<MarketValue>70</MarketValue>
    </statBases>
    <apparel>
      <layers>
        <li>OnSkin</li>
      </layers>
      <bodyPartGroups>
        <li>Hands</li>
      </bodyPartGroups>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<commonality>0.8</commonality>
