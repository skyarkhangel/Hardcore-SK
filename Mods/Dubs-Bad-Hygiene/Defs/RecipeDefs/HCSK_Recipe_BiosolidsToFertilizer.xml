<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<RecipeDef Class="UniversalFermenter.RecipeDef_UF" DBHLite="true">
		<defName>Make_FertilizerFromBiosolids</defName>
		<label>make fertilizer from biosolids</label>
		<description>Pasteurize biosolids into proper fertilizer. Takes 1.5 days to make</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Biosolids</li>
					</thingDefs>
				</filter>
				<count>75</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Biosolids</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Fertilizer>5</Fertilizer>
		</products>
		<recipeUsers>
			<li>BiofuelRefinery</li>
		</recipeUsers>
	    <researchPrerequisite Inherit="False">BiofuelRefining</researchPrerequisite>
		
		<!-- RecipeDef_UF fields -->
		<ruinedIfNoPowerOrNoFuelOrFlickedOffPerHour>5</ruinedIfNoPowerOrNoFuelOrFlickedOffPerHour>
