<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

  <ThingDef>
    <defName>Building_RTMagneticShield</defName>
    <label>magnetic shield</label>
    <description>Protects the colony from a solar flare at a tremendous power cost, and generates huge amounts of heat when in operation. While you can build more than one, having several active is useless and will only create more problems.</description>
    <designationCategory>Power</designationCategory>
    <tickerType>Normal</tickerType>

    <category>Building</category>
    <thingClass>Building</thingClass>
    <minifiedDef>MinifiedFurniture</minifiedDef>

    <graphicData>
      <texPath>RT_Buildings/RTFlareShieldBase</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <drawerType>MapMeshAndRealTime</drawerType>
    <repairEffect>Repair</repairEffect>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <filthLeaving>BuildingRubble</filthLeaving>

    <size>(2,2)</size>
    <researchPrerequisite>RTFusebox_FlareShield</researchPrerequisite>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <altitudeLayer>Waist</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <building>
      <ignoreNeedsPower>True</ignoreNeedsPower>
    </building>
    <selectable>True</selectable>
    <rotatable>False</rotatable>
    <fillPercent>0.3</fillPercent>
    <pathCost>30</pathCost>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>500</WorkToMake>
      <Flammability>1.0</Flammability>
      <Beauty>-20</Beauty>
    </statBases>
	<stuffCategories>
	<li>Metallic</li>
	</stuffCategories>
	<costStuffCount>110</costStuffCount>
    <costList>
	<MagneticMaterial>10</MagneticMaterial>
	<Spare_Parts>10</Spare_Parts>
	<Mechanism>5</Mechanism>
	<Microchips>3</Microchips>
    </costList>
    <comps>
      <li>
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>500</basePowerConsumption>
        <shortCircuitInRain>True</shortCircuitInRain>
        <startElectricalFires>True</startElectricalFires>
        <soundPowerOn>PowerOnSmall</soundPowerOn>
        <soundPowerOff>PowerOffSmall</soundPowerOff>
      </li>
      <li>
        <compClass>CompGlower</compClass>
        <glowRadius>15</glowRadius>
        <glowColor>(25,25,150,0)</glowColor>
      </li>
      <li Class="RTFusebox.CompProperties_RTFusebox">
        <compClass>RTFusebox.CompRTFlareProtector</compClass>
        <idleCost>50</idleCost>
        <shieldingCost>25000</shieldingCost>
        <heatingPerTick>0.15</heatingPerTick>
        <rotatorPath>RT_Buildings/RTFlareShieldTop</rotatorPath>
        <rotatorSpeedIdle>0.5</rotatorSpeedIdle>
        <rotatorSpeedWorking>10.0</rotatorSpeedWorking>
      </li>
    </comps>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>3.0</multiplier>
      </li>
      <li>
        <damageDef>Bullet</damageDef>
        <multiplier>0.3</multiplier>
      </li>
      <li>
        <damageDef>Fragment</damageDef>
        <multiplier>0.2</multiplier>
      </li>
      <li>
        <damageDef>ArmorPiercing</damageDef>
        <multiplier>2.5</multiplier>
      </li>
      <li>
        <damageDef>LaserBurn</damageDef>
        <multiplier>2.0</multiplier>
      </li>
      <li>
        <damageDef>AntiMateriel</damageDef>
        <multiplier>2.0</multiplier>
      </li>
      <li>
        <damageDef>Optic</damageDef>
        <multiplier>1.5</multiplier>
      </li>
      <li>
        <damageDef>Plasma</damageDef>
        <multiplier>2.0</multiplier>
      </li>
      <li>
        <damageDef>Microwave</damageDef>
        <multiplier>1.5</multiplier>
      </li>
    </damageMultipliers>
  </ThingDef>

</Buildings>