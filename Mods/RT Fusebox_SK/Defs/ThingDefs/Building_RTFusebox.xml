<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

  <ThingDef>
    <defName>Building_RTFusebox</defName>
    <label>Fusebox</label>
    <description>A set of automatic fuses to prevent explosive short-circuits. Provides protection from a 3k power surge.</description>
    <designationCategory>Power</designationCategory>
    <category>Building</category>
    <thingClass>Building</thingClass>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <graphicData>
      <texPath>RT_Buildings/RTFusebox</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,1)</drawSize>
    </graphicData>
    <drawerType>MapMeshAndRealTime</drawerType>
    <repairEffect>Repair</repairEffect>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <filthLeaving>BuildingRubble</filthLeaving>
    <researchPrerequisite>RTFusebox_BasicFuses</researchPrerequisite>
    <size>(2,1)</size>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <altitudeLayer>Waist</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <building>
      <ignoreNeedsPower>True</ignoreNeedsPower>
    </building>
    <selectable>True</selectable>
    <rotatable>True</rotatable>
    <fillPercent>0.3</fillPercent>
    <pathCost>30</pathCost>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>2500</WorkToMake>
      <Flammability>1.0</Flammability>
      <Beauty>0</Beauty>
    </statBases>
	<stuffCategories>
	<li>Metallic</li>
	</stuffCategories>
	<costStuffCount>95</costStuffCount>
    <costList>
	<Electronics>6</Electronics>
	<Spare_Parts>6</Spare_Parts>
	<Mechanism>3</Mechanism>
    </costList>
    <comps>
      <li>
        <compClass>CompPowerTransmitter</compClass>
        <transmitsPower>True</transmitsPower>
      </li>
      <li Class="RTFusebox.CompProperties_RTFusebox">
        <compClass>RTFusebox.CompRTSurgeProtector</compClass>
        <surgeMitigation>3334</surgeMitigation>
        <reserveHealthPercent>0.1</reserveHealthPercent>
      </li>
    </comps>
  </ThingDef>
  
