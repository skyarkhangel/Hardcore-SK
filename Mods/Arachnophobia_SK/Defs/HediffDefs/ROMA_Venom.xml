<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>ROMA_Neurotoxin</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <label>neurotoxin buildup</label>
	<labelNoun>a neurotoxin buildup</labelNoun>
	<description>Spider neurotoxin.</description>
    <lethalSeverity>1</lethalSeverity>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <taleOnVisible>ToxicityRevealed</taleOnVisible>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>-0.32</severityPerDayNotImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.04</minSeverity>
        <vomitMtbDays>0.25</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.125</minSeverity>
        <vomitMtbDays>0.125</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.30</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.40</minSeverity>
        <vomitMtbDays>0.125</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.45</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.60</minSeverity>
        <vomitMtbDays>0.125</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.60</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.80</minSeverity>
        <vomitMtbDays>0.125</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.10</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>