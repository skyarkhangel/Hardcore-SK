<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>ROM_SpiderSilk</defName>
    <label>spider silk</label>
    <description>Fabric spun from fibers extracted from spiders. Similar to devilstrand, this is very tough, but insulates no better than cloth.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Wool</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(220,220,220)</color>
    </graphicData>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>10</MarketValue>
      <Mass>0.025</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>3</DeteriorationRate>
    </statBases>
    <stuffProps>
      <categories>
        <li>Fabric</li>
      </categories>
      <commonality>0.20</commonality>
      <color>(220,220,220)</color>
      <statOffsets>
        <ArmorRating_Blunt>0.051</ArmorRating_Blunt>
        <ArmorRating_Sharp>0.051</ArmorRating_Sharp>
        <ArmorRating_Heat>0</ArmorRating_Heat>
        <ArmorRating_Electric>0.051</ArmorRating_Electric>
      </statOffsets>
      <statFactors>
        <WorkToMake>1.5</WorkToMake>
        <ArmorRating_Blunt>1.4</ArmorRating_Blunt>
        <ArmorRating_Sharp>1.9</ArmorRating_Sharp>
        <ArmorRating_Heat>1</ArmorRating_Heat>
        <ArmorRating_Electric>3.1</ArmorRating_Electric>
      </statFactors>
    </stuffProps>
    <thingCategories>
      <li>Textiles</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
  </ThingDef>

  <!--================== Bases ==================-->

  <ThingDef Name="ResourceBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>75</stackLimit>
    <statBases>
      <Beauty>-4</Beauty>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
  </ThingDef>


</Defs>
