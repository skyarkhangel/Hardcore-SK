<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<!-- add to pawns -->
	<Operation Class="PatchOperationReplace">
	  <xpath>*/PawnColumnDef[defName = "AllowedArea"]/workerClass</xpath>
	  <value>
		<workerClass>AnotherTweaks.PawnColumnWorker_AllowedArea</workerClass>
	  </value>
	</Operation>
	
	<!-- add to animals, if animal tab not active -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Animal Tab</li>
		</mods>
		<nomatch Class="PatchOperationReplace">
			<xpath>*/PawnColumnDef[defName = "AllowedAreaWide"]/workerClass</xpath>
			<value>
				<workerClass>AnotherTweaks.PawnColumnWorker_AllowedArea</workerClass>
			</value>
		</nomatch>
	</Operation>
	
</Patch>