<Defs>
	<!-- Painting Easel (Production) -->
	<ThingDef ParentName="BenchBaseNoShadows">
		<defName>RBPEaselPainting</defName>
		<label>easel</label>
		<description>An upright easel, used to create paintings.</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>Things/Buildings/RBPEasel/RBEasel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3.2,3.2)</drawSize>
			<shadowData>
				<volume>(1, 1, 0.5)</volume>
				<offset>(0, 0, 0)</offset>
			</shadowData>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<rotatable>false</rotatable>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>30</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>500</WorkToBuild>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Cleanliness>-5</Cleanliness>
		</statBases>
		<size>(3,3)</size>
		<designationCategory>Production</designationCategory>
		<uiOrder>3000</uiOrder>
		<passability>PassThroughOnly</passability>
		<pathCost>100</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<paintable>true</paintable>
		</building>
		<comps>
			<li Class="CompProperties_Styleable"/>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>RBPArtCabinet</li>
				</linkableFacilities>
			</li>
		</comps>
		<designationHotKey>Misc2</designationHotKey>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
		<uiIconScale>1.3</uiIconScale>
		<researchPrerequisites>
		  <li>Art_A1</li>
		</researchPrerequisites>
	</ThingDef>
	<!-- Paintings -->
	<ThingDef ParentName="SK_BuildingBase" Name="PaintingBase" Abstract="True">
		<thingClass>Building_Art</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<useHitPoints>true</useHitPoints>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsArt</li>
		</thingCategories>
		<statBases>
			<Flammability>1.0</Flammability>
			<SellPriceFactor>1.05</SellPriceFactor>
			<MeditationFocusStrength>0.0</MeditationFocusStrength>
			<Beauty>30</Beauty>
			<Bulk>4</Bulk>
			<Mass>1</Mass>
			<JoyGainFactor>0.85</JoyGainFactor>
		</statBases>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtSculpture</nameMaker>
				<descriptionMaker>ArtDescription_Painting</descriptionMaker>
				<canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
			</li>
			<li Class="CompProperties_MeditationFocus">
				<statDef>MeditationFocusStrength</statDef>
				<focusTypes>
					<li>Artistic</li>
				</focusTypes>
				<offsets>
					<li Class="FocusStrengthOffset_Quality">
						<curve>
							<points>
								<li>(0,0.12)</li>
								<!-- awful -->
								<li>(1,0.16)</li>
								<!-- poor -->
								<li>(2,0.20)</li>
								<!-- normal -->
								<li>(3,0.22)</li>
								<!-- good -->
								<li>(4,0.24)</li>
								<!-- excellent -->
								<li>(5,0.26)</li>
								<!-- masterwork -->
								<li>(6,0.28)</li>
								<!-- legendary -->
							</points>
						</curve>
					</li>
					<li Class="FocusStrengthOffset_BuildingDefsWithQuality">
						<defs>
							<li>SculptureSmall</li>
							<li>SculptureLarge</li>
							<li>SculptureGrand</li>
						</defs>
						<radius>5.5</radius>
						<maxBuildings>10</maxBuildings>
						<focusPerQuality>
							<points>
								<li>(0,0.0)</li>
								<!-- awful -->
								<li>(1,0.0)</li>
								<!-- poor -->
								<li>(2,0.01)</li>
								<!-- normal -->
								<li>(3,0.01)</li>
								<!-- good -->
								<li>(4,0.01)</li>
								<!-- excellent -->
								<li>(5,0.02)</li>
								<!-- masterwork -->
								<li>(6,0.02)</li>
								<!-- legendary -->
							</points>
						</focusPerQuality>
						<explanationKey>MeditationFocusPerSculpture</explanationKey>
						<explanationKeyAbstract>MeditationFocusPerSculptureAbstract</explanationKeyAbstract>
					</li>
				</offsets>
			</li>
			<li Class="CompProperties_Styleable"/>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_MeditationOffsetBuildingsNear</li>
		</placeWorkers>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
		<tradeTags>
			<li>Art</li>
		</tradeTags>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Artistic</workSkill>
			<unfinishedThingDef>RBPUnfinishedPainting</unfinishedThingDef>
			<effectWorking>Paint</effectWorking>
			<soundWorking>RBPPainting_Work</soundWorking>
			<recipeUsers>
				<li>RBPEaselPainting</li>
			</recipeUsers>
			<defaultIngredientFilter>
				<categories>
				<li>Root</li>
				</categories>
				<disallowedThingDefs>
				<li>Gold</li>
				<li>Silver</li>
				<li>Plasteel</li>
				<li>Jade</li>
				<li>Uranium</li>
				</disallowedThingDefs>
			</defaultIngredientFilter>
		</recipeMaker>
		<ideoBuildingNamerBase MayRequire="Ludeon.RimWorld.Ideology">NamerIdeoSculpture</ideoBuildingNamerBase>
		<ritualFocus>
			<spectateDistance>2</spectateDistance>
			<allowedSpectateSides>Down</allowedSpectateSides>
		</ritualFocus>
		<building>
			<paintable>true</paintable>
			<joyKind>Telescope</joyKind>
		</building>
		<researchPrerequisites>
		  <li>Art_B1</li>
		</researchPrerequisites>
	</ThingDef>
