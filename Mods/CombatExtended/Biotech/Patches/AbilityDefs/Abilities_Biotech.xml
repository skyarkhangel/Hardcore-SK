<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- ========== Piercing Spine ========== -->

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/AbilityDef[defName="PiercingSpine"]/verbProperties/range</xpath>
    <value>
      <range>5.9</range>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="PiercingSpine"]/projectile</xpath>
    <value>
      <projectile Class="CombatExtended.ProjectilePropertiesCE">
        <damageDef>RangedStab</damageDef>
        <speed>30</speed>      
        <damageAmountBase>20</damageAmountBase>
        <armorPenetrationSharp>6</armorPenetrationSharp>
        <armorPenetrationBlunt>8</armorPenetrationBlunt>
      </projectile>
    </value>
  </Operation>

  <!-- ========== Acid Spray ========== -->

  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ThingDef[defName="Proj_Acid"]/projectile/stoppingPower</xpath>
  </Operation>

  <!-- ========== Longjump ========== -->

  <Operation Class="PatchOperationReplace">
      <xpath>Defs/AbilityDef[defName="Longjump"]/verbProperties/range</xpath>
      <value>
          <range>24.9</range>
      </value>
  </Operation>

  <!-- ========== Mech Longjump ========== -->

  <Operation Class="PatchOperationReplace">
      <xpath>Defs/AbilityDef[defName="LongjumpMech"]/verbProperties/range</xpath>
      <value>
          <range>12.9</range>
      </value>
  </Operation>

  <!-- ========== Mech Longjump Launcher ========== -->

  <Operation Class="PatchOperationReplace">
      <xpath>Defs/AbilityDef[defName="LongjumpMechLauncher"]/verbProperties/range</xpath>
      <value>
          <range>18.9</range>
      </value>
  </Operation>

</Patch>
