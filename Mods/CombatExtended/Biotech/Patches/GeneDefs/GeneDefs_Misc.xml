<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/GeneDef[defName="Nearsighted"]/statFactors</xpath>
    <value>
      <statFactors>
        <ShootingAccuracyPawn>0.75</ShootingAccuracyPawn>
        <AimingAccuracy>0.5</AimingAccuracy>
      </statFactors>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/GeneDef[defName="DarkVision"]</xpath>
    <value>
      <statOffsets>
        <NightVisionEfficiency>0.8</NightVisionEfficiency>
      </statOffsets>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/GeneDef[defName="Unstoppable"]/statFactors</xpath>
    <value>
        <Suppressability>0</Suppressability>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/GeneDef[defName="MeleeDamage_Weak"]/statFactors</xpath>
    <value>
      <statFactors>
        <MeleeDamageFactor>0.75</MeleeDamageFactor>
      </statFactors>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/GeneDef[defName="MeleeDamage_Strong"]/statFactors</xpath>
    <value>
      <statFactors>
        <MeleeDamageFactor>1.25</MeleeDamageFactor>
      </statFactors>
    </value>
  </Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/GeneDef[defName="FireResistant"]/damageFactors</xpath>
		<value>
			<PrometheumFlame>0.25</PrometheumFlame>
			<Flame_Secondary>0.25</Flame_Secondary>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/GeneDef[defName="FireWeakness"]/damageFactors</xpath>
		<value>
			<PrometheumFlame>4</PrometheumFlame>
			<Flame_Secondary>4</Flame_Secondary>
		</value>
	</Operation>

</Patch>