<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Apparello 2</modName>
			</li>
			<!-- ========== XCOM ========== -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_XcomOne"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>5</CarryBulk>
				</value>
			</li>
			<!-- ========== Padded vest ========== -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Sheet"]/statBases</xpath>
				<value>
					<Bulk>10</Bulk>
					<WornBulk>5</WornBulk>
				</value>
			</li>
			<!-- ========== Ammo belt ========== -->
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "Apparello_Ammobelt"]/equippedStatOffsets/AimingDelayFactor</xpath>
				<value>
					<CarryBulk>5</CarryBulk>
					<ReloadSpeed>0.05</ReloadSpeed>
				</value>
			</li>
			<!-- ========== Trader coat ========== -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Trypophobia"]/statBases</xpath>
				<value>
					<Bulk>15</Bulk>
					<WornBulk>3</WornBulk>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Trypophobia"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>50</CarryBulk>
					<ReloadSpeed>0.05</ReloadSpeed>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Trypophobia"]/apparel/layers</xpath>
				<value>
					<li>Belt</li>
				</value>
			</li>
			<!-- ========== Tribal shield ========== -->
			<li Class="PatchOperationAttributeSet">
				<xpath>*/ThingDef[defName = "Apparello_Tribalshield"]</xpath>
				<attribute>ParentName</attribute>
				<value>ShieldBase</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "Apparello_Tribalshield"]/apparel</xpath>
				<value>
					<apparel>
						<tags>
							<li>TribalShield</li>
						</tags>
					</apparel>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Tribalshield"]/statBases</xpath>
				<value>
					<Bulk>8</Bulk>
					<WornBulk>5</WornBulk>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Tribalshield"]</xpath>
				<value>
					<equippedStatOffsets>
						<ReloadSpeed>-0.05</ReloadSpeed>
						<MeleeHitChance>-0.05</MeleeHitChance>
						<ShootingAccuracy>-0.05</ShootingAccuracy>
						<AimingAccuracy>-0.05</AimingAccuracy>
						<Suppressability>-0.25</Suppressability>
						<MeleeCritChance>-0.05</MeleeCritChance>
						<MeleeParryChance>1.0</MeleeParryChance>
					</equippedStatOffsets>
				</value>
			</li>
			<li Class="PatchOperationRemove">
				<xpath>*/ThingDef[defName = "Apparello_Tribalshield"]/generateCommonality</xpath>
			</li>
			<li Class="PatchOperationAddModExtension">
				<xpath>*/ThingDef[defName = "Apparello_Tribalshield"]</xpath>
				<value>
					<li Class="CombatExtended.ShieldDefExtension">
					  <shieldCoverage>
					    <li>Hands</li>
					    <li>Arms</li>
					    <li>Shoulders</li>
					    <li>Torso</li>
					    <li>Neck</li>
					  </shieldCoverage>
					</li>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>

