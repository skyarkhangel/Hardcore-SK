<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Apparello 2</modName>
			</li>
			<!-- ========== Alloy vest ========== -->
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "Apparello_Gspot"]/statBases/Mass</xpath>
				<value>
					<Mass>9</Mass>
					<Bulk>5</Bulk>
					<WornBulk>1</WornBulk>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "Apparello_Gspot"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.8</ArmorRating_Sharp>
				</value>
			</li>
			<!-- ========== Medium power armor ========== -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Gshell"]/statBases</xpath>
				<value>
					<Bulk>20</Bulk>
					<WornBulk>5</WornBulk>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "Apparello_Gshell"]/equippedStatOffsets/MoveSpeed</xpath>
				<value>
					<CarryWeight>10</CarryWeight>
				</value>
			</li>
			<!-- ========== XCOM ========== -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Standissue"]/equippedStatOffsets</xpath>
				<value>
					<CarryBulk>5</CarryBulk>
				</value>
			</li>
			<!-- ========== Chestplate ========== -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Syndicatetello"]/statBases</xpath>
				<value>
					<Bulk>20</Bulk>
					<WornBulk>5</WornBulk>
				</value>
			</li>
			<li Class="PatchOperationRemove">
				<xpath>*/ThingDef[defName = "Apparello_Syndicatetello"]/equippedStatOffsets</xpath>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "Apparello_Syndicatetello"]/statBases/EnergyShieldRechargeRate</xpath>
				<value>
					<EnergyShieldRechargeRate>0.235</EnergyShieldRechargeRate>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "Apparello_Syndicatetello"]/statBases/EnergyShieldEnergyMax</xpath>
				<value>
					<EnergyShieldEnergyMax>2</EnergyShieldEnergyMax>
				</value>
			</li>
			<!-- ========== Joywirer's brocade ========== -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Medicade"]/apparel/layers</xpath>
				<value>
					<li>Belt</li>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>

