<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Add CompStabilize to all injury and missing part hediffs -->

	<Operation Class="PatchOperationAdd">
		<xpath>*/HediffDef[defName = "MissingBodyPart"]/comps</xpath>
		<value>
			<li Class="CombatExtended.HediffCompProperties_Stabilize" />
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>*/HediffDef[@Name="InjuryBase"]</xpath>
		<value>
			<comps>
				<li Class="CombatExtended.HediffCompProperties_Stabilize" />
			</comps>
		</value>
	</Operation>

	<!-- Missing body part -->

	<Operation Class="PatchOperationReplace">
		<xpath>*/HediffDef[defName="MissingBodyPart"]/injuryProps/bleedRate</xpath>
		<value>
			<bleedRate>0.08</bleedRate>
  	</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>*/HediffDef[defName="MissingBodyPart"]/injuryProps/painPerSeverity</xpath>
