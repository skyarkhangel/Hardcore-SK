  	</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>*/HediffDef[defName="Burn"]/comps/li[@Class = "HediffCompProperties_GetsOld"]</xpath>
		<value>
			<becomeOldChance>1.5</becomeOldChance>
  	</value>
	</Operation>

	<Operation Class="PatchOperationAttributeSet">
  	<xpath>*/HediffDef[defName="Burn"]</xpath>
