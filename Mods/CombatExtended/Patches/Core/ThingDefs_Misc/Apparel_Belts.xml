		<value>
      <EnergyShieldRechargeRate>0.195</EnergyShieldRechargeRate>
    </value>
  </Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName="Apparel_ShieldBelt"]/statBases/EnergyShieldEnergyMax</xpath>
		<value>
      <EnergyShieldEnergyMax>1.65</EnergyShieldEnergyMax>
    </value>
  </Operation>

	<!-- ========== Smokepop belt ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName="Apparel_SmokepopBelt"]/statBases</xpath>
		<value>
      <Bulk>3</Bulk>
      <WornBulk>1</WornBulk>
    </value>
  </Operation>

