<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- ========== Modify bleed rates ========== -->

  <Operation Class="PatchOperationReplace">
    <xpath>*/BodyPartDef[defName="Heart"]/bleedRate</xpath>
    <value>
      <bleedRate>12.5</bleedRate>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>*/BodyPartDef[defName="Lung"]</xpath>
    <value>
      <bleedRate>7.25</bleedRate>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>*/BodyPartDef[defName="Kidney"]/hitPoints</xpath>
    <value>
      <hitPoints>15</hitPoints>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>*/BodyPartDef[defName="Kidney"]</xpath>
    <value>
      <bleedRate>4.5</bleedRate>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>*/BodyPartDef[defName="Liver"]</xpath>
    <value>
      <bleedRate>9.75</bleedRate>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>*/BodyPartDef[defName="Stomach"]</xpath>
    <value>
      <bleedRate>3.0</bleedRate>
    </value>
  </Operation>

  <!-- ========== Modify old injury chance ========== -->

  <Operation Class="PatchOperationReplace">
    <xpath>*/BodyPartDef[defName="Heart" or "Lung" or "Kidney" or "Liver" or "Stomach"]/permanentInjuryChanceFactor</xpath>
    <value>
      <permanentInjuryChanceFactor>0.5</permanentInjuryChanceFactor>
    </value>
  </Operation>

</Patch>

