<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Vanilla-Friendly Weapon Expansion</modName>
			</li>
			<!-- ========== Sling ========== -->
			<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
				<defName>Weapon_Sling</defName>
				<statBases>
					<Mass>0.6</Mass>
					<RangedWeapon_Cooldown>0.3</RangedWeapon_Cooldown>
					<SightsEfficiency>0.3</SightsEfficiency>
					<ShotSpread>1</ShotSpread>
					<SwayFactor>1</SwayFactor>
					<Bulk>2.5</Bulk>
				</statBases>
				<Properties>
					<verbClass>CombatExtended.Verb_ShootCE</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<projectileDef>Projectile_SlingBullet_Stone</projectileDef>
					<warmupTime>0.9</warmupTime>
					<range>31</range>
					<soundCast>Interact_BeatFire</soundCast>
				</Properties>
				<AmmoUser>
					<ammoSet>AmmoSet_SlingBullet</ammoSet>
				</AmmoUser>
				<FireModes />
				<weaponTags>
					<li>CE_Sling</li>
				</weaponTags>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName="Weapon_Sling"]/costStuffCount</xpath>
				<value>
					<costStuffCount>10</costStuffCount> <!-- Strictly for consistency -->
				</value>
			</li>
		</operations>
	</Operation>

