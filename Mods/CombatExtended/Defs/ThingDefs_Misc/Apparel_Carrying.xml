<Defs>

	<ThingDef Name="ApparelCarryGearBase" ParentName="ApparelBase" Abstract="True">
		<techLevel>Industrial</techLevel>
		<category>Item</category>
		<thingClass>Apparel</thingClass>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>2</DeteriorationRate>
			<SellPriceFactor>0.5</SellPriceFactor>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<burnableByRecipe>true</burnableByRecipe>
		<tickerType>Never</tickerType>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
		<apparel>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<thingCategories>
			<li>Loadout</li>
		</thingCategories>
		<generateAllowChance>0.8</generateAllowChance>
	</ThingDef>

	<ThingDef ParentName="ApparelCarryGearBase">
		<defName>CE_Apparel_TacVest</defName>
		<label>tactical vest</label>
		<description>A loadbearing vest with a number of pouches to store magazines and other equipment.\n\nSpeeds up reloading but is quite bulky to wear.</description>
		<graphicData>
			<texPath>Things/Apparel/TacRigging/CE_TacRigging</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<possessionCount>1</possessionCount>
		<recipeMaker>
			<researchPrerequisites>
				<li>ComplexClothing</li>
				<li>FlakArmor</li>
			</researchPrerequisites>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToMake>8000</WorkToMake>
			<Mass>2</Mass>
			<Bulk>10</Bulk>
			<WornBulk>5</WornBulk>
			<EquipDelay>3.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<CarryBulk>30</CarryBulk>
			<ReloadSpeed>0.1</ReloadSpeed>
		</equippedStatOffsets>
		<costStuffCount>60</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<apparel>
			<bodyPartGroups>
				<li>Shoulders</li>
			</bodyPartGroups>
			<layers>
				<li>Webbing</li>
			</layers>
			<tags>
				<li>IndustrialMilitaryBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<wornGraphicPath>Things/Apparel/TacRigging/CE_TacRigging</wornGraphicPath>
		</apparel>
		<tradeTags>
			<li>Clothing</li>
		</tradeTags>
	</ThingDef>

