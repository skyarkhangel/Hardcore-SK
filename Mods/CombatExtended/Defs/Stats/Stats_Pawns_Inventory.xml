<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <StatDef>
    <defName>CarryWeight</defName>
    <label>carry weight</label>
    <description>The amount of weight this creature can carry in pockets, bags or otherwise attached to its body.</description>
    <category>BasicsPawn</category>
    <defaultBaseValue>40</defaultBaseValue>
    <toStringStyle>FloatMaxOne</toStringStyle>
    <formatString>{0} kg</formatString>
    <parts>
      <li Class="StatPart_Bodysize" />
      <li Class="StatPart_Quality">
        <factorAwful>0.8</factorAwful>
        <factorPoor>0.9</factorPoor>
        <factorNormal>1</factorNormal>
        <factorGood>1</factorGood>
        <factorExcellent>1.05</factorExcellent>
        <factorMasterwork>1.15</factorMasterwork>
        <factorLegendary>1.25</factorLegendary>
      </li>      
    </parts>
    <capacityFactors>
      <li>
        <capacity>Moving</capacity>
        <weight>1</weight>
      </li>
    </capacityFactors>
    <displayPriorityInCategory>10</displayPriorityInCategory>
  </StatDef>

  <StatDef>
    <defName>CarryBulk</defName>
    <label>bulk capacity</label>
    <description>The volume of items this creature can carry in pockets, bags or otherwise attached to its body.</description>
    <category>BasicsPawn</category>
    <defaultBaseValue>20</defaultBaseValue>
    <toStringStyle>FloatMaxOne</toStringStyle>
    <displayPriorityInCategory>10</displayPriorityInCategory>
    <parts>
      <li Class="StatPart_Bodysize" />
      <li Class="StatPart_Quality">
        <factorAwful>0.8</factorAwful>
        <factorPoor>0.9</factorPoor>
        <factorNormal>1</factorNormal>
        <factorGood>1</factorGood>
        <factorExcellent>1.10</factorExcellent>
        <factorMasterwork>1.30</factorMasterwork>
        <factorLegendary>1.45</factorLegendary>
      </li>      
    </parts>
  </StatDef>


</Defs>
