			<texPath>ThirdParty/Warhammer/Ammo/Lasgun</texPath>
			<graphicClass>CombatExtended.Graphic_StackCountRanged</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.69</MarketValue>
		</statBases>
		<ammoClass>Laser</ammoClass>
	</ThingDef>

