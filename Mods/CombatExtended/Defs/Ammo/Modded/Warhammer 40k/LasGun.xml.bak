		</tradeTags>
		<thingCategories>
			<li>AmmoLasgunPowerPack</li>
		</thingCategories>
		<stackLimit>1000</stackLimit>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="LasgunPowerPackBase">
		<defName>Ammo_LasgunPowerPack</defName>
		<label>lasgun power pack</label>
