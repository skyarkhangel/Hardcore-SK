	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base83mmSMAW" ParentName="BaseExplosiveBullet" Abstract="true">
		<graphicData>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
