<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingDef Name="ZF_ChunkRockBase" ParentName="ChunkRockBase"  Abstract="True">
    <butcherProducts>
    </butcherProducts>
  </ThingDef>

  <ThingDef Name="ZF_StoneBlocksBase" ParentName="StoneBlocksBase"  Abstract="True">
  </ThingDef>


  <ThingDef ParentName="ZF_ChunkRockBase">
    <defName>ChunkClaystone</defName>
    <label>claystone chunk</label>
    <graphicData>
      <color>(228, 188, 147)</color>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Mass>8</Mass>
    </statBases>
    <soundDrop>ChunkRock_Drop</soundDrop>
    <butcherProducts Inherit="False">
      <ZF_BlocksClay>30</ZF_BlocksClay>  
    </butcherProducts>
  </ThingDef>

  <ThingDef ParentName="ZF_ChunkRockBase">
    <defName>ZF_ChunkBasalt</defName>
    <label>basalt chunk</label>
    <graphicData>
      <color>(50,50,50)</color>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Mass>10</Mass>
    </statBases>
    <soundDrop>ChunkRock_Drop</soundDrop>
    <butcherProducts>
      <ZF_BlocksBasalt>20</ZF_BlocksBasalt>  
    </butcherProducts>
  </ThingDef>
  
  <ThingDef ParentName="ZF_StoneBlocksBase">
    <defName>ZF_BlocksBasalt</defName>
    <label>basalt blocks</label>
    <description>Blocks of solid basalt. Basalt is a tough igenous rock but not very pretty.</description>
    <graphicData>
      <color>(50,50,50)</color>
    </graphicData>
    <statBases>
      <MarketValue>1.8</MarketValue>
      <Mass>1.2</Mass>
    </statBases>
    <stuffProps>
      <color>(50,50,50)</color>
      <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <stuffAdjective>basalt</stuffAdjective>
      <statFactors>
        <Beauty>0.9</Beauty>  
        <MarketValue>0.4</MarketValue>
        <MaxHitPoints>1.6</MaxHitPoints>
        <WorkToBuild>5.5</WorkToBuild>
        <WorkToMake>4.5</WorkToMake>
        <Mass>1.25</Mass>
      </statFactors>
    </stuffProps>
 </ThingDef>

  <ThingDef ParentName="ZF_StoneBlocksBase">
    <defName>ZF_BlocksClay</defName>
    <label>clay blocks</label>
    <description>Blocks of clay. Clay is a fine-grained sedimentary rock. It is abundant and easy to build with, but it quite soft compared to stone.</description>
    <graphicData>
      <color>(228, 188, 147)</color>
    </graphicData>
    <statBases>
      <MarketValue>0.8</MarketValue>
      <Mass>1.0</Mass>
    </statBases>
    <stuffProps>
      <color>(228, 188, 147)</color>
      <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <stuffAdjective>clay</stuffAdjective>
      <statFactors>
        <Beauty>1.2</Beauty>  
        <MarketValue>0.3</MarketValue>
        <MaxHitPoints>0.8</MaxHitPoints>
        <WorkToBuild>2</WorkToBuild>
        <WorkToMake>2</WorkToMake>
        <Mass>1.0</Mass>
      </statFactors>
    </stuffProps>
 </ThingDef>


</Defs>