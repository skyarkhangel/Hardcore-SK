<Defs>

        <ThingDef ParentName="ResourceBase">
                <defName>ObsidianShard</defName>
                <label>Obsidian Shard</label>
                <description>A chunk of obsidian small enough to carry. Valued by the tribal inhabitants of this rimworld for making knifes, handaxes, and arrowheads.</description> 
                <graphicData>
                        <texPath>Things/Item/Resource/ObsidianShard</texPath>
                        <graphicClass>Graphic_StackCount</graphicClass>
               </graphicData>
                <soundDrop>ChunkRock_Drop</soundDrop>
                <useHitPoints>false</useHitPoints>
                <statBases>
                        <MarketValue>5</MarketValue>
                        <DeteriorationRate>0</DeteriorationRate>
                        <Flammability>0</Flammability>
                        <Mass>1</Mass>
                        <Beauty>1</Beauty>
						<SharpDamageMultiplier>1.1</SharpDamageMultiplier>
                </statBases>
                <stackLimit>150</stackLimit>
                <thingCategories>
                        <li>SharpStony</li>
                </thingCategories>
                <techLevel>Neolithic</techLevel>
                <stuffProps>
                        <stuffAdjective>obsidian</stuffAdjective>
                        <statFactors>
                                <MaxHitPoints>0.2</MaxHitPoints>
                                <MarketValue>0.8</MarketValue>
                                <Flammability>0</Flammability>
                                <Beauty>2</Beauty>
                                <WorkToMake>1.5</WorkToMake>
                                <WorkToBuild>2</WorkToBuild>
                                <DoorOpenSpeed>0.5</DoorOpenSpeed>
                                <BedRestEffectiveness>0.8</BedRestEffectiveness>
                                <MeleeWeapon_CooldownMultiplier>1.0</MeleeWeapon_CooldownMultiplier>
                                <MeleePenetrationFactor>1.5</MeleePenetrationFactor>
                                <Mass>1.3</Mass>
                        </statFactors>
                  		<statOffsets>
                        	<WorkToMake>150</WorkToMake>
                        	<WorkToBuild>150</WorkToBuild>
                        	<Beauty>2</Beauty>
                  		</statOffsets>
                        <categories>
                                <li>SharpStony</li>
                        </categories>
                        <commonality>0.05</commonality>
                </stuffProps>
        </ThingDef>


