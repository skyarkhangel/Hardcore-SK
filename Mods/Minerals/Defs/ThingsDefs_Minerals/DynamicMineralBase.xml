<?xml version="1.0" encoding="UTF-8" ?>


<Defs>

	<ThingDef Name="DynamicMineralBase" Parent="StaticMineralBase" Class="Minerals.ThingDef_DynamicMineral" Abstract="True">
		<thingClass>Minerals.DynamicMineral</thingClass>
		<category>Building</category>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<altitudeLayer>LowPlant</altitudeLayer>
		<castEdgeShadows>false</castEdgeShadows>
		<fillPercent>0.05</fillPercent>
		<coversFloor>false</coversFloor>
		<pathCost>60</pathCost>
		<mineable>true</mineable>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>RockRubble</filthLeaving>
		<drawerType>MapMeshOnly</drawerType>
    	<tickerType>Long</tickerType>

        <growDays>100</growDays>
        <minReproductionSize>0.8</minReproductionSize>
        <reproduceProp>0.001</reproduceProp>
        <deathProb>0.001</deathProb>

        <!-- Chance of spawning de novo each tick -->
        <spawnProb>0.0001</spawnProb>

         <!-- Growth rate modifiers -->

        <tempGrowthRateModifer>
        	<active>true</active>
        	<aboveMaxDecayRate>1</aboveMaxDecayRate> 
        	<maxStable>1000</maxStable> 
        	<maxGrow>100</maxGrow> 
        	<idealGrow>50</idealGrow>  
        	<minGrow>0</minGrow>
        	<minStable>-99999</minStable>
        	<belowMinDecayRate>0</belowMinDecayRate>
        </tempGrowthRateModifer>

	</ThingDef>
    
</Defs>