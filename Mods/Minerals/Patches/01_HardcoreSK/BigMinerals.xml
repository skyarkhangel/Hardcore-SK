<?xml version="1.0" encoding="UTF-8"?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Core SK</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="BigGlowstoneCrystal"]/building</xpath>
      <value>
        <building>
          <isInert>true</isInert>
          <canBuildNonEdificesUnder>false</canBuildNonEdificesUnder>
          <isNaturalRock>true</isNaturalRock>
          <isResourceRock>true</isResourceRock>
          <mineableThing>Glowstone</mineableThing>
          <mineableDropChance>1.0</mineableDropChance>
          <mineableYield>100</mineableYield>
          <mineableNonMinedEfficiency>0.8</mineableNonMinedEfficiency>
          <claimable>false</claimable>
          <deconstructible>false</deconstructible>
          <isEdifice>true</isEdifice>
        </building>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Core SK</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="BigGlowstoneCrystalTrophy"]/costList</xpath>
      <value>
        <costList>
          <Glowstone>100</Glowstone>
        </costList>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Core SK</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="BigColdstoneCrystal"]/building</xpath>
      <value>
        <building>
          <isInert>true</isInert>
          <canBuildNonEdificesUnder>false</canBuildNonEdificesUnder>
          <isNaturalRock>true</isNaturalRock>
          <isResourceRock>true</isResourceRock>
          <mineableThing>Coldstone</mineableThing>
          <mineableDropChance>1.0</mineableDropChance>
          <mineableYield>100</mineableYield>
          <mineableNonMinedEfficiency>0.8</mineableNonMinedEfficiency>
          <claimable>false</claimable>
          <deconstructible>false</deconstructible>
          <isEdifice>true</isEdifice>
        </building>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Core SK</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="BigColdstoneCrystalTrophy"]/costList</xpath>
      <value>
        <costList>
          <Coldstone>100</Coldstone>
        </costList>
      </value>
    </match>
  </Operation>

</Patch>
