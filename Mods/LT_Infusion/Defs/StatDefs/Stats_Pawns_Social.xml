<Defs>
    <StatDef>
        <defName>RecruitPrisonerChance</defName>
        <label>Recruit prisoner chance</label>
        <description>Base chance this person will recruit a prisoner.</description>
        <category>PawnSocial</category>
        <defaultBaseValue>1</defaultBaseValue>
        <minValue>0.01</minValue>
        <toStringStyle>PercentTwo</toStringStyle>
        <skillNeedFactors>
            <li Class="SkillNeed_BaseBonus">
                <skill>Social</skill>
                <baseFactor>0.02</baseFactor>
                <bonusFactor>0.04</bonusFactor>
            </li>
        </skillNeedFactors>
        <capacityFactors>
            <li>
                <capacity>Talking</capacity>
                <weight>0.9</weight>
            </li>
        </capacityFactors>
        <parts>
            <li Class="Infusion.StatPart_InfusionWorker">
                <notifier>RecruitPrisonerChance</notifier>
            </li>
        </parts>
    </StatDef>

