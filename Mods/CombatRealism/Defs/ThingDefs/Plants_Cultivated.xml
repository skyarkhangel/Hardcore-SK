        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>5</growDays>
	  <fertilityMin>0.2</fertilityMin>
	  <fertilitySensitivity>0.5</fertilitySensitivity>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.0</max>
      </visualSizeRange>
    </plant>
