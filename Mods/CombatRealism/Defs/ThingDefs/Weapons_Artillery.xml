<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <!-- gun def for artillery, never used as an independent thing-->
  <ThingDef Name="BaseArtilleryWeapon" Abstract="True">
    <category>Item</category>
    <thingClass>ThingWithComps</thingClass>
    <label>artillery error</label>
    <equipmentType>Primary</equipmentType>
    <tickerType>Never</tickerType>
    <techLevel>Midworld</techLevel>
    <comps>
      <li>
        <compClass>CompEquippable</compClass>
      </li>
      <li Class="Combat_Realism.CompProperties_Charges">
		<charges>
			<li>(29,85)</li>
			<li>(72,300)</li>
			<li>(92,660)</li>
		</charges>
      </li>
    </comps>
  </ThingDef>




  <!-- ================== Incendiary mortar ================== -->

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_MortarIncendiary</defName>
    <label>incendiary mortar shell</label>
    <graphicData>
      <texPath>Things/Projectile/ShellIncendiary</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Flame</damageDef>
      <damageAmountBase>50</damageAmountBase>
      <speed>100</speed>
      <explosionRadius>4.5</explosionRadius>
      <preExplosionSpawnThingDef>Puddle_Fuel</preExplosionSpawnThingDef>
      <explosionSpawnChance>0.5</explosionSpawnChance>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>ArtilleryHitThickRoof</soundHitThickRoof>
      <soundExplode>MortarIncendiary_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseArtilleryWeapon">
    <defName>Artillery_MortarIncendiary</defName>
    <label>incendiary mortar</label>
    <description>Incendiary mortar launcher. Lobs fire-starting bombs over walls. Very inaccurate but long-ranged.</description>
    <techLevel>Spacer</techLevel>
    <destroyOnDrop>True</destroyOnDrop>
    <menuHidden>True</menuHidden>
    <tradeability>Never</tradeability>
    <statBases>
      <MarketValue>1500</MarketValue>
	  <AimEfficiency>0.5</AimEfficiency>
      <RangedWeapon_Cooldown>10</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>Artillery</li>
      <li>Artillery_BaseDestroyer</li>
    </weaponTags>
    <verbs>
      <li Class="Combat_Realism.VerbPropertiesCR">
        <verbClass>Combat_Realism.Verb_ShootMortarCR</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Bullet_MortarIncendiary</projectileDef>
        <forcedMissRadius>10</forcedMissRadius>
        <ai_IsIncendiary>true</ai_IsIncendiary>
        <warmupTicks>500</warmupTicks>
        <minRange>32</minRange>
        <range>700</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>Mortar_LaunchA</soundCast>
        <muzzleFlashScale>16</muzzleFlashScale>
        <indirectFirePenalty>0.2</indirectFirePenalty>
      </li>
    </verbs>
  </ThingDef>


