<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

  <RecipeDef Name="AmmoRecipeNeolithicBase" Abstract="true">
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>2000</workAmount>
    <workSkill>Crafting</workSkill>
    <targetCountAdjustment>500</targetCountAdjustment>
	<recipeUsers>
	  <li>ElectricSmithy</li>
	  <li>FueledSmithy</li>
	</recipeUsers>
  </RecipeDef>
  
  <!-- ==================== Arrows ========================== -->

  <RecipeDef ParentName="AmmoRecipeNeolithicBase">
    <defName>MakeArrows</defName>
    <label>make arrows x10</label>
    <description>Craft 10 arrows.</description>
    <jobString>Making arrows.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodLog</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Arrow>10</Ammo_Arrow>
    </products>
	<recipeUsers>
      <li>ElectricSmithy</li>
      <li>FueledSmithy</li>
      <li>CraftingSpot</li>
	</recipeUsers>
  </RecipeDef>
  
  <!-- ==================== Great arrows ========================== -->

  <RecipeDef ParentName="AmmoRecipeNeolithicBase">
    <defName>MakeGreatArrows</defName>
    <label>make great arrows x10</label>
    <description>Craft 10 great arrows.</description>
    <jobString>Making great arrows.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodLog</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_GreatArrow>10</Ammo_GreatArrow>
    </products>
  </RecipeDef>

</RecipeDefs>