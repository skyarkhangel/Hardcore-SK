  <RecipeDef ParentName="GrenadeRecipeBase">
    <defName>MakeArtilleryShell</defName>
    <label>make 81mm HE mortar shells x5</label>
    <description>Craft 5 81mm HE mortar shells.</description>
    <jobString>Making 81mm HE mortar shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>22</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>FSX</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Components</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>FSX</li>
        <li>Components</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ArtilleryShell>5</ArtilleryShell>
    </products>
  </RecipeDef>

