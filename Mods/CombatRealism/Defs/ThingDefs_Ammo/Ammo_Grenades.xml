<Defs>

  <!-- ==================== 30x29mm Grenades ========================== -->

  <ThingDef Class="Combat_Realism.AmmoDef" Name="30x29mmGrenadeBase" ParentName="AmmoBase" Abstract="True">
    <description>Relatively small, low velocity grenade for use in grenade launchers.</description>
    <statBases>
	  <Mass>0.2</Mass>
	  <Bulk>0.3</Bulk>
    </statBases>
	<tradeTags>
	  <li>CR_AutoEnableTrade</li>
	  <li>CR_AutoEnableCrafting</li>
	</tradeTags>
    <thingCategories>
      <li>Ammo30x29mmGrenades</li>
    </thingCategories>
    <stackLimit>75</stackLimit>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
		<li Class="CompProperties_Explosive">
        <explosiveRadius>1.5</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.333</startWickHitPointsPercent>
        <wickTicks>
          <min>10</min>
          <max>30</max>
        </wickTicks>
      </li>
    </comps>
  </ThingDef>

