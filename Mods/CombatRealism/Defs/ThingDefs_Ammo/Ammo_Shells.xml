  <!-- ==================== 81mm mortar shells ========================== -->

  <ThingDef Class="Combat_Realism.AmmoDef" Name="81mmMortarShellBase" ParentName="AmmoBase" Abstract="True">
    <description>Low-velocity shell designed to be fired from a mortar.</description>
    <thingCategories>
      <li>Ammo81mmMortarShells</li>
    </thingCategories>
    <stackLimit>25</stackLimit>
		<Tradeability>Stockable</Tradeability>
  </ThingDef>

  <ThingDef Class="Combat_Realism.AmmoDef" ParentName="81mmMortarShellBase">
    <defName>ArtilleryShell</defName>
    <label>81mm mortar shell (HE)</label>
    <graphicData>
      <texPath>Things/Ammo/Mortar/HE</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
			<MarketValue>75</MarketValue>
			<Weight>4.24</Weight>
			<Bulk>5</Bulk>
    </statBases>
	<linkedProjectile>Bullet_81mmMortarShell_HE</linkedProjectile>
	<ammoClass>GrenadeHE</ammoClass>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
		<li Class="CompProperties_Explosive">
        <explosiveRadius>1.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.45</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.333</startWickHitPointsPercent>
        <wickTicks>
          <min>10</min>
          <max>30</max>
        </wickTicks>
      </li>
    </comps>
  </ThingDef>

