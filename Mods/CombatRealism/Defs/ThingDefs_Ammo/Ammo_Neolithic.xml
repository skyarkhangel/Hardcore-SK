<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!-- ==================== Arrows ========================== -->

  <ThingDef Class="Combat_Realism.AmmoDef" Name="AmmoArrowBase" ParentName="AmmoBase" Abstract="True">
    <description>Simple arrow design with a cutting head attached to a wooden shaft.</description>
    <statBases>
	  <Weight>0.11</Weight>
	  <Bulk>0.11</Bulk>
    </statBases>
    <thingCategories>
      <li>AmmoArrows</li>
    </thingCategories>
    <stackLimit>200</stackLimit>
  </ThingDef>

  <ThingDef Class="Combat_Realism.AmmoDef" ParentName="AmmoArrowBase">
    <defName>Ammo_Arrow_Stone</defName>
    <label>arrow (stone)</label>
    <graphicData>
      <texPath>Things/Ammo/Neolithic/Arrow/Stone</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.2</MarketValue>
    </statBases>
		<linkedProjectile>Projectile_Arrow_Stone</linkedProjectile>
		<ammoClass>StoneArrow</ammoClass>
  </ThingDef>

  <ThingDef Class="Combat_Realism.AmmoDef" ParentName="AmmoArrowBase">
    <defName>Ammo_Arrow_Metallic</defName>
    <label>arrow (metallic)</label>
    <graphicData>
      <texPath>Things/Ammo/Neolithic/Arrow/Steel</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.4</MarketValue>
    </statBases>
		<linkedProjectile>Projectile_Arrow_Metallic</linkedProjectile>
		<ammoClass>MetallicArrow</ammoClass>
  </ThingDef>

  <ThingDef Class="Combat_Realism.AmmoDef" ParentName="AmmoArrowBase">
    <defName>Ammo_Arrow_Explosive</defName>
    <label>arrow (explosive)</label>
    <graphicData>
      <texPath>Things/Ammo/Neolithic/Arrow/Plasteel</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>5</MarketValue>
    </statBases>
		<linkedProjectile>Projectile_Arrow_Explosive</linkedProjectile>
		<ammoClass>ExplosiveArrow</ammoClass>
		<canBeSpawningInventory>false</canBeSpawningInventory>
  </ThingDef>

</Defs>