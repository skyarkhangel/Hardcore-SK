<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>
  
	<ThingDef ParentName="BuildingBase">
		<defName>HollyWasher</defName>
		<label>Washing Machine</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>The good old washing machine "Halinka 2000" removes a worn by corpse effect from Apparel.</description>
		<graphicData>
			<texPath>Things/HolyWasher/Building/WM</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
		</graphicData>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<costList>
			<Rubber>55</Rubber>
			<Component>12</Component>
			<Mechanism>8</Mechanism>
			<Electronics>4</Electronics>
		</costList>
		<altitudeLayer>Building</altitudeLayer>		
		<statBases>
      <WorkToBuild>1700</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>0</Cleanliness>
    </statBases>	
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<useHitPoints>True</useHitPoints>
		<designationCategory>Accessories</designationCategory>
		<passability>PassThroughOnly</passability>
		<rotatable>true</rotatable>
		<pathCost>70</pathCost>	
		 <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
	<recipes>
      <li>HollyWashApparel</li>
    </recipes>
	<inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
		<building>
		      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
   <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <startElectricalFires>true</startElectricalFires>
        <basePowerConsumption>300</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
     <li Class="CompProperties_Breakdownable"/>
    </comps>
 <researchPrerequisites>
      <li>ComplexClothing</li>
      <li>SK_Petrochemistry</li>
    </researchPrerequisites>
	</ThingDef>
	
	
	<ThingDef ParentName="BuildingBase">
		<defName>HolyBasin</defName>
		<label>Metal Basin</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>Old metal basin where you wash your clothes to remove a worn by corpse effect from Apparel.</description>
		<graphicData>
			<texPath>Things/HolyWasher/Building/MetalBasin/MB</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.5,1.5)</drawSize>
		</graphicData>
		<stuffCategories>
    <li>Metallic</li>
	</stuffCategories>
	<costStuffCount>50</costStuffCount>
	<costList>
      <Component>1</Component>
    </costList>
		<altitudeLayer>Building</altitudeLayer>		
		<statBases>
      <WorkToBuild>500</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>0</Cleanliness>
    </statBases>	
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<useHitPoints>True</useHitPoints>
		<designationCategory>Misc</designationCategory>
		<passability>PassThroughOnly</passability>
		<rotatable>true</rotatable>
		<pathCost>70</pathCost>	
		 <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
	<recipes>
      <li>HollyWashApparel</li>
    </recipes>
	<inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
		<building>
		      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
   <comps>
     <li Class="CompProperties_Breakdownable"/>
    </comps>
 <researchPrerequisites>
      <li>BasicWashing</li>
    </researchPrerequisites>
	</ThingDef>
</Defs>