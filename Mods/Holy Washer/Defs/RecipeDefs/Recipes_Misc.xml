<Defs>

  <RecipeDef>
    <workerClass>HollyWasher.Worker</workerClass>
    <defName>HollyWashApparel</defName>
    <label>Wash clothes</label>
    <description>Removes the Worn By Corpse effect from the apparel.</description>
    <jobString>washing clothes.</jobString>
    <workAmount>1000</workAmount>
    <workSpeedStat>TailoringSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_WashingMachine</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Apparel</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Apparel</li>
      </categories>
      <specialFiltersToDisallow>
        <li>AllowNonDeadmansApparel</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <skillRequirements>
            <Crafting>1</Crafting>
    </skillRequirements>
  </RecipeDef>
  
