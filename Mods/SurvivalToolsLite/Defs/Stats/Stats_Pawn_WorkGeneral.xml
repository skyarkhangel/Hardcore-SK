            </li>
        </capacityFactors>
        <parts>
            <li Class="SurvivalToolsLite.StatPart_SurvivalTool">
                <noToolStatFactor>0.5</noToolStatFactor>
                <noToolStatFactorHardcore>0</noToolStatFactorHardcore>
            </li>
        </parts>
		<displayPriorityInCategory>4904</displayPriorityInCategory>
