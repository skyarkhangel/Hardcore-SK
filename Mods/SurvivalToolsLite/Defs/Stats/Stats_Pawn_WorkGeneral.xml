                <skill>Mining</skill>
                <valuesPerLevel>
                    <li>0.6</li>
                    <li>0.7</li>
                    <li>0.8</li>
                    <li>0.85</li>
                    <li>0.9</li>
                    <li>0.925</li>
                    <li>0.95</li>
                    <li>0.975</li>
                    <li>1</li>
                    <li>1.01</li>
                    <li>1.02</li>
                    <li>1.03</li>
                    <li>1.04</li>
                    <li>1.05</li>
                    <li>1.06</li>
                    <li>1.07</li>
                    <li>1.08</li>
                    <li>1.09</li>
                    <li>1.10</li>
                    <li>1.12</li>
                    <li>1.13</li>
                </valuesPerLevel>
            </li>
        </skillNeedFactors>
        <capacityFactors>
            <li>
                <capacity>Manipulation</capacity>
                <weight>0.3</weight>
                <max>1</max>
            </li>
            <li>
                <capacity>Sight</capacity>
