<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<!--================================ Abstract bases ======================================-->

	<ThingDef Class="AIRobot.ThingDef_AIRobot_Building_RechargeStation" Name="BuildingRobotBase" Abstract="True">
		<category>Building</category>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>BuildingRubble</filthLeaving>
	</ThingDef>

	<ThingDef Class="AIRobot.ThingDef_AIRobot_Building_RechargeStation" ParentName="BuildingRobotBase" Name="AIRobotRechargeStationBase" Abstract="True">
		<ThingClass>AIRobot.Building_AIRobotRechargeStation</ThingClass>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Standable</passability>
		<DesignationCategory>Misc</DesignationCategory>
		<PathCost>70</PathCost>
		<CastEdgeShadows>True</CastEdgeShadows>
		<useHitPoints>True</useHitPoints>
		<Size>(1,1)</Size>
		<statBases>
			<Flammability>1.0</Flammability>
		</statBases>
		<tickerType>Normal</tickerType>
		<tradeTags>
			<li>Robots</li>
			<li>Exotic</li>
		</tradeTags>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>100</basePowerConsumption>
				<transmitsPower>false</transmitsPower>
			</li>
		</comps>
	</ThingDef>



	<!--================================ Concrete ======================================-->

	<ThingDef Class="AIRobot.ThingDef_AIRobot_Building_RechargeStation" ParentName="AIRobotRechargeStationBase">
		<defName>AIRobot_RechargeStation_Hauler</defName>
		<label>Hauler Base Station</label>
		<description>This station comes equipped with a specialized robot.</description>
		<graphicData>
			<texPath>Things/Building/AIRobot_RechargeStation/AIRobotRechargeStation_HBot</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1,1)</drawSize>
			<damageData>
				<rect>(0.05,0.05,0.95,0.95)</rect>
			</damageData>
		</graphicData>
		<minifiedDef>AIRobot_MinifiedRechargeStation</minifiedDef>
		<fillPercent>0.25</fillPercent>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<Beauty>0</Beauty>
			<WorkToMake>5000</WorkToMake>
			<Mass>10</Mass>
		</statBases>
	<stuffCategories>
		<li>Metallic</li>
	</stuffCategories>
	<costStuffCount>150</costStuffCount>
		<CostList>
			<RobotParts>15</RobotParts>
			<AdvMechanism>6</AdvMechanism>
			<Rubber>10</Rubber>
			<Plastic>7</Plastic>
			<Microchips>1</Microchips>
		</CostList>
		<secondaryGraphicPath>Things/Building/AIRobot_RechargeStation/AIRobotRechargeStation_Empty1</secondaryGraphicPath>
		<spawnThingDef>AIRobot_Hauler</spawnThingDef>
		<rechargeEfficiency>1.0</rechargeEfficiency>
		<researchPrerequisites><li>SK_Robotics</li></researchPrerequisites>
	</ThingDef>

	<ThingDef Class="AIRobot.ThingDef_AIRobot_Building_RechargeStation" ParentName="AIRobotRechargeStationBase">
		<defName>AIRobot_RechargeStation_Cleaner</defName>
		<label>Cleaner Base Station</label>
		<description>This station comes equipped with a specialized robot.</description>
		<graphicData>
			<texPath>Things/Building/AIRobot_RechargeStation/AIRobotRechargeStation_CBot</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1,1)</drawSize>
			<damageData>
				<rect>(0.05,0.05,0.95,0.95)</rect>
			</damageData>
		</graphicData>
		<minifiedDef>AIRobot_MinifiedRechargeStation</minifiedDef>
		<fillPercent>0.25</fillPercent>
		<statBases>
			<MaxHitPoints>70</MaxHitPoints>
			<Beauty>0</Beauty>
			<WorkToMake>6000</WorkToMake>
			<Mass>13</Mass>
		</statBases>
	<stuffCategories>
		<li>Metallic</li>
	</stuffCategories>
	<costStuffCount>150</costStuffCount>
		<CostList>
			<RobotParts>15</RobotParts>
			<Rubber>30</Rubber>
			<Plastic>50</Plastic>
			<Microchips>1</Microchips>
		</CostList>

		<secondaryGraphicPath>Things/Building/AIRobot_RechargeStation/AIRobotRechargeStation_Empty1</secondaryGraphicPath>
		<spawnThingDef>AIRobot_Cleaner</spawnThingDef>
		<rechargeEfficiency>1.0</rechargeEfficiency>
		<researchPrerequisites><li>SK_Robotics</li></researchPrerequisites>
	</ThingDef>



</Defs>
