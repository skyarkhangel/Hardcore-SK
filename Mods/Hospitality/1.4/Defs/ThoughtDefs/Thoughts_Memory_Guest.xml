<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThoughtDef>
	<defName>GuestClaimedBed</defName>
    <showBubble>true</showBubble>
	<durationDays>5</durationDays>
	<stackLimit>50</stackLimit>
	<stages>
	  <li>
		<label>free bed</label>
        <description>My bed was free so I can't complain.</description>
        <baseMoodEffect>2</baseMoodEffect>
	  </li>
	  <li>
		<label>extremely overpriced bed</label>
        <description>My bed was absurdly more expensive than what it's worth.</description>
        <baseMoodEffect>-10</baseMoodEffect>
	  </li>
	  <li>
		<label>overpriced bed</label>
        <description>My bed was way too expensive for what it's worth.</description>
        <baseMoodEffect>-5</baseMoodEffect>
	  </li>
	  <li>
		<label>lame bed</label>
        <description>My bed was not worth the price.</description>
        <baseMoodEffect>-2</baseMoodEffect>
	  </li>
	  <li>
		<label>appropriate bed</label>
        <description>The price for a bed is alright here.</description>
        <baseMoodEffect>1</baseMoodEffect>
	  </li>
	  <li>
		<label>good value bed</label>
        <description>My bed was a good deal.</description>
        <baseMoodEffect>3</baseMoodEffect>
	  </li>
	  <li>
		<label>great value bed</label>
        <description>My bed was an excellent deal!</description>
        <baseMoodEffect>5</baseMoodEffect>
	  </li>
	</stages>
	<nullifyingTraits>
	  <li>Ascetic</li>
	</nullifyingTraits>
  </ThoughtDef>

  <ThoughtDef>
    <defName>GuestAngered</defName>
	<icon>Things/Mote/ThoughtSymbol/Skull</icon>
	<showBubble>true</showBubble>
    <durationDays>2</durationDays>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <stages>
      <li>
        <label>angered by recruitment</label>
        <description>These guys are trying to steal our members!</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>GuestRecruitmentForced</defName>
    <durationDays>15</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>involuntarily recruited</label>
        <description>I'm not sure if I should be here.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
    <ThoughtDef>
    <defName>GuestOffendedRelationship</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>4.5</durationDays>
    <stackedEffectMultiplier>0.98</stackedEffectMultiplier>
    <stackLimit>10</stackLimit>
    <stackLimitForSameOtherPawn>10</stackLimitForSameOtherPawn>
    <stages>
      <li>
        <label>insulted by colonist</label>
        <labelSocial>insulted me</labelSocial>
        <description>These guys are losers!</description>
        <baseMoodEffect>-2</baseMoodEffect>
        <baseOpinionOffset>-3</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>

    <ThoughtDef>
    <defName>GuestPleasedRelationship</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>4.5</durationDays>
    <stackedEffectMultiplier>0.98</stackedEffectMultiplier>
    <stackLimit>20</stackLimit>
    <stackLimitForSameOtherPawn>10</stackLimitForSameOtherPawn>
    <stages>
      <li>
        <label>charmed by colonist</label>
        <labelSocial>charmed me</labelSocial>
        <description>Such nice people!</description>
        <baseMoodEffect>1</baseMoodEffect>
        <baseOpinionOffset>8</baseOpinionOffset>
     </li>
    </stages>
  </ThoughtDef>

    <ThoughtDef>
    <defName>EndorsedByRecruiter</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>45</durationDays>
    <stackedEffectMultiplier>0.98</stackedEffectMultiplier>
    <stackLimit>10</stackLimit>
    <stages>
      <li>
        <label>endorsed by recruiter</label>
        <labelSocial>was endorsed to me</labelSocial>
        <description>This person was recommended to me.</description>
        <baseOpinionOffset>5</baseOpinionOffset>
     </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>GuestDismissiveAttitude</defName>
    <durationDays>0.05</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>tired of talking</label>
        <description>I'm done talking for now. Leave me alone.</description>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>GuestExpensiveFood</defName>
    <durationDays>5</durationDays>
    <stackedEffectMultiplier>0.98</stackedEffectMultiplier>
	<stackLimit>100</stackLimit>
    <stages>
      <li>
        <label>expensive food</label>
        <description>I had to pay for expensive food at a dispenser.</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
    </stages>
	<nullifyingTraits>
	  <li>Kind</li>
	  <li>Ascetic</li>
	</nullifyingTraits>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>GuestCheapFood</defName>
    <durationDays>5</durationDays>
    <stackedEffectMultiplier>0.98</stackedEffectMultiplier>
	<stackLimit>100</stackLimit>
    <stages>
      <li>
        <label>cheap food</label>
        <description>I could buy cheap food at a dispenser.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
    </stages>
	<nullifyingTraits>
	  <li>Greedy</li>
	</nullifyingTraits>
  </ThoughtDef>
  
</Defs>