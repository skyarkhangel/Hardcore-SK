<Defs>

	<ResearchProjectDef>
		<defName>TransparentRoofProduction</defName>
		<label>transparent roofs</label>
		<description>Allows you to build transparent roofs for indoor greenhouses.</description>
		<baseCost>700</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites>
			<li>Stonecutting</li>
			<li>SK_GlassworkingI</li>
		</prerequisites>
	</ResearchProjectDef>

	<ResearchProjectDef>
		<defName>ThickStoneRoofRemoval</defName>
		<label>thick stone roof removal</label>
		<description>Allows you to remove thick stone roofs.</description>
		<baseCost>4000</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites>
			<li>GroundPenetratingScanner</li>
		</prerequisites>
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<requiredResearchFacilities>
			<li>MultiAnalyzer</li>
		</requiredResearchFacilities>
	</ResearchProjectDef>

	<ResearchProjectDef>
		<defName>ThickStoneRoofProduction</defName>
		<label>thick stone roofs</label>
		<description>Allows you to build thick stone roofs which can block drop pods.</description>
		<baseCost>8000</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites>
			<li>ThickStoneRoofRemoval</li>
		</prerequisites>
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<requiredResearchFacilities>
			<li>MultiAnalyzer</li>
		</requiredResearchFacilities>
	</ResearchProjectDef>

</Defs>