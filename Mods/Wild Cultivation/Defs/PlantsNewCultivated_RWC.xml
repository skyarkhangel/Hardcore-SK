<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="RWC_PlantBase">
		<defName>PlantCultivatedAstragalus</defName>
		<label>astragalus</label>
		<description>A small perennial wildflower that grows in alpine climates.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>4</Beauty>
		</statBases>
		<graphicData>
			<texPath>Things/Flowers/SK/astragalus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible>
			<nutrition>0.18</nutrition>
		</ingestible>
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<reproduces>false</reproduces>
			<growDays>2.5</growDays>
			<sowTags>
				<li>Ground</li>
				<li>Decorative</li>
			</sowTags> 
			<maxMeshCount>25</maxMeshCount>
			<visualSizeRange>
				<min>0.3</min>
				<max>0.4</max>
			</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
		</plant>
	</ThingDef>

	<ThingDef ParentName="RWC_PlantBase">
		<defName>PlantCultivatedAmbrosia</defName>
		<label>ambrosia bush</label>
		<description>A bush which yields the ambrosia fruit. Very finicky, and difficult to cultivate. (Can only be grown in rich soil.) Ambrosia is pleasurable to eat and produces a slightly addictive chemical warmth effect.</description>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Ambrosia</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.1, 0.2, 0.1)</volume>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible>
			<nutrition>0.35</nutrition>
		</ingestible>
		<plant>
			<fertilityMin>1.05</fertilityMin>
			<fertilitySensitivity>0.15</fertilitySensitivity>
			<growDays>9</growDays>
			<sowMinSkill>12</sowMinSkill>
			<sowTags>
				<li>Ground</li>
			</sowTags> 
			<reproduces>false</reproduces>
			<leaflessGraphicPath>Things/Plant/Ambrosia_Leafless</leaflessGraphicPath>
			<immatureGraphicPath>Things/Plant/AmbrosiaImmature</immatureGraphicPath>
			<harvestYield>2</harvestYield>
			<harvestTag>Standard</harvestTag>
			<harvestAfterGrowth>0.3</harvestAfterGrowth>
			<harvestedThingDef>Ambrosia</harvestedThingDef>
			<visualSizeRange>
				<min>0.6</min>
				<max>1.1</max>
			</visualSizeRange>
			<topWindExposure>0.1</topWindExposure>
		</plant>
	</ThingDef>

	<ThingDef ParentName="RWC_PlantBase">
		<defName>PlantCultivatedPincushionCactus</defName>
		<label>pincushion cactus</label>
		<description>A short cactus. So named because it resembles a pincushion.</description>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Beauty>1</Beauty>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/PincushionCactus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>30</pathCost>
		<hideAtSnowDepth>1</hideAtSnowDepth>
		<ingestible>
			<nutrition>0.25</nutrition>
		</ingestible>
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<reproduces>false</reproduces>
			<growDays>2.5</growDays>
			<sowMinSkill>4</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<li>Decorative</li>
			</sowTags> 
			<visualSizeRange>
				<min>0.40</min>
				<max>0.65</max>
			</visualSizeRange>
			<topWindExposure>0.0</topWindExposure>
			<maxMeshCount>4</maxMeshCount>
		</plant>
	</ThingDef>

	<ThingDef ParentName="RWC_PlantBase">
		<defName>PlantCultivatedSaguaroCactus</defName>
		<label>saguaro cactus</label>
		<description>A large cactus native to arid Earth environments.</description>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/SaguaroCactus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.3, 0.3, 0.3)</volume>
			</shadowData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<selectable>true</selectable>
		<fillPercent>0.35</fillPercent>
		<passability>PassThroughOnly</passability>
		<pathCost>130</pathCost>
		<blockWind>true</blockWind>
		<ingestible>
			<nutrition>0.70</nutrition>
		</ingestible>
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<reproduces>false</reproduces>
			<growDays>10</growDays>
			<sowMinSkill>4</sowMinSkill>
			<sowTags>
				<li>Ground</li>
			</sowTags> 
			<leaflessGraphicPath>Things/Plant/SaguaroCactus_Leafless</leaflessGraphicPath>
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
			<harvestWork>300</harvestWork>
			<harvestedThingDef>WoodLog</harvestedThingDef>
			<harvestTag>Wood</harvestTag>
			<harvestYield>5</harvestYield>
			<harvestMinGrowth>0.2</harvestMinGrowth>
			<harvestFailable>false</harvestFailable>
			<visualSizeRange>
				<min>1.3</min>
				<max>2.0</max>
			</visualSizeRange>
			<topWindExposure>0.08</topWindExposure>
		</plant>
	</ThingDef>

	<!-- "Dummy" seed definitions used if "Seeds Please!" isn't installed -->
	
	<ThingDef>
		<defName>SeedAgave</defName>
		<label>nothing</label>
		<thingClass>ThingWithComps</thingClass>
	</ThingDef>

	<ThingDef>
		<defName>SeedAmbrosia</defName>
		<label>nothing</label>
		<thingClass>ThingWithComps</thingClass>
	</ThingDef>
	
	<!-- Actual seed defs used if "Seeds Please!" is installed -->

	<SeedsPlease.SeedDef ParentName="RWC_SeedBase">
		<defName>SeedAgave</defName>
		<label>agave seeds</label>
		<plant>PlantAgave</plant>
		<seed>
			<harvestFactor>1.5</harvestFactor>
			<seedFactor>0.90</seedFactor>
			<baseChance>0.25</baseChance>
		</seed>
	</SeedsPlease.SeedDef>

	<SeedsPlease.SeedDef ParentName="RWC_SeedBase">
		<defName>SeedAmbrosia</defName>
		<label>ambrosia seeds</label>
		<plant>PlantCultivatedAmbrosia</plant>
		<statBases>
			<MarketValue>24.0</MarketValue>
		</statBases>
		<sources>
			<li>PlantAmbrosia</li>
		</sources>
	</SeedsPlease.SeedDef>

	<SeedsPlease.SeedDef ParentName="RWC_SeedBase">
		<defName>SeedSaguaro</defName>
		<label>saguaro cactus seeds</label>
		<plant>PlantCultivatedSaguaroCactus</plant>
		<statBases>
			<MarketValue>12.0</MarketValue>
		</statBases>
		<sources>
			<li>PlantSaguaroCactus</li>
		</sources>
	</SeedsPlease.SeedDef>

	<SeedsPlease.SeedDef Name="RWC_SeedBase" ParentName="RWC_ResourceBase" Abstract="True">
		<thingClass>SeedsPlease.Seed</thingClass>
		<label>unspecified seed</label>
		<description>These are genetically engineered seeds capable of thriving in a wide range of alien environments over multiple generations.</description>
		<graphicData>
			<texPath>Things/Item/Seeds/Seeds</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>15</MaxHitPoints>
			<Mass>0.015</Mass>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<MarketValue>0</MarketValue>
			<SellPriceFactor>0.01</SellPriceFactor>
		</statBases>
		<soundInteract>Grain_Drop</soundInteract>
		<soundDrop>Grain_Drop</soundDrop>
		<thingCategories>
			<li>SeedsCategory</li>
		</thingCategories>
		<tradeTags>
			<li>Seeds</li>
		</tradeTags>
		<seed>
			<harvestFactor>1.0</harvestFactor>
			<seedFactor>1.0</seedFactor>
			<baseChance>0.95</baseChance>
			<extraChance>0.15</extraChance>
		</seed>
		<stackLimit>500</stackLimit>
	</SeedsPlease.SeedDef>

	<ThingDef Name="RWC_ResourceBase" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<useHitPoints>true</useHitPoints>
		<selectable>true</selectable>
		<altitudeLayer>Item</altitudeLayer>
		<stackLimit>75</stackLimit>
		<statBases>
			<Beauty>-7</Beauty>
		</statBases>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
	</ThingDef>

</Defs>
