<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThoughtDef>
		<defName>AIBaseThought</defName>
		<thoughtClass>Thought_Dumb</thoughtClass>
		<stages>
			<li>
				<label>...</label>
				<description>I am unable to feel anything..</description>
				<baseMoodEffect>100</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
  
	<ThoughtDef>
		<defName>AIShieldingError</defName>
		<durationDays>0.5</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>Shielding error.</label>
				<description>My shielding has holes. Activated repair nanites.</description>
				<baseMoodEffect>0</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>AIBatteriesRefilled</defName>
		<durationDays>0.25</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>Batteries full.</label>
				<description>My batteries are refilled. Back to work.</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>AILowBattery</defName>
		<durationDays>0.25</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>Battery low</label>
				<description>My batteries are low. I need to recharge them soon.</description>
				<baseMoodEffect>0</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>AILowCriticalBattery</defName>
		<durationDays>0.25</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>Battery critical</label>
				<description>My batteries are really low. If they fail, I'll initiate my self destruct protocol.</description>
				<baseMoodEffect>0</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>