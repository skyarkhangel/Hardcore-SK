					<categories>
						<li>Leathers</li>
					</categories>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<products>
			<RF_Gun_Mosin>1</RF_Gun_Mosin>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Rifle_Component</li>
				<li>Weapon_Parts</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
				<li>Woody</li>
				<li>Leathers</li>
			</categories>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>WeaponCraftingWorkTable</li>
		</recipeUsers>
	    <researchPrerequisite>Rifles_C1</researchPrerequisite>
	</RecipeDef>

