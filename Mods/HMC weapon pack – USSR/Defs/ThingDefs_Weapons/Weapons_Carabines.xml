<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- SKS -->
    <ThingDef ParentName="BaseGun_LongBarreled">
        <defName>Gun_SKS_HMC</defName>
        <label>SKS</label>
        <description>Ancient carabine. Probably pulled from a basement somewhere. Good range, Good power, low rate of fire.\nCaliber: 7.62x39 mm</description>
        <graphicData>
            <texPath>Things/Weapons/SKS</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <statBases>
            <MarketValue>725</MarketValue>
            <SightsEfficiency>1.05</SightsEfficiency>
            <ShotSpread>0.026</ShotSpread>
            <SwayFactor>1.15</SwayFactor>
            <RangedWeapon_Cooldown>0.88</RangedWeapon_Cooldown>
            <Bulk>7.9</Bulk>
            <Mass>3.75</Mass>
        </statBases>
        <weaponTags>
            <li>RF1</li>
            <li>Gun</li>
            <li>SniperRifle</li>
            <li>TierOneRifle</li>
            <li>TierOneSniper</li>
            <li>CE_AI_Rifle</li>
        </weaponTags>
        <thingCategories>
            <li>Rifles</li>
        </thingCategories>
        <verbs>
            <li Class="CombatExtended.VerbPropertiesCE">
                <recoilAmount>1.20</recoilAmount>
                <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_762x39mmSoviet_FMJ</defaultProjectile>
                <warmupTime>0.6</warmupTime>
                <range>40</range>
                <burstShotCount>2</burstShotCount>
                <ticksBetweenBurstShots>15</ticksBetweenBurstShots>				
                <soundCast>Shot_SKS</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="CombatExtended.CompProperties_FireModes">
                <aiUseBurstMode>FALSE</aiUseBurstMode>
                <aiAimMode>AimedShot</aiAimMode>
                <aimedBurstShotCount>1</aimedBurstShotCount>				
            </li>
            <li Class="CombatExtended.CompProperties_AmmoUser">
                <magazineSize>10</magazineSize>
                <reloadTime>3.0</reloadTime>
                <ammoSet>AmmoSet_762x39mmSoviet</ammoSet>
            </li>
        </comps>
        <smeltProducts>
            <Rifle_Component>1</Rifle_Component>
            <Weapon_Parts>1</Weapon_Parts>
        </smeltProducts>
    </ThingDef>

	<!-- AKS-74U -->
