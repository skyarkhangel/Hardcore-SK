<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- TODO:  Switch to labelKey -->
    <MiniMapDef>
        <defName>MiniMap_ViewPort</defName>
        <label>view port</label>
        <description>Show current view port.</description>
        <miniMapClass>CommunityCoreLibrary.MiniMap.MiniMap</miniMapClass>
        <updateInterval>5</updateInterval>
        <drawOrder>1000</drawOrder>
        <alwaysOnTop>true</alwaysOnTop>
        <iconTex>UI/Icons/MiniMap/frame</iconTex>
        <overlays>
            <li>MiniMapOverlay_ViewPort</li>
        </overlays>
    </MiniMapDef>

    <MiniMapDef>
        <defName>MiniMap_Fog</defName>
        <label>fog</label>
        <description>Show the fog.</description>
        <miniMapClass>CommunityCoreLibrary.MiniMap.MiniMap</miniMapClass>
        <updateInterval>2500</updateInterval>
        <drawOrder>990</drawOrder>
        <alwaysVisible>true</alwaysVisible>
        <alwaysOnTop>true</alwaysOnTop>
        <overlays>
            <li>MiniMapOverlay_Fog</li>
        </overlays>
    </MiniMapDef>

    <MiniMapDef>
        <defName>MiniMap_Pawns</defName>
        <label>pawns</label>
        <description>Show pawns.</description>
        <miniMapClass>CommunityCoreLibrary.MiniMap.MiniMap</miniMapClass>
        <updateInterval>5</updateInterval>
        <drawOrder>500</drawOrder>
        <iconTex>UI/Icons/MiniMap/pawns</iconTex>
        <overlays>
            <li>MiniMapOverlay_Colonists</li>
            <li>MiniMapOverlay_NonColonistPawns</li>
            <li>MiniMapOverlay_Wildlife</li>
        </overlays>
    </MiniMapDef>

    <MiniMapDef>
        <defName>MiniMap_Utilities</defName>
        <label>utilities</label>
        <description>Show the utilities.</description>
        <miniMapClass>CommunityCoreLibrary.MiniMap.MiniMap</miniMapClass>
        <updateInterval>50</updateInterval>
        <hiddenByDefault>true</hiddenByDefault>
        <drawOrder>200</drawOrder>
        <iconTex>UI/Icons/MiniMap/power</iconTex>
        <overlays>
            <li>MiniMapOverlay_PowerGrid</li>
        </overlays>
    </MiniMapDef>

