<!-- Caligae Boots -->
	<ThingDef ParentName="ApparelNeoliticBase">
		<defName>Apparello_Clawboots</defName>
		<label>Caligae Boots</label>
		<description>These are basically tall, rugged sandals. They're not very warm, but they are hobnailed for increased traction and can take a beating.</description>
		<graphicData>
			<texPath>Things/Apparel/VilePart2_Primitive/Caligae</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>		
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<costStuffCount>20</costStuffCount>
		<costList>
			<ComponentMedieval>4</ComponentMedieval>
		</costList>
		<statBases>
			<WorkToMake>2500</WorkToMake>
			<MaxHitPoints>45</MaxHitPoints>
			<Flammability>1.8</Flammability>
			<Mass>0.8</Mass>
			<Bulk>0.6</Bulk>
			<WornBulk>0</WornBulk>
			<EquipDelay>1.2</EquipDelay>
			<Insulation_Cold>0</Insulation_Cold>			
			<StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
