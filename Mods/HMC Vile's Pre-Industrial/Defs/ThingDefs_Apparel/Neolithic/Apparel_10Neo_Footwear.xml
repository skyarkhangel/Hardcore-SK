			<StuffEffectMultiplierArmor>0.95</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>0</ArmorRating_Sharp>
			<ArmorRating_Blunt>0</ArmorRating_Blunt>
			<ArmorRating_Heat>0</ArmorRating_Heat>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>0.12</MoveSpeed>
			<WorkSpeedGlobal>0.08</WorkSpeedGlobal>
			<SocialImpact>-0.02</SocialImpact>
			<MentalBreakThreshold>0.03</MentalBreakThreshold>
			<GermResistance>0.01</GermResistance>
			<GermContainment>0.01</GermContainment>
		</equippedStatOffsets>
		<generateCommonality>1</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>Feet</li>
			</bodyPartGroups>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>PredatorsLight</li>
				<li>PredatorsScout</li>
				<li>Primitive</li>
				<li>Legion</li>
			</tags>
