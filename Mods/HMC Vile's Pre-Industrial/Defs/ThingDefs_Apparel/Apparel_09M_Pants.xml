<Defs>
<!-- Work Trousers -->
	<ThingDef ParentName="ApparelMedievalBase">
		<defName>MedievalTimes_Pants_Suspenders</defName>
		<label>Work Trousers</label>
		<description>Medieval era pants, they fit awkwardly and are stitched together with clearly visible leather laces. You need a pair of suspenders to keep these up.</description>
		<graphicData>
			<texPath>Things/Apparel/VilePart3_Medieval/WorkTrousers/Pants</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>		
		<stuffCategories>
			<li>Leathery</li>
			<li>Fabric</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<statBases>
			<WorkToMake>5500</WorkToMake>
			<MaxHitPoints>60</MaxHitPoints>
			<Flammability>2</Flammability>
			<Mass>0.35</Mass>
			<Bulk>0.5</Bulk>
			<WornBulk>0</WornBulk>
			<EquipDelay>2.5</EquipDelay>			
			<Insulation_Cold>5</Insulation_Cold>
			<StuffEffectMultiplierInsulation_Cold>0.35</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.35</StuffEffectMultiplierInsulation_Heat>
			<StuffEffectMultiplierArmor>1.04</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>0</ArmorRating_Sharp>
			<ArmorRating_Blunt>0</ArmorRating_Blunt>
			<ArmorRating_Heat>0</ArmorRating_Heat>
		</statBases>
		<equippedStatOffsets>
			<CarryBulk>10</CarryBulk>
			<MoveSpeed>-0.05</MoveSpeed>
			<WorkSpeedGlobal>0.02</WorkSpeedGlobal>
			<GermResistance>0.02</GermResistance>
			<GermContainment>0.03</GermContainment>
		</equippedStatOffsets>
		<generateCommonality>2</generateCommonality>
		<apparel>
			<wornGraphicPath>Things/Apparel/VilePart3_Medieval/WorkTrousers/Pants</wornGraphicPath>
			<bodyPartGroups>
				<li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>Norbal</li>
				<li>NorbalWarrior</li>
				<li>NorbalArcher</li>
				<li>Medieval</li>
				<li>MedievalKnightly</li>
			</tags>		
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<thingCategories>
			<li>PantsCat</li>
			<li>SetMedieval</li>
			<li>SetCommoner</li>
			<li>SetSlaver</li>
		</thingCategories>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
		</recipeMaker>
	</ThingDef>
	
