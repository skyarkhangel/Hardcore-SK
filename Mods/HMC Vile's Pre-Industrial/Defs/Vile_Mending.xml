		    <workAmount>120</workAmount>
		    <effectWorking>Tailor</effectWorking>
		    <soundWorking>Recipe_Tailor</soundWorking>
		    <ingredients>
		      <li>
		        <filter>
		          <categories>
		            <li>BaseLayerCat</li>
		              <li>MiddleLayerCat</li>
		                <li>ShellLayerCat</li>
		                <li>HeaddressCat</li>
		                <li>AnimalHeaddressCat</li>
		                <li>BootsCat</li>
						<li>PantsCat</li>
		          </categories>
		            <thingDefs>
		          		<li>Apparello_chefglove</li>
		          		<li>Apparello_Workglove</li>
		          		<li>Apparello_Motorglove</li>
		          </thingDefs>
		        </filter>
		        <count>1</count>
		      </li>
		    </ingredients>
		    <fixedIngredientFilter>
		       <categories>
		            <li>BaseLayerCat</li>
		              <li>MiddleLayerCat</li>
		                <li>ShellLayerCat</li>
		                <li>HeaddressCat</li>
		                <li>AnimalHeaddressCat</li>
		                <li>BootsCat</li>
		          </categories>
		            <thingDefs>
		          		<li>Apparello_chefglove</li>
		          		<li>Apparello_Workglove</li>
		          		<li>Apparello_Motorglove</li>
		          </thingDefs>
		      <disallowedCategories>
		      	<li>MiddleArmorCat</li>
				<li>MilitaryPantsCat</li>
		        	<li>ShellFullArmorCat</li>
		        	<li>ShellPartialArmorCat</li>
		      </disallowedCategories>
		      <disallowedThingDefs>
		        <li>Apparel_PowerArmor</li>
		        <li>Apparel_ShieldBelt</li> 
		        <li>MedievalTimes_Boots_Steel_Plated</li>
		        <li>Apparello_MetalBoots</li>
		      </disallowedThingDefs>
		    </fixedIngredientFilter>
				<skillRequirements>
					<Crafting>4</Crafting>
				</skillRequirements>
			<recipeUsers>
				<li>HandMendingWorkbench</li>
			</recipeUsers>
 	 </RecipeDef>
 	 
