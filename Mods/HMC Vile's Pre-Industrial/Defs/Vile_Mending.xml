<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="WorkTable">
		<defName>HandMendingWorkbench</defName>
		<label>hand mending workbench</label>
		<description>A workbench equipped with all the tools required to mend and repair damaged medieval apparel, armor and weapons. Keep it stocked with mending kits.</description>
		<graphicData>
			<texPath>Things/Mending/ManualMendingBench</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2,1)</drawSize>
			<shaderType>CutoutComplex</shaderType>
			<shadowData>
				<volume>(0.5, 0.5, 0.5)</volume>
				<offset>(0,0,0)</offset>
			</shadowData>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<stuffCategories>
			<li>RuggedMetallic</li>
			<li>Stony</li>
			<li>Bricks</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>150</costStuffCount>
		<costList>
			<ComponentIndustrial>4</ComponentIndustrial>
			<Mechanism>2</Mechanism>
		</costList>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsProduction</li>
		</thingCategories>
		<statBases>
			<WorkToBuild>1800</WorkToBuild>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Cleanliness>-5</Cleanliness>
			<Mass>200</Mass>
		</statBases>
		<size>(2,1)</size>
		<designationCategory>Production</designationCategory>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<building>
			<uninstallWork>1250</uninstallWork>
		</building>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>16.0</fuelConsumptionRate>
				<fuelCapacity>8.0</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>MendingKit</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
			</li>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>Small_ToolCabinet</li>
				</linkableFacilities>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>PlaceWorker_ReportWorkSpeedPenalties</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>Mending_B1</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
	</ThingDef>
