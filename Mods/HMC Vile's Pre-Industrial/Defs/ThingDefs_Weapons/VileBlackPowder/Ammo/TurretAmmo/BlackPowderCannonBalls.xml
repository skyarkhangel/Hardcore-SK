		<jobString>Making grapeshot.</jobString>
		<targetCountAdjustment>1</targetCountAdjustment>
		<workAmount>1200</workAmount>
		<unfinishedThingDef>UnfinishedBalls</unfinishedThingDef>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Powder</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
