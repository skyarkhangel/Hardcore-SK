			<categories>
				<li>StoneChunks</li>
			</categories>
			<thingDefs>
				<li>Powder</li>
			</thingDefs>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>TableStonecutterNeolithic</li>
			<li>TableStonecutter</li>
		</recipeUsers>
		<products>
			<Ammo_Grapeshot>5</Ammo_Grapeshot>
