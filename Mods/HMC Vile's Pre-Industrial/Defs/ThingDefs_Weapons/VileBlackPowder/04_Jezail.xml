            </li>
            <li Class="CombatExtended.CompProperties_AmmoUser">
                <magazineSize>1</magazineSize>
                <reloadTime>3.5</reloadTime>
                <ammoSet>AmmoSet_69Musket</ammoSet>
            </li>
	
        </comps>
	<modExtensions>
		<li Class="CombatExtended.GunDrawExtension">
			<DrawSize>1.9,1.9</DrawSize>
		</li>
	</modExtensions>
