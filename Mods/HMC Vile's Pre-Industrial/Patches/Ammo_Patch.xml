<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Core SK</li>
	</mods>
	<match Class="PatchOperationSequence">
	<success>Always</success>
			<operations>
			
			<li Class="PatchOperationAdd">	
				<xpath>Defs</xpath>
				<value>
					<CombatExtended.AmmoCategoryDef>
						<defName>PiercingArrow</defName>
						<label>piercing arrow</label>
						<description>An arrow with a narrow metal head for improved penetration but weaker damage.</description>
						<advanced>true</advanced>
					</CombatExtended.AmmoCategoryDef>
				</value>
			</li>
				
			<!-- broadhead quarrels -->	
			<li Class="PatchOperationReplace">	
				<xpath>Defs/ThingDef[defName="Ammo_Bolt_Poison"]/label</xpath>
				<value>
					<label>broadhead quarrel</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">	
				<xpath>Defs/ThingDef[defName="Ammo_Bolt_Poison"]/description</xpath>
				<value>
					<description>A heavy bolt fired by the arbalest. Has a wide head used for hunting and causing grievous wounds.</description>
				</value>
			</li>
				<li Class="PatchOperationReplace">	
				<xpath>Defs/ThingDef[defName="Ammo_Bolt_Poison"]/graphicData/texPath</xpath>
				<value>
					<texPath>Things/Ammunition/Quarrel/Broadhead</texPath>
				</value>
			</li>	
			<li Class="PatchOperationReplace">	
				<xpath>Defs/ThingDef[defName="Ammo_Bolt_Poison"]/ammoClass</xpath>
				<value>
					<ammoClass>PiercingArrow</ammoClass>
				</value>
			</li>	
			<li Class="PatchOperationReplace">	
				<xpath>Defs/RecipeDef[defName="MakeAmmo_Bolt_Poison"]/label</xpath>
				<value>
					<label>make broadhead quarrels x50</label>
				</value>
			</li>	
			<li Class="PatchOperationReplace">	
				<xpath>Defs/RecipeDef[defName="MakeAmmo_Bolt_Poison"]/description</xpath>
				<value>
					<description>A heavy bolt fired by the arbalest. Has a wide head used for hunting and causing grievous wounds.</description>
				</value>
			</li>		
			<li Class="PatchOperationReplace">	
				<xpath>Defs/RecipeDef[defName="MakeAmmo_Bolt_Poison"]/skillRequirements</xpath>
				<value>
					<skillRequirements>
						<Crafting>0</Crafting>
					</skillRequirements>
				</value>
			</li>	
			<li Class="PatchOperationReplace">	
				<xpath>Defs/RecipeDef[defName="MakeAmmo_Bolt_Poison"]/ingredients</xpath>
				<value>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>WoodLog</li>
								</thingDefs>
							</filter>
							<count>5</count>
						</li>
						<li>
							<filter>
								<categories>
									<li>Metallic</li>
								</categories>
							</filter>
							<count>12</count>
						</li>
					</ingredients>
				</value>
			</li>		
			<li Class="PatchOperationReplace">	
				<xpath>Defs/RecipeDef[defName="MakeAmmo_Bolt_Poison"]/fixedIngredientFilter</xpath>
				<value>
					<fixedIngredientFilter>
						<categories>
							<li>Metallic</li>
						</categories>
						<thingDefs>
							<li>WoodLog</li>
						</thingDefs>
					</fixedIngredientFilter>
				</value>
			</li>	
			<li Class="PatchOperationReplace">	
				<xpath>Defs/RecipeDef[defName="MakeAmmo_Bolt_Poison"]/researchPrerequisite</xpath>
				<value>
					  <researchPrerequisite>Bow_B2</researchPrerequisite>
				</value>
			</li>	
				
			<!-- bodkin quarrels -->
			<li Class="PatchOperationReplace">	
				<xpath>Defs/ThingDef[defName="Ammo_Bolt_Metallic"]/label</xpath>
				<value>
					<label>bodkin quarrel</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">	
				<xpath>Defs/ThingDef[defName="Ammo_Bolt_Metallic"]/description</xpath>
				<value>
					<description>A heavy bolt fired by the arbalest. Has a thinner head which is better for piercing armor. Hurts less.</description>
				</value>
			</li>
			<li Class="PatchOperationReplace">	
				<xpath>Defs/RecipeDef[defName="MakeAmmo_Bolt_Metallic"]/label</xpath>
				<value>
					<label>make bodkin quarrels x50</label>
				</value>
			</li>	
			<li Class="PatchOperationReplace">	
				<xpath>Defs/RecipeDef[defName="MakeAmmo_Bolt_Metallic"]/description</xpath>
				<value>
					<description>A heavy bolt fired by the arbalest. Has a thinner head which is better for piercing armor. Hurts less.</description>
				</value>
			</li>	
			<li Class="PatchOperationReplace">	
				<xpath>Defs/RecipeDef[defName="MakeAmmo_Bolt_Metallic"]/researchPrerequisite</xpath>
				<value>
					  <researchPrerequisite>Bow_B2</researchPrerequisite>
				</value>
			</li>	
				
			<!-- explosive quarrels -->
			<li Class="PatchOperationReplace">	
				<xpath>Defs/ThingDef[defName="Ammo_Bolt_Explosive"]/label</xpath>
				<value>
					<label>explosive quarrel</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">	
				<xpath>Defs/RecipeDef[defName="MakeAmmo_Bolt_Explosive"]/label</xpath>
				<value>
					<label>make explosive quarrels x50</label>
				</value>
			</li>
			
				
		
				
		</operations>
		</match>
    </Operation>	
</Patch>	