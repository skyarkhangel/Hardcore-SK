<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Core SK</li>
	</mods>
	<match Class="PatchOperationSequence">
	<success>Always</success>
			<operations>
		
				<!-- SHELL layer needs to be added to gloves so pawns won't double up with arm armor such as vambraces -->
				
				<li Class="PatchOperationReplace">	
				<xpath>Defs/ThingDef[defName="Apparello_chefglove"]/apparel/layers</xpath> <!-- CHEF GLOVES -->
					<value>
						<layers>
							<li>OnSkin</li>
							<li>Shell</li>
						</layers>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">	
				<xpath>Defs/ThingDef[defName="Apparello_Workglove"]/apparel/layers</xpath> <!-- LEATHER GLOVES -->
					<value>
						<layers>
							<li>OnSkin</li>
							<li>Shell</li>
						</layers>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">	
				<xpath>Defs/ThingDef[defName="Apparello_ReinforcedGlove"]/apparel/layers</xpath> <!-- REINFORCED GLOVES -->
					<value>
						<layers>
							<li>OnSkin</li>
							<li>Shell</li>
						</layers>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">	
				<xpath>Defs/ThingDef[defName="Apparello_Motorglove"]/apparel/layers</xpath> <!-- LEATHER GRIPS -->
					<value>
						<layers>
							<li>OnSkin</li>
							<li>Shell</li>
						</layers>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">	
				<xpath>Defs/ThingDef[defName="MedievalTimes_Gloves_Combat"]/apparel/layers</xpath> <!-- COMBAT GLOVES -->
					<value>
						<layers>
							<li>OnSkin</li>
							<li>Shell</li>
						</layers>
					</value>
				</li>
				
				
				
		</operations>
		</match>
    </Operation>	
</Patch>	