  <ThingDef ParentName="BuildingBaseCL">
    <defName>TeachingSpot</defName>
    <label>Teacher Table</label>
	  <thingClass>Nandonalt_ColonyLeadership.Building_TeachingSpot</thingClass>
    <Description>Designates a spot where lessons will be held.</Description>
    <tickerType>Rare</tickerType>	
    <graphicData>
      <texPath>ColonyLeadership/teaching_table</texPath>
     <graphicClass>Graphic_Multi</graphicClass>
	   <shaderType>CutoutComplex</shaderType>
         <damageData>
        <rectN>(0.125,0.296875,0.734375,0.421875)</rectN>
        <rectS>(0.125,0.296875,0.734375,0.421875)</rectS>
        <rectE>(0.234375,0.296875,0.5,0.546875)</rectE>
        <rectW>(0.234375,0.296875,0.5,0.546875)</rectW>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <AltitudeLayer>Building</AltitudeLayer>
	<hasInteractionCell>true</hasInteractionCell>
	<castEdgeShadows>true</castEdgeShadows>
	<fillPercent>0.5</fillPercent>
	  <socialPropernessMatters>true</socialPropernessMatters>	
	   <defaultPlacingRot>South</defaultPlacingRot>
      <useHitPoints>True</useHitPoints>
	  <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>		  
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
	 <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>	  
    </stuffCategories>
	 <costStuffCount>75</costStuffCount>
    <statBases>
      <WorkToBuild>500</WorkToBuild>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>1.0</Flammability>
	   <Beauty>5</Beauty>
      <EntertainmentStrengthFactor>1</EntertainmentStrengthFactor>
	      <LearningSpeedFactor>1</LearningSpeedFactor>
    </statBases>
		<scatterableOnMapGen>false</scatterableOnMapGen>
    <DesignationCategory>LeadershipModTab</DesignationCategory>
       <Passability>PassThroughOnly</Passability>
	    <pathCost>70</pathCost>
		
		  <inspectorTabs>
      <li>Nandonalt_ColonyLeadership.ITab_LessonSchedule</li>	  
    </inspectorTabs>
    <building>
        <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
	  	<watchBuildingStandDistanceRange>
		<min>1</min>
		<max>7</max>
	</watchBuildingStandDistanceRange>
	<watchBuildingStandRectWidth>7</watchBuildingStandRectWidth>   	
    </building>
	    <comps>
      <li>	  
        <compClass>CompQuality</compClass>		
      </li>	  
	     <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>GlobeCL</li>
		  <li>ChalkboardCL</li>
        </linkableFacilities>
		</li>
    </comps>
	<placeWorkers>
        <li>Nandonalt_ColonyLeadership.PlaceWorker_TeachingSpot</li>
    </placeWorkers>
  </ThingDef>
  
  
  
   
