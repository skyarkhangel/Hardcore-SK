<?xml version="1.0" encoding="utf-8" ?>

<KeyBindingDefs>

  <!-- Colonist Selection Keys -->
  
  <KeyBindingDef Name="ColonistSelectionKeyBinding" Abstract="true">
    <category>ColonistSelectionKeys</category>
  </KeyBindingDef>

  <KeyBindingDef ParentName="ColonistSelectionKeyBinding">
    <defName>ColonistSelectionKeys_Help</defName>
    <label>open selection help menu (SHIFT+key)</label>
    <defaultKeyCodeA>K</defaultKeyCodeA>
  </KeyBindingDef>
  
  <KeyBindingDef ParentName="ColonistSelectionKeyBinding">
    <defName>ColonistSelectionKeys_Release</defName>
    <label>release pawns / SHIFT: Change mode</label>
    <defaultKeyCodeA>Alpha0</defaultKeyCodeA>
  </KeyBindingDef>
  
  <KeyBindingDef ParentName="ColonistSelectionKeyBinding">
    <defName>ColonistSelectionKeys_Group1</defName>
    <label>select group 1 / set with SHIFT+key</label>
    <defaultKeyCodeA>Alpha6</defaultKeyCodeA>
  </KeyBindingDef>
  
  <KeyBindingDef ParentName="ColonistSelectionKeyBinding">
    <defName>ColonistSelectionKeys_Group2</defName>
    <label>select group 2 / set with SHIFT+key</label>
    <defaultKeyCodeA>Alpha7</defaultKeyCodeA>
  </KeyBindingDef>
  
  <KeyBindingDef ParentName="ColonistSelectionKeyBinding">
    <defName>ColonistSelectionKeys_Group3</defName>
    <label>select group 3 / set with SHIFT+key</label>
    <defaultKeyCodeA>Alpha8</defaultKeyCodeA>
  </KeyBindingDef>
  
  <KeyBindingDef ParentName="ColonistSelectionKeyBinding">
    <defName>ColonistSelectionKeys_Group4</defName>
    <label>select group 4 / set with SHIFT+key</label>
    <defaultKeyCodeA>Alpha9</defaultKeyCodeA>
  </KeyBindingDef>
  
  <KeyBindingDef ParentName="ColonistSelectionKeyBinding">
    <defName>ColonistSelectionKeys_SendEating</defName>
    <label>send active colonist to eat</label>
    <defaultKeyCodeA>E</defaultKeyCodeA>
  </KeyBindingDef>
  
  <KeyBindingDef ParentName="ColonistSelectionKeyBinding">
    <defName>ColonistSelectionKeys_SendSleeping</defName>
    <label>send active colonist to bed</label>
    <defaultKeyCodeA>Q</defaultKeyCodeA>
  </KeyBindingDef>
  
  <KeyBindingDef ParentName="ColonistSelectionKeyBinding">
    <defName>ColonistSelectionKeys_CenterOnColony</defName>
    <label>jump to random colony cell</label>
    <defaultKeyCodeA>Backspace</defaultKeyCodeA>
  </KeyBindingDef>

</KeyBindingDefs>
