<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Androids</li>
	</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<li Class="PatchOperationSequence">
				<success>Always</success>
				<operations>
					<li Class="PatchOperationTest">
						<xpath>Defs/ThingDef[defName="ChJAndroidPrinter"]/modExtensions/li[@Class="Androids.PawnCrafterProperties"]/disabledRaces</xpath>
					</li>
					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="ChJAndroidPrinter"]/modExtensions/li[@Class="Androids.PawnCrafterProperties"]/disabledRaces</xpath>
						<order>Prepend</order>
						<value>
							<li>SkynetCovert</li>
							<li>SkynetInfiltrator</li>
							<li>SkynetAgent</li>
							<li>SkynetPrototypeTX</li>
						</value>
					</li>
				</operations>
			</li>

			</operations>
		</match>
		<nomatch Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="RadiationMechanoid"]/description</xpath>
					<value>
					  <description>Radiation damage, it effects the joints and wears down the material, causing decay. Some mechanical pawns can have their parts replaced to remove this.</description>
					</value>
				</li>
				
			</operations>
		</nomatch>
    </Operation>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Rimatomics</li>
	</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<li Class="PatchOperationAddModExtension">
			<xpath>Defs/HediffDef[defName="RadiationMechanoid"]</xpath>
				<value>
				  <li Class="Skynet.SkynetPawnExtension"/>
				</value>
			</li>

			</operations>
		</match>
    </Operation>

</Patch>