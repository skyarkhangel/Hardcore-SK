<?xml version="1.0" encoding="utf-8" ?>
<MainTabDefs>

  <MainTabDef>
    <defName>Architect</defName>
    <label>Architect</label>
    <description>Designate where and what colonists should build, farm, store items, and so on.</description>
    <windowClass>EdB.Interface.MainTabWindow_Architect</windowClass>
    <order>1</order>
    <defaultToggleKey>Tab</defaultToggleKey>
  </MainTabDef>

  <MainTabDef>
    <defName>Menu</defName>
    <label>Menu</label>
    <description>Change options, save, load, or quit the game.</description>
    <windowClass>EdB.Interface.MainTabWindow_Menu</windowClass>
    <order>500</order>
  </MainTabDef>

  <MainTabDef>
    <defName>EdB_Interface_Inventory</defName>
    <label>Inventory</label>
    <description>Count all of your resources, weapons, apparel and buildings.</description>
    <windowClass>EdB.Interface.MainTabWindow_Inventory</windowClass>
    <order>45</order>
  </MainTabDef>

  <MainTabDef>
    <defName>EdB_Interface_Squads</defName>
    <label>Squads</label>
    <description>Organize your colonists into squads.</description>
    <windowClass>EdB.Interface.MainTabWindow_Squads</windowClass>
    <order>35</order>
  </MainTabDef>

  <MainTabDef>
    <defName>Work</defName>
    <label>Work</label>
    <description>Choose which colonist does what kinds of work, and in what priority order.</description>
    <windowClass>EdB.Interface.MainTabWindow_Work</windowClass>
    <concept>WorkTab</concept>
    <tutorHighlightTag>ButtonWorkTab</tutorHighlightTag>
    <order>10</order>
    <defaultToggleKey>F1</defaultToggleKey>
  </MainTabDef>

  <MainTabDef>
    <defName>Restrictions</defName>
    <label>Restrictions</label>
    <description>Restrict colonists to certain activities at certain times of day, or to specific allowed areas.</description>
    <windowClass>EdB.Interface.MainTabWindow_Restrictions</windowClass>
    <order>20</order>
    <defaultToggleKey>F2</defaultToggleKey>
  </MainTabDef>

  <MainTabDef>
    <defName>Outfits</defName>
    <label>Outfits</label>
    <description>Configure what each colonist is allowed to wear.</description>
    <windowClass>EdB.Interface.MainTabWindow_Outfits</windowClass>
    <order>30</order>
    <defaultToggleKey>F3</defaultToggleKey>
  </MainTabDef>


  <MainTabDef>
    <defName>Inspect</defName>
    <label>Inspect</label>
    <windowClass>EdB.Interface.MainTabWindow_Inspect</windowClass>
    <showTabButton>false</showTabButton>
  </MainTabDef>

</MainTabDefs>