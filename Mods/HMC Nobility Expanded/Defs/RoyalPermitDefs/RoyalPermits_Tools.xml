<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- Tools -->

    <RoyalTitlePermitDef ParentName="DropResourcesTitle">
        <defName>ToolPermitTitle</defName>
        <label>Tools</label>
        <description>Request a drop of tool box.</description>
    </RoyalTitlePermitDef>
    
    <RoyalTitlePermitDef ParentName="DropResourcesPlus">
        <defName>ToolDrop</defName>
        <label>conventional tools</label>
        <description>Request a drop of tool box with handaxe, hammer, pickaxe, hoe, sickle, knife and broom.\n - Material: Steel\n - Quality: Normal</description>
        <minTitle>Acolyte</minTitle>
        <cooldownDays>10</cooldownDays>
        <royalAid>
            <itemsToDrop>
                <TFJ_Tool_Woodcutting_Handaxe>1</TFJ_Tool_Woodcutting_Handaxe>
                <TFJ_Tool_Mining_Pickaxe>1</TFJ_Tool_Mining_Pickaxe>
                <TFJ_Tool_Building_Hammer>1</TFJ_Tool_Building_Hammer>
                <TFJ_Tool_Sickle>1</TFJ_Tool_Sickle>
                <TFJ_Tool_Hoe>1</TFJ_Tool_Hoe>
                <MeleeWeapon_Knife>1</MeleeWeapon_Knife>
                <TFJ_Tool_Broom>1</TFJ_Tool_Broom>
            </itemsToDrop>
            <favorCost>2</favorCost>
        </royalAid>
    </RoyalTitlePermitDef>
    <OrderedStuffDef ParentName="OrderedStuffBase">
        <defName>ToolDropStuff</defName>
        <stuffList>
            <li>Plasteel</li>
            <li>Plasteel</li>
            <li>Plasteel</li>
            <li>Plasteel</li>
            <li>Plasteel</li>
            <li>Plasteel</li>
            <li>WoodPlank</li>
        </stuffList>
    </OrderedStuffDef>
    
