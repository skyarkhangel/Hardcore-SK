<Defs>

    <RoyalTitlePermitDef ParentName="DropResourcesTitle">
        <defName>MeleePermitTitle</defName>
        <label>Melee Weapons</label>
        <description>Request a drop of random melee weapons.</description>
    </RoyalTitlePermitDef>
    
    <!-- Agile -->
  
    <RoyalTitlePermitDef ParentName="DropResourcesPlus">
        <defName>AgileMeleeDrop</defName>
        <label>Agile weapon</label>
        <description>Request a drop of random agile melee weapon (daggers and shortswords).\n - Material: Steel\n - Quality: Normal</description>
        <minTitle>Acolyte</minTitle>
        <cooldownDays>21</cooldownDays>
        <royalAid>
            <itemsToDrop>
                <Steel>1</Steel>
            </itemsToDrop>
            <favorCost>2</favorCost>
        </royalAid>
    </RoyalTitlePermitDef>
    <OrderedStuffDef ParentName="OrderedStuffBase">
        <defName>AgileMeleeDropStuff</defName>
        <typeOfItem>Random</typeOfItem>
        <stuffList>
            <li>Plasteel</li>
        </stuffList>
        <thingsToChoose>
            <li>NorbalMeleeWeapon_ShortSwordtwo</li>
            <li>MeleeWeapon_Knife</li>
            <li>MeleeWeapon_Tanto</li>
        </thingsToChoose>
    </OrderedStuffDef>
    
