<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="InfectionBase">
		<defName>Tuberculosis</defName>
		<label>tuberculosis</label>
		<makesSickThought>true</makesSickThought>
		<lethalSeverity>1</lethalSeverity>
		<scenarioCanAdd>true</scenarioCanAdd>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<tendDuration>50000</tendDuration>
				<severityPerDayTended>-0.20</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_Immunizable">
				<immunityPerDayNotSick>-0.03</immunityPerDayNotSick>
				<immunityPerDaySick>0.12</immunityPerDaySick>
				<severityPerDayNotImmune>0.137</severityPerDayNotImmune>
				<severityPerDayImmune>-0.27</severityPerDayImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.8</min>
					<max>1.2</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.575</minSeverity>
				<label>minor</label>
				<becomeVisible>true</becomeVisible>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedTuberculosis</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>LeftLung</li>
							<li>RightLung</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.65</minSeverity>
				<label>moderate</label>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedTuberculosis</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>LeftLung</li>
							<li>RightLung</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.725</minSeverity>
				<label>major</label>
				<hungerRateFactor>0.9</hungerRateFactor>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedTuberculosis</hediff>
						<mtbDays>10</mtbDays>
						<partsToAffect>
							<li>LeftLung</li>
							<li>RightLung</li>
							<li>Spine</li>
							<li>Pelvis</li>
							<li>LeftFemur</li>
							<li>RightFemur</li>
							<li>LeftHumerus</li>
							<li>RightHumerus</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>LeftLung</li>
							<li>RightLung</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.8</minSeverity>
				<label>severe</label>
				<hungerRateFactor>0.8</hungerRateFactor>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedTuberculosis</hediff>
						<mtbDays>5</mtbDays>
						<partsToAffect>
							<li>LeftLobeLiver</li>
							<li>RightLobeLiver</li>
							<li>LeftKidney</li>
							<li>RightKidney</li>
							<li>LeftLung</li>
							<li>RightLung</li>
							<li>LeftEye</li>
							<li>RightEye</li>
							<li>Spleed</li>
							<li>Spine</li>
							<li>Pelvis</li>
							<li>Sternum</li>
							<li>LeftFemur</li>
							<li>RightFemur</li>
							<li>LeftHumerus</li>
							<li>RightHumerus</li>
							<li>LeftClavicle</li>
							<li>RightClavicle</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>LeftLung</li>
							<li>RightLung</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Necrosis</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>LeftLung</li>
							<li>RightLung</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>BadBack</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>Spine</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.875</minSeverity>
				<label>extreme</label>
				<lifeThreatening>true</lifeThreatening>
				<hungerRateFactor>0.7</hungerRateFactor>
				<painOffset>0.2</painOffset>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedTuberculosis</hediff>
						<mtbDays>2.5</mtbDays>
						<partsToAffect>
							<li>LeftLobeLiver</li>
							<li>RightLobeLiver</li>
							<li>LeftKidney</li>
							<li>RightKidney</li>
							<li>LeftLung</li>
							<li>RightLung</li>
							<li>LeftEye</li>
							<li>RightEye</li>
							<li>Spleed</li>
							<li>Brain</li>
							<li>Spine</li>
							<li>Pelvis</li>
							<li>Sternum</li>
							<li>LeftFemur</li>
							<li>RightFemur</li>
							<li>LeftHumerus</li>
							<li>RightHumerus</li>
							<li>LeftClavicle</li>
							<li>RightClavicle</li>
							<li>LeftTibia</li>
							<li>RightTibia</li>
							<li>LeftFibula</li>
							<li>RightFibula</li>
							<li>LeftPatella</li>
							<li>RightPatella</li>
							<li>LeftRadius</li>
							<li>RightRadius</li>
							<li>LeftUlna</li>
							<li>RightUlna</li>
						</partsToAffect>
						<countToAffect>4</countToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Necrosis</hediff>
						<mtbDays>10</mtbDays>
						<partsToAffect>
							<li>LeftLung</li>
							<li>RightLung</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>BadBack</hediff>
						<mtbDays>10</mtbDays>
						<partsToAffect>
							<li>Spine</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>EncapsulatedTuberculosis</defName>
		<label>encapsulated pathogen</label>
		<stages>
			<li>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Tuberculosis</hediff>
						<mtbDays>240</mtbDays>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>