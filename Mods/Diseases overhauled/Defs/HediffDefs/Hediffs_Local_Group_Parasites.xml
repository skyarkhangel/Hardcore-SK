	<HediffDef ParentName="InfectionBase">
		<defName>GutWorms</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>true</scenarioCanAdd>
		<label>gut worms</label>
		<makesSickThought>true</makesSickThought>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<tendDuration>120000</tendDuration>
				<disappearsAtTendedCount>5</disappearsAtTendedCount>
			</li>
		</comps>
		<stages>
			<li>
				<painOffset>0.2</painOffset>
				<hungerRateFactorOffset>2</hungerRateFactorOffset>
				<vomitMtbDays>1.0</vomitMtbDays>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>Spleed</li>
							<li>Stomach</li>
							<li>LeftLobeLiver</li>
							<li>RightLobeLiver</li>
							<li>LeftKidney</li>
							<li>RightKidney</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="InfectionBase">
		<defName>MuscleParasites</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>true</scenarioCanAdd>
		<label>muscle parasites</label>
		<makesSickThought>true</makesSickThought>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<tendDuration>120000</tendDuration>
				<disappearsAtTendedCount>5</disappearsAtTendedCount>
			</li>
		</comps>
		<stages>
			<li>
				<painOffset>0.2</painOffset>
				<restFallFactor>2</restFallFactor>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedMuscleParasites</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>Torso</li>
							<li>Head</li>
							<li>LeftArm</li>
							<li>RightArm</li>
							<li>LeftLeg</li>
							<li>RightLeg</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>EncapsulatedMuscleParasites</defName>
		<label>encapsulated pathogen</label>
		<scenarioCanAdd>true</scenarioCanAdd>
		<stages>
			<li>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>MuscleParasites</hediff>
						<mtbDays>90</mtbDays>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>