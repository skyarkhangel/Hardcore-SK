<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="InfectionBase">
		<defName>BrainWorm</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>true</scenarioCanAdd>
		<initialSeverity>0.25</initialSeverity>
		<lethalSeverity>1</lethalSeverity>
		<label>brain worm</label>
		<makesSickThought>true</makesSickThought>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<immunityPerDayNotSick>-0.06</immunityPerDayNotSick>
				<immunityPerDaySick>0.173</immunityPerDaySick>
				<severityPerDayNotImmune>0.16</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.5</min>
					<max>1.5</max>
				</severityPerDayNotImmuneRandomFactor>
				<severityPerDayImmune>-0.333</severityPerDayImmune>
			</li>
			<li Class="HediffCompProperties_TendDuration">
				<tendDuration>80000</tendDuration>
				<severityPerDayTended>-0.12</severityPerDayTended>
			</li>
		</comps>
		<stages>
			<li>
				<label>minor</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.45</minSeverity>
				<label>moderate</label>
				<vomitMtbDays>3</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>60</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.70</minSeverity>
				<label>major</label>
				<vomitMtbDays>1.5</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>CentralPathwayImpairments</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>45</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.85</minSeverity>
				<label>extreme</label>
				<lifeThreatening>true</lifeThreatening>
				<vomitMtbDays>0.75</vomitMtbDays>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>5</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>CentralPathwayImpairments</hediff>
						<mtbDays>10</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Dead</hediff>
						<mtbDays>60</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>ComaForever</hediff>
						<mtbDays>90</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>ComaTimed</hediff>
						<mtbDays>45</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="InfectionBase">
		<defName>HeartWorm</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>true</scenarioCanAdd>
		<label>heart worm</label>
		<makesSickThought>true</makesSickThought>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<tendDuration>120000</tendDuration>
				<disappearsAtTendedCount>5</disappearsAtTendedCount>
			</li>
		</comps>
		<stages>
			<li>
				<painOffset>0.2</painOffset>
				<restFallFactor>2.5</restFallFactor>
				<capMods>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>45</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

