<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>ComaTimed</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>coma</label>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<initialSeverity>1.0</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.0011</severityPerDay>
			</li>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayImmune>-999</severityPerDayImmune>
				<severityPerDayNotImmune>-0.0001</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.1</min>
					<max>649.0</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>awakening</label>
				<minSeverity>0.0</minSeverity>
				<partIgnoreMissingHP>true</partIgnoreMissingHP>
				<painFactor>0.05</painFactor>
				<hungerRateFactor>0.65</hungerRateFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.05</setMax>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Sight</capacity>
						<setMax>0.05</setMax>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<setMax>0.05</setMax>
					</li>
					<li>
						<capacity>Talking</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Eating</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
				<makeImmuneTo>
					<li>SuicidePreparation</li>
					<li>ComaForever</li>
				</makeImmuneTo>
			</li>
			<li>
				<label>deep</label>
				<minSeverity>0.008</minSeverity>
				<partIgnoreMissingHP>true</partIgnoreMissingHP>
				<painFactor>0</painFactor>
				<hungerRateFactor>0.65</hungerRateFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.01</setMax>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Sight</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Talking</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Eating</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
				<makeImmuneTo>
					<li>SuicidePreparation</li>
					<li>ComaForever</li>
				</makeImmuneTo>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Dead</hediff>
						<mtbDays>1200</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

