<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>Migraine</defName>
		<label>migraine</label>
		<scenarioCanAdd>true</scenarioCanAdd>
		<initialSeverity>0.001</initialSeverity>
		<minSeverity>0.001</minSeverity>
		<maxSeverity>0.75</maxSeverity>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.35</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.8</min>
					<max>1.2</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>600</baseTendDurationHours>
				<tendAllAtOnce>true</tendAllAtOnce>
				<severityPerDayTended>-0.8</severityPerDayTended>
			</li>
		</comps>
		<stages>
			<li>
				<label>symptom-free</label>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.1</minSeverity>
				<painOffset>0.25</painOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.225</minSeverity>
				<painOffset>0.35</painOffset>
				<restFallFactor>1.5</restFallFactor>
				<hungerRateFactorOffset>0.95</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.35</minSeverity>
				<painOffset>0.5</painOffset>
				<restFallFactor>3.0</restFallFactor>
				<hungerRateFactorOffset>0.9</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>severe</label>
				<minSeverity>0.475</minSeverity>
				<painOffset>0.7</painOffset>
				<restFallFactor>4.5</restFallFactor>
				<hungerRateFactorOffset>0.85</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.6</minSeverity>
				<painOffset>0.95</painOffset>
				<restFallFactor>6.0</restFallFactor>
				<hungerRateFactorOffset>0.8</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.35</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>