<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="DiseaseBase">
		<defName>Unease</defName>
		<label>feeling uneasy</label>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<initialSeverity>0.4</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>600000</min>
					<max>2700000</max>
				</disappearsAfterTicks>
			</li>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.1</severityPerDay>
			</li>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.1</severityPerDayNotImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.75</min>
					<max>1.25</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
			<li Class="HediffCompProperties_Discoverable">
				<sendLetterWhenDiscovered>false</sendLetterWhenDiscovered>
			</li>
		</comps>
		<stages>
			<li>
				<label>hidden</label>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.3</minSeverity>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.45</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.01</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.6</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>SuicidePreparation</hediff>
						<mtbDays>250.0</mtbDays>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>severe</label>
				<minSeverity>0.75</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>SuicidePreparation</hediff>
						<mtbDays>25.0</mtbDays>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.9</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.20</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>SuicidePreparation</hediff>
						<mtbDays>2.5</mtbDays>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

