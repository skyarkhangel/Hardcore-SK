<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="InfectionBase">
		<defName>Malaria</defName>
		<label>malaria (P. rimparum)</label>
		<lethalSeverity>1</lethalSeverity>
		<makesSickThought>true</makesSickThought>
		<scenarioCanAdd>true</scenarioCanAdd>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<tendDuration>30000</tendDuration>
				<severityPerDayTended>-0.20</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_Immunizable">
				<immunityPerDayNotSick>-0.03</immunityPerDayNotSick>
				<immunityPerDaySick>0.12</immunityPerDaySick>
				<severityPerDayNotImmune>0.137</severityPerDayNotImmune>
				<severityPerDayImmune>-0.27</severityPerDayImmune>
				<severityPerDayNotImmuneRandomFactor>
					<min>0.85</min>
					<max>1.15</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
		</comps>
		<stages>
			<li>
				<label>hidden</label>
				<everVisible>false</everVisible>
			</li>
			<li>
				<minSeverity>0.35</minSeverity>
				<label>minor</label>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedMalaria</hediff>
						<mtbDays>60</mtbDays>
						<partsToAffect>
							<li>LeftLobeLiver</li>
							<li>RightLobeLiver</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.7</minSeverity>
				<label>moderate</label>
				<vomitMtbDays>1.5</vomitMtbDays>
				<painOffset>0.2</painOffset>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedMalaria</hediff>
						<mtbDays>45</mtbDays>
						<partsToAffect>
							<li>LeftLobeLiver</li>
							<li>RightLobeLiver</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>60</mtbDays>
						<partsToAffect>
							<li>LeftLobeLiver</li>
							<li>RightLobeLiver</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.8</minSeverity>
				<label>major</label>
				<vomitMtbDays>1</vomitMtbDays>
				<painOffset>0.25</painOffset>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedMalaria</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>LeftLobeLiver</li>
							<li>RightLobeLiver</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Inflammation</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>LeftLobeLiver</li>
							<li>RightLobeLiver</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>45</mtbDays>
						<partsToAffect>
							<li>LeftLobeLiver</li>
							<li>RightLobeLiver</li>
						</partsToAffect>
						<countToAffect>2</countToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.9</minSeverity>
				<label>extreme</label>
				<lifeThreatening>true</lifeThreatening>
				<vomitMtbDays>0.75</vomitMtbDays>
				<painOffset>0.3</painOffset>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>EncapsulatedMalaria</hediff>
						<mtbDays>15</mtbDays>
						<partsToAffect>
							<li>LeftLobeLiver</li>
							<li>RightLobeLiver</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Inflammation</hediff>
						<mtbDays>5</mtbDays>
						<partsToAffect>
							<li>LeftLobeLiver</li>
							<li>RightLobeLiver</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>SecondaryDamage</hediff>
						<mtbDays>30</mtbDays>
						<partsToAffect>
							<li>LeftLobeLiver</li>
							<li>RightLobeLiver</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>ComaForever</hediff>
						<mtbDays>120</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>ComaTimed</hediff>
						<mtbDays>60</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>EncapsulatedMalaria</defName>
		<label>encapsulated pathogen</label>
		<scenarioCanAdd>true</scenarioCanAdd>
		<stages>
			<li>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Malaria</hediff>
						<mtbDays>120</mtbDays>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>
