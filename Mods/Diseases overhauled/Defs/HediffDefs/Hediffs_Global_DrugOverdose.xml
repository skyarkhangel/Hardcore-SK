<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>DrugOverdose</defName>
		<label>drug overdose</label>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<lethalSeverity>1</lethalSeverity>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-1</severityPerDayNotImmune>
			</li>
			<li Class="HediffCompProperties_Discoverable">
				<sendLetterWhenDiscovered>true</sendLetterWhenDiscovered>
				<discoverLetterLabel>Overdose: {0}</discoverLetterLabel>
				<discoverLetterText>{0} is overdosing!</discoverLetterText>
			</li>
		</comps>
		<stages>
			<li>
				<label>hidden</label>
				<everVisible>false</everVisible>
			</li>
			<li>
				<label>minor</label>
				<everVisible>true</everVisible>
				<minSeverity>0.40</minSeverity>
				<vomitMtbDays>0.60</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.30</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.60</minSeverity>
				<vomitMtbDays>0.30</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.50</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Stupor</hediff>
						<mtbDays>30.0</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.80</minSeverity>
				<deathMtbDays>3.00</deathMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.10</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>ChemicalDamageModerate</hediff>
						<mtbDays>2.5</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Stupor</hediff>
						<mtbDays>15.0</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>ComaTimed</hediff>
						<mtbDays>10.0</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>ComaForever</hediff>
						<mtbDays>30.0</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>

</Defs>