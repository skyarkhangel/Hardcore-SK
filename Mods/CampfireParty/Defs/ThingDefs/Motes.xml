<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="MoteBase" Abstract="True">
    <thingClass>MoteThrown</thingClass>
    <label>Mote</label>
    <category>Mote</category>
    <graphicData>
      <graphicClass>Graphic_Mote</graphicClass>
      <shaderType>Mote</shaderType>
