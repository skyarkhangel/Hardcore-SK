<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence"> <!-- Simple Animal Prosthetics -->
		<success>Always</success>
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>A Dog Said...</modName>
			</li>
			<li Class="PatchOperationReplace"> 
				<xpath>/Defs/ResearchProjectDef[defName = "SimpleAnimalProsthetics"]/baseCost</xpath>
				<value>
					<baseCost>160</baseCost>
				</value>
			</li>
			<li Class="PatchOperationReplace"> 
				<xpath>/Defs/ResearchProjectDef[defName = "SimpleAnimalProsthetics"]/prerequisites</xpath>
				<value>
					<prerequisites>
						<li>SK_MedicineI</li>
					</prerequisites>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence"> <!-- Animal Bionics -->
		<success>Always</success>
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>A Dog Said...</modName>
			</li>

			<li Class="PatchOperationReplace"> 
				<xpath>/Defs/ResearchProjectDef[defName = "AnimalBionics"]/prerequisites</xpath>
				<value>
					<prerequisites>
						<li>SK_BionicsI</li>
						<li>SimpleAnimalProsthetics</li>
					</prerequisites>
				</value>
			</li>			
			<li Class="PatchOperationAdd"> 
				<xpath>/Defs/ResearchProjectDef[defName = "AnimalBionics"]</xpath>
				<value>
					<requiredResearchFacilities>
						<li>MultiAnalyzer</li>
					</requiredResearchFacilities>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence"> <!-- Animal Heal -->
		<success>Always</success>
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>A Dog Said...</modName>
			</li>
			<li Class="PatchOperationReplace"> 
				<xpath>/Defs/ResearchProjectDef[defName = "AnimalHeal"]/baseCost</xpath>
				<value>
					<baseCost>600</baseCost>
				</value>
			</li>
			<li Class="PatchOperationReplace"> 
				<xpath>/Defs/ResearchProjectDef[defName = "AnimalHeal"]/prerequisites</xpath>
				<value>
					<prerequisites>
						<li>SK_MedicineIII</li>
						<li>SimpleAnimalProsthetics</li>
					</prerequisites>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>