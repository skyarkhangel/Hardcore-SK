<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationFindMod">
    <mods>
        <li>Androids</li>
    </mods>
    <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[
                    defName="ChJDroidPrinter" or 
                    defName="ChjDroidHibernationPad"
                    ]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Droids_D2</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/Androids.DroidCraftingDef[defName="Android_BattleDroid"]/requiredResearch</xpath>
                    <value>
		                <requiredResearch>Droids_D3</requiredResearch>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="ChJAndroidPrinter"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Droids_E1</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[
                    defName="AndroidRepairKit" or
                    defName="AndroidRepairParts" or
                    defName="ChjAndroid_ChemfuelGenerator" or
                    defName="ChJAndroidThermalBandages"
                    ]/recipeMaker/researchPrerequisite</xpath>
                    <value>
                        <researchPrerequisite>
                            <li>Droids_E1</li>
                        </researchPrerequisite>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/Androids.AndroidUpgradeDef[
                    defName="Upgrade_DroneCore" or
                    defName="Upgrade_LoverCore"
                    ]/requiredResearch</xpath>
                    <value>
                        <requiredResearch>
                            <li>Droids_E3</li>
                        </requiredResearch>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/Androids.AndroidUpgradeDef[
                    defName="Upgrade_VanometricCell" or
                    defName="Upgrade_MechaniteHive" or
                    defName="Upgrade_BlackBox" or
                    defName="Upgrade_PsychicAttunement"
                    ]/requiredResearch</xpath>
                    <value>
                        <requiredResearch>
                            <li>Droids_E6</li>
                        </requiredResearch>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/Androids.AndroidUpgradeDef[
                    defName="Upgrade_FightingModule" or
                    defName="Upgrade_MedicalModule" or
                    defName="Upgrade_ConstructionModule" or
                    defName="Upgrade_CrafterModule" or
                    defName="Upgrade_AgriculturalModule" or
                    defName="Upgrade_ScienceModule" or
                    defName="Upgrade_DiplomacyModule"
                    ]/requiredResearch</xpath>
                    <value>
                        <requiredResearch>
                            <li>Droids_E2</li>
                        </requiredResearch>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/Androids.AndroidUpgradeDef[
                    defName="Upgrade_HyperweaveSkin" or
                    defName="Upgrade_PlasteelSkin" or
                    defName="Upgrade_DragonScales"
                    ]/requiredResearch</xpath>
                    <value>
                        <requiredResearch>
                            <li>Droids_E5</li>
                        </requiredResearch>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/Androids.AndroidUpgradeDef[
                    defName="Upgrade_TechprofAIModule" or
                    defName="Upgrade_ArchotechAIModule"
                    ]/requiredResearch</xpath>
                    <value>
                        <requiredResearch>
                            <li>Droids_E7</li>
                        </requiredResearch>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/Androids.AndroidUpgradeDef[
                    defName="Upgrade_HulkPhysique" or
                    defName="Upgrade_AgilePhysique" or
                    defName="Upgrade_SuperPhysique"
                    ]/requiredResearch</xpath>
                    <value>
                        <requiredResearch>
                            <li>Droids_E4</li>
                        </requiredResearch>
                    </value>
                </li>
            </operations>
    </match>
    </Operation>

</Patch>