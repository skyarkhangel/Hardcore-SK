<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationFindMod">
    <mods>
        <li>Statue of Colonist</li>
    </mods>
    <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="TMB_StatueOfColonistK"]</xpath>
                    <value>
                        <recipeMaker>
                            <researchPrerequisite>Art_B1</researchPrerequisite>
                        </recipeMaker>
                   </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[
                    defName="TMB_StatueOfColonistKLarge" or 
                    defName="TMB_StatueOfColonistKGrand"
                    ]</xpath>
                    <value>
                        <recipeMaker>
                            <researchPrerequisite>Art_B2</researchPrerequisite>
                        </recipeMaker>
                    </value>
                </li>
            </operations>
    </match>
    </Operation>

</Patch>