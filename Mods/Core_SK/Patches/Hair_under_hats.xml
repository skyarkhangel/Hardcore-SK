<Patch>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[
		defName="Apparel_Bonnet" or 
		defName="Apparell_ArcticWolfHood" or 
		
		defName="Apparel_Tuque" or 
		defName="Apparel_BowlerHat" or 
		defName="Apparel_CowboyHat" or 
		defName="Apparel_PsychicFoilHelmet"
		]/apparel</xpath>
		<value>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <hatRenderedAboveBody>true</hatRenderedAboveBody>
      <hatRenderedBehindHead>false</hatRenderedBehindHead>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[
		defName="Apparel_TribalHeaddress"
		]/apparel</xpath>
		<value>
      <hatRenderedAboveBody>true</hatRenderedAboveBody>
      <hatRenderedBehindHead>false</hatRenderedBehindHead>
		</value>
	</Operation>

</Patch>