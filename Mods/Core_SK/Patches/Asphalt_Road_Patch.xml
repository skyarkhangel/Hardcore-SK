<?xml version="1.0" encoding="utf-8" ?>
<Patch>    

	<!--========== Ancient Roads Patch ==========-->
		
	<Operation Class="PatchOperationSequence">
	    <success>Always</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "BrokenAsphalt"]</xpath>
				<value>
					<costList>
						<ConcreteResource>1</ConcreteResource>
					</costList>	
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "BrokenAsphalt"]</xpath>
				<value>
					<constructEffect>ConstructDirt</constructEffect>	
				</value>
			</li>			
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "BrokenAsphalt"]</xpath>
				<value>
					<designationCategory>NaturalFloors</designationCategory>	
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/TerrainDef[defName = "BrokenAsphalt"]/statBases</xpath>
				<value>
					<WorkToBuild>200</WorkToBuild>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/TerrainDef[defName = "BrokenAsphalt"]/statBases/Beauty</xpath>
				<value>
					<Beauty>0</Beauty>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>