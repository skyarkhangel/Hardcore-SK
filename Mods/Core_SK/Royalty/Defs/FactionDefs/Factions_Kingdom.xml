<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<FactionDef>
		<defName>MedievalKingdom</defName>
		<label>Kingdom</label>
		<pawnSingular>kingdom</pawnSingular>
		<pawnsPlural>kingdom</pawnsPlural>
		<listOrderPriority>31</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<canMakeRandomly>true</canMakeRandomly>
		<mustStartOneEnemy>true</mustStartOneEnemy>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<autoFlee>true</autoFlee>
		<leaderTitle>king</leaderTitle>
		<earliestRaidDays>25</earliestRaidDays>
		<royalFavorLabel>royal favor</royalFavorLabel>
		<royalFavorIconPath>UI/Icons/RoyalFavor</royalFavorIconPath>
		<leaderForceGenerateNewPawn>true</leaderForceGenerateNewPawn>
		<factionNameMaker>NamerFactionKingdom</factionNameMaker>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
		<pawnNameMaker>NamerPersonEmpireEN</pawnNameMaker>
		<pawnNameMakerFemale>NamerPersonEmpireFemaleEN</pawnNameMakerFemale>
		<factionIconPath>World/WorldObjects/Expanding/Kingdom</factionIconPath>	
		<permanentEnemyToEveryoneExcept>
			<li>OutlanderCivil</li>
			<li>TribeCivil</li>
			<li>PlayerTribe</li>
			<li>PlayerColony</li>
			<li>Ancients</li>	  
			<li>PlayerNova</li>
			<li>PlayerExiled</li>
			<li>PlayerNorbal</li>
			<li>PlayerSurvivor</li>
			<li>OrassanPlayerColony</li>
			<li>NuclearColonySurvivor</li>
		</permanentEnemyToEveryoneExcept>
		<techLevel>Medieval</techLevel>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(200, 3)</li>
				<li>(2000, 1.2)</li>
				<li>(4000, 0.8)</li>
				<li>(5000, 0.5)</li>
				<li>(7000, 0.6)</li>
				<li>(10000, 0.4)</li>
			</points>
		</raidCommonalityFromPointsCurve>
		<raidLootMaker>TribeRaidLootMaker</raidLootMaker>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0, 120)</li>
				<li>(2000, 240)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<geneticVariance>0.2</geneticVariance>		
		<backstoryFilters>
			<li>
				<categories>
					<li>Outlander</li>
				</categories>
				<commonality>0.85</commonality>
			</li>
			<li>
				<categories>
					<li>Pirate</li>
				</categories>
				<commonality>0.15</commonality>
			</li>
		</backstoryFilters>
		<hairTags>
			<li>Rural</li>
			<li>Norbal</li>
		</hairTags>
		<colorSpectrum>
			<li>(0.64, 0.42, 0.36)</li>
			<li>(0.47, 0.5, 0.91)</li>
		</colorSpectrum>
		<caravanTraderKinds>
			<li>Caravan_Neolithic_BulkGoods</li>
			<li>Caravan_Neolithic_WarMerchant</li>
			<li>Caravan_Neolithic_Slaver</li>
		</caravanTraderKinds>
		<visitorTraderKinds>
			<li>Visitor_Neolithic_Standard</li>
		</visitorTraderKinds>
		<baseTraderKinds>
			<li>Base_Neolithic_Standard</li>
		</baseTraderKinds>
		<fixedLeaderKinds>
			<li>KingdomHessian</li>
		</fixedLeaderKinds>
		<royalTitleTags>
			<li>KingdomTitle</li>
		</royalTitleTags>
		<allowedArrivalTemperatureRange>-35~40</allowedArrivalTemperatureRange>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<royalTitleInheritanceWorkerClass>RoyalTitleInheritanceWorker</royalTitleInheritanceWorkerClass>
		<royalTitleInheritanceRelations>
			<li>Child</li>
			<li>Grandchild</li>
			<li>GreatGrandchild</li>
			<li>NephewOrNiece</li>
			<li>Spouse</li>
			<li>Sibling</li>
			<li>HalfSibling</li>
			<li>Cousin</li>
			<li>Parent</li>
			<li>UncleOrAunt</li>
		</royalTitleInheritanceRelations>
		<minTitleForBladelinkWeapons>KnightKingdom</minTitleForBladelinkWeapons>
		<apparelStuffFilter>
			<categories>
				<li>Leathers</li>
			</categories>
			<thingDefs>
				<li>Cloth</li>
				<li>WoolMuffalo</li>
				<li>WoolDromedary</li>
				<li>WoolAlpaca</li>
				<li>HempCloth</li>
				<li>WoolSheep</li>
				<li>CopperBar</li>
				<li>Bronze</li>
				<li>Plasteel</li>
			</thingDefs>
		</apparelStuffFilter>
		<pawnGroupMakers>
			<li>
				<kindDef>Combat</kindDef>
				<options>
					<KingdomDesperado>20</KingdomDesperado>
					<KingdomHessian>16</KingdomHessian>
					<KingdomBrigand>15</KingdomBrigand>
					<KingdomExploder>10</KingdomExploder>
					<KingdomKing>3</KingdomKing>
				</options>
			</li>
			<li>
				<kindDef>Peaceful</kindDef>
				<options>
					<KingdomDesperado>20</KingdomDesperado>
					<KingdomHessian>16</KingdomHessian>
					<KingdomBrigand>15</KingdomBrigand>
					<KingdomExploder>10</KingdomExploder>
					<KingdomKing>3</KingdomKing>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<KingdomTrader>1</KingdomTrader>
				</traders>
				<carriers>
					<Muffalo>6</Muffalo>
					<Dromedary>3</Dromedary>
					<Rhinoceros>2</Rhinoceros>
					<Elephant>2</Elephant>
					<Megabadger>1</Megabadger>
					<Horse_Wooly>5</Horse_Wooly>
					<Rhino_Wooly>2</Rhino_Wooly>
					<Horse>7</Horse>
					<Buffalo>4</Buffalo>
					<Bear_Grizzly>2</Bear_Grizzly>
					<Bear_Polar>1</Bear_Polar>
					<Mammoth>2</Mammoth>
				</carriers>
				<guards>
					<KingdomBrigand>25</KingdomBrigand>
					<KingdomDesperado>20</KingdomDesperado>
					<KingdomHessian>10</KingdomHessian>
				</guards>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<KingdomDesperado>20</KingdomDesperado>
					<KingdomHessian>15</KingdomHessian>
					<KingdomBrigand>10</KingdomBrigand>
					<KingdomExploder>7</KingdomExploder>
					<KingdomKing>3</KingdomKing>
				</options>
			</li>
		</pawnGroupMakers>
	</FactionDef>

	<!-- =============================== Names =============================== -->

	<RulePackDef>
		<defName>NamerFactionKingdom</defName>
		<include>
			<li>EmpireNameUtility</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>r_name(p=2)->[Kingdom] of [ofThing]</li>
				<li>r_name(p=2)->The [Kingdom] of [ofThing]</li>
				<li>r_name->The Exodus [Kingdom]</li>
				<li>r_name->The Refugee [Kingdom]</li>
				<li>r_name->The Broken [Kingdom]</li>
				<li>r_name->The Shattered [Kingdom]</li>
				<li>r_name->The Fallen [Kingdom]</li>
				<li>r_name->The [Color] [Kingdom]</li>

				<li>Kingdom(p=4)->Kingdom</li>
				<li>Kingdom->Commonwealth</li>
				<li>Kingdom->Dominion</li>
				<li>Kingdom->Sovereignty</li>

				<li>ofThing(p=4)->[WordImperial]</li>
				<li>ofThing->the Sun</li>
				<li>ofThing->the Moon</li>
				<li>ofThing->the Universe</li>
				<li>ofThing->God</li>
				<li>ofThing->Perfection</li>
				<li>ofThing->Eternity</li>
				<li>ofThing->the Spirit</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

	<RulePackDef>
		<defName>NamerSettlementKingdom</defName>
		<include>
			<li>EmpireNameUtility</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>r_name->[townname_wordgen]</li>
				<li>r_name->[townname_fixed]</li>

				<li>townname_wordgen->[WordImperial]</li>
				<li>townname_wordgen->[WordImperial][townend]</li>
				<li>townend(p=3)->ium</li>
				<li>townend(p=3)->ior</li>
				<li>townend(p=3)->polis</li>
				<li>townend->nor</li>
				<li>townend->lan</li>
				<li>townend->lax</li>
				<li>townend->lix</li>
				<li>townend->lin</li>
				<li>townend->lian</li>
				<li>townend->phrum</li>
				<li>townend->phor</li>
				<li>townend->teor</li>
				<li>townend->ople</li>
				<li>townend->opium</li>
				<li>townend->or</li>
				<li>townend->aetor</li>
				<li>townend->aeum</li>
				<li>townend->aetium</li>
				<li>townend->am</li>
				<li>townend->aeum</li>
			</rulesStrings>
			<rulesFiles>
				<li>townname_fixed->Names/EmpireTown</li>
			</rulesFiles>
		</rulePack>
	</RulePackDef>

</Defs>
