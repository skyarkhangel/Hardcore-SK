        <li>Powder</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_45ACP_FMJ>80</Ammo_45ACP_FMJ>
    </products>
	<skillRequirements>
		<Crafting>5</Crafting>
	</skillRequirements>
