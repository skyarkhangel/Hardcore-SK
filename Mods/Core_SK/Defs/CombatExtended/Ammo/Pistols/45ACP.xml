    <jobString>Making .45 ACP (FMJ) cartridges.</jobString>
    <targetCountAdjustment>80</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Metallic</li>
          </categories>
        </filter>
        <count>8</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Powder</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>SLDBar</li>
        <li>USLDBar</li>
      </categories>
