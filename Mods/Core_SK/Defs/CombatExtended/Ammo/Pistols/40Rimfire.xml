    <iconPath>UI/Icons/ThingCategories/CaliberPistol</iconPath>
	</ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_40Rimfire</defName>
		<label>.40 Rimfire</label>
		<ammoTypes>
			<Ammo_40Rimfire>Bullet_40Rimfire</Ammo_40Rimfire>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="SmallAmmoBase">
		<defName>Ammo_40Rimfire</defName>
		<label>.40 Rimfire cartridge</label>
		<description>Ultra-light cartridge for use in derringer pistols.</description>
	<tradeTags>
		<li>CE_AutoEnableTrade</li>
		<li>CE_AutoEnableCrafting</li>
	</tradeTags>
		<thingCategories>
			<li>Ammo40Rimfire</li>
		</thingCategories>
		<graphicData>
			<texPath>Things/Ammo/Pistol/FMJ</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
		<MarketValue>0.03</MarketValue>
		<Mass>0.02</Mass>
		<Bulk>0.02</Bulk>
		</statBases>
		<ammoClass>FullMetalJacket</ammoClass>
		<cookOffProjectile>Bullet_40Rimfire</cookOffProjectile>
	</ThingDef>
	
	<!-- ================== Projectiles ================== -->

	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_40Rimfire</defName>
		<label>.40 Rimfire bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>102</speed>
			<damageAmountBase>10</damageAmountBase>
			<armorPenetration>0.30</armorPenetration>
			<dropsCasings>true</dropsCasings>
		</projectile>
	</ThingDef>
  
	<!-- ==================== Recipes ========================== -->

  <RecipeDef ParentName="AmmoRecipePistol">
    <defName>MakeAmmo_40Rimfire</defName>
    <label>make .40 Rimfire cartridge x100</label>
    <description>Craft 100 .40 Rimfire cartridges.</description>
    <jobString>Making .40 Rimfire cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <categories>
			<li>SLDBar</li>
			<li>USLDBar</li>
          </categories>
        </filter>
        <count>4</count>
      </li>
      <li>
        <filter>
          <categories>
			<li>HeavyBar</li>
          </categories>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Powder</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>SLDBar</li>
        <li>USLDBar</li>
		<li>HeavyBar</li>
      </categories>
      <thingDefs>
        <li>Powder</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_40Rimfire>100</Ammo_40Rimfire>
    </products>
	<skillRequirements>
		<Crafting>2</Crafting>
	</skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
  </RecipeDef>
	
