      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>SLDBar</li>
        <li>USLDBar</li>
      </categories>
      <thingDefs>
        <li>Carbon</li>
        <li>Powder</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
