	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="AmmoRecipeRifle">
		<defName>MakeAmmo_762x39mmSoviet_FMJ</defName>
		<label>make 7.62x39mm Soviet (FMJ) cartridge x80</label>
		<description>Craft 80 7.62x39mm Soviet (FMJ) cartridges.</description>
		<jobString>Making 7.62x39mm Soviet (FMJ) cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>SLDBar</li>
						<li>USLDBar</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>HeavyBar</li>
					</categories>
				</filter>
				<count>4</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Powder</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
				<li>HeavyBar</li>
			</categories>
			<thingDefs>
				<li>Powder</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_762x39mmSoviet_FMJ>80</Ammo_762x39mmSoviet_FMJ>
		</products>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
