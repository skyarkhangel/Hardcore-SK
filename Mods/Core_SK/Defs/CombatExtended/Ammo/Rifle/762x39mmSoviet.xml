	<!-- ================== Projectiles ================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="Base762x39mmSovietBullet" ParentName="SK_BaseBullet" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>156</speed>
			<dropsCasings>true</dropsCasings>
		</projectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base762x39mmSovietBullet">
		<defName>Bullet_762x39mmSoviet_FMJ</defName>
		<label>7.62mm Soviet bullet (FMJ)</label>
