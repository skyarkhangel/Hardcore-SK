	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="Base20x102mmBullet" ParentName="SK_BaseBullet" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/50CalRound</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>180</speed>
			<dropsCasings>true</dropsCasings>
		</projectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base20x102mmBullet">
		<defName>Bullet_20x102mm_FMJ</defName>
		<label>20x102mm bullet (FMJ)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>55</damageAmountBase>
			<!-- <armorPenetrationBase>1.24</armorPenetrationBase> -->
			<armorPenetrationSharp>24</armorPenetrationSharp>
			<armorPenetrationBlunt>869.04</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base20x102mmBullet">
		<defName>Bullet_20x102mm_HE</defName>
		<label>20x102mm bullet (HE)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>46</damageAmountBase>
			<!-- <armorPenetrationBase>1.38</armorPenetrationBase> -->
			<armorPenetrationSharp>24</armorPenetrationSharp>
			<armorPenetrationBlunt>869.04</armorPenetrationBlunt>
			<secondaryDamage>
				<li>
					<def>Bomb_Secondary</def>
					<amount>39</amount>
				</li>
			</secondaryDamage>
		</projectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base20x102mmBullet">
		<defName>Bullet_20x102mm_Incendiary</defName>
		<label>20x102mm bullet (AP-I)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>45</damageAmountBase>
			<!-- <armorPenetrationBase>1.24</armorPenetrationBase> -->
			<armorPenetrationSharp>40</armorPenetrationSharp>
			<armorPenetrationBlunt>869.04</armorPenetrationBlunt>
			<secondaryDamage>
				<li>
					<def>Flame_Secondary</def>
					<amount>16</amount>
				</li>
			</secondaryDamage>
			<ai_IsIncendiary>true</ai_IsIncendiary>
		</projectile>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="AmmoRecipeHighCaliber">
		<defName>MakeAmmo_20x102mm_FMJ</defName>
		<label>make 20x102mm (FMJ) cartridge x40</label>
		<description>Craft 40 20x102mm (FMJ) cartridges.</description>
		<jobString>Making 20x102mm (FMJ) cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>SLDBar</li>
						<li>USLDBar</li>
					</categories>
				</filter>
				<count>50</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>HeavyBar</li>
					</categories>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Powder</li>
					</thingDefs>
				</filter>
				<count>9</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
				<li>HeavyBar</li>
			</categories>
			<thingDefs>
				<li>Powder</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_20x102mm_FMJ>40</Ammo_20x102mm_FMJ>
		</products>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>

