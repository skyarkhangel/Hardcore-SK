			<texPath>Things/Ammo/RPG/HEAT</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>23.23</MarketValue>
			<Mass>2.6</Mass>
			<Bulk>4</Bulk>
		</statBases>
		<ammoClass>RocketHEAT</ammoClass>
		<cookOffProjectile>Bullet_RPG7Grenade_HEAT</cookOffProjectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<explosionDamage>30</explosionDamage>
				<explosionDamageDef>Bomb</explosionDamageDef>
				<explosionRadius>2.8</explosionRadius>
				<fragRange>6</fragRange>
				<fragments>
					<Fragment_RocketFrag>20</Fragment_RocketFrag>
				</fragments>
			</li>
		</comps>
	</ThingDef>

