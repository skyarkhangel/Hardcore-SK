	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="M72LAWBase" ParentName="AmmoBase" Abstract="True">
		<description>Relatively small, low velocity grenade for use in grenade launchers.</description>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<thingCategories>
			<li>AmmoM72LAW</li>
		</thingCategories>
		<stackLimit>25</stackLimit>
		<cookOffFlashScale>40</cookOffFlashScale>
		<cookOffSound>MortarBomb_Explode</cookOffSound>
		<cookOffSpeed>1.0</cookOffSpeed>
		<cookOffTailSound>ShellCookOff_Ambient</cookOffTailSound>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="M72LAWBase">
		<defName>Ammo_M72LAW</defName>
		<label>M72 LAW grenade</label>
		<description>The M72 LAW is a portable one-shot 66 mm unguided anti-tank weapon.</description>
		<graphicData>
			<texPath>Things/Ammo/RPG/HEAT</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>60</MarketValue>
			<Mass>3.6</Mass>
			<Bulk>4</Bulk>
		</statBases>
		<ammoClass>RocketHEAT</ammoClass>
		<cookOffProjectile>Bullet_M72LAW</cookOffProjectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<explosionDamage>50</explosionDamage>
				<explosionDamageDef>Bomb</explosionDamageDef>
				<explosionRadius>2.8</explosionRadius>
				<fragments>
					<Fragment_RocketFrag>60</Fragment_RocketFrag>
				</fragments>
			</li>
		</comps>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef ParentName="BaseRPG7Grenade">
		<defName>Bullet_M72LAW</defName>
		<label>M72 LAW grenade</label>
		<graphicData>
			<texPath>Things/Projectile/RPG/HEAT</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<explosionRadius>2</explosionRadius>
			<damageDef>Bomb</damageDef>
			<damageAmountBase>100</damageAmountBase>
			<armorPenetrationBase>1.5</armorPenetrationBase>
			<speed>40</speed>
			<ai_IsIncendiary>true</ai_IsIncendiary>
			<soundAmbient>RocketPropelledLoop_Small</soundAmbient>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<explosionDamage>80</explosionDamage>
				<explosionDamageDef>Thermobaric</explosionDamageDef>
				<explosionRadius>3.5</explosionRadius>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
				<fragRange>9</fragRange>
				<fragments>
					<Fragment_RocketFrag>90</Fragment_RocketFrag>
				</fragments>
			</li>
		</comps>
	</ThingDef>

