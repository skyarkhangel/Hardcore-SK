			<ai_IsIncendiary>true</ai_IsIncendiary>
			<shellingProps>
				<damage>0.33</damage>
			</shellingProps>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_Large>40</Fragment_Large>
					<Fragment_Small>80</Fragment_Small>
				</fragments>
			</li>
		</comps>
	</ThingDef>


