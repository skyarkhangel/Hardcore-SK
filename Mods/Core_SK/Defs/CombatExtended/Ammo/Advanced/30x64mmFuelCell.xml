			</categories>
			<thingDefs>
				<li>FSX</li>
				<li>Napalm</li>
				<li>Powder</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_30x64mmFuel_Thermobaric>20</Ammo_30x64mmFuel_Thermobaric>
		</products>
