    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>10</damageAmountBase>
      <speed>200</speed>
      <secondaryDamage>
        <li>
          <def>Bomb_Secondary</def>
          <amount>3</amount>
