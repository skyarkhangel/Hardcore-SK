				<count>30</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>USLDBar</li>
					</categories>
				</filter>
				<count>6</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Hexcell</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
			</categories>
			<thingDefs>
				<li>Hexcell</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_ChargedLaser_Stable>40</Ammo_ChargedLaser_Stable>
		</products>
		<researchPrerequisite>ChargedShot</researchPrerequisite>
	</RecipeDef>

</Defs>