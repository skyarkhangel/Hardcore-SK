		<graphicData>  
			<texPath>Things/Item/Resource/Powder</texPath>
			<graphicClass>Graphic_Single</graphicClass> 
		</graphicData> 
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
