<Defs>

	<ThingDef ParentName="ApparelNeoliticBase">
		<defName>Apparel_WarMask</defName>
		<label>War mask</label>
		<description>A partial mask crafted out of a human's skull. There is something very unsettling about it.</description>
		<graphicData>
			<texPath>Things/Apparel/Apparello/Hats/Animalhats/Skull</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>				
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<costStuffCount>20</costStuffCount>
		<statBases>
			<WorkToMake>3000</WorkToMake>
			<MaxHitPoints>35</MaxHitPoints>
			<Flammability>1.4</Flammability>
			<Mass>0.2</Mass>
			<Bulk>3</Bulk>
			<WornBulk>0</WornBulk>
			<EquipDelay>0.9</EquipDelay>
            <StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
			<StuffEffectMultiplierArmor>0.96</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>0</ArmorRating_Sharp>
			<ArmorRating_Blunt>0</ArmorRating_Blunt>
			<ArmorRating_Heat>0</ArmorRating_Heat>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.03</MoveSpeed>
			<WorkSpeedGlobal>-0.02</WorkSpeedGlobal>
			<SocialImpact>-0.4</SocialImpact>
			<MentalBreakThreshold>0.1</MentalBreakThreshold>
			<PsychicSensitivity>-0.11</PsychicSensitivity>
			<ShootingAccuracyPawn>-0.08</ShootingAccuracyPawn>
			<AimingDelayFactor>0.05</AimingDelayFactor>
			<MeleeHitChance>-0.05</MeleeHitChance>
