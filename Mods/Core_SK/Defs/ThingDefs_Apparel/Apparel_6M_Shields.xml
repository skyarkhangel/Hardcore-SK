<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	
<!-- PAVISE defs and recipe -->	
<ThingDef ParentName="MinifiedBase">
		<defName>Minified_Pavise</defName>
		<label>Pavise</label>	
		<graphicData>
			<texPath>Things/Apparel/MedievalBodyArmorNew/PaviseShield/PaviseShield</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<Mass>3</Mass>
			<Bulk>15</Bulk>
		</statBases>
</ThingDef>
	
<RecipeDef ParentName="cratecraftbase">
		<defName>BuildPavise</defName>
		<label>Build Pavise</label>
		<description>Build a pavise shield with a spike at the bottom which can be planted into the ground. Used as a stationary defense, not equipped.</description>
		<jobString>Building pavise shield.</jobString>
		<workAmount>4500</workAmount>
		<skillRequirements>
			<Crafting>6</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
				<categories>
				<li>Wooden</li>
                  </categories>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
				<categories>
				<li>Leathers</li>
                  </categories>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<products>
			<PaviseCrate>1</PaviseCrate>
		</products>
		<fixedIngredientFilter>
			<categories>
			<li>Wooden</li>
			<li>Leathers</li>
             </categories>
		</fixedIngredientFilter>
		<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>CraftingSpot</li>
		</recipeUsers>
</RecipeDef>

<ThingDef ParentName="CrateBase">
		<defName>PaviseCrate</defName>
		<label>Pavise Crate</label>
		<description>Use this to build catapult that launches explosive/incendiary shells. Must be manned.</description>
		<graphicData>  
			<texPath>Things/Apparel/MedievalBodyArmorNew/PaviseShield/PaviseShield</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<tickerType>Normal</tickerType>
		<stackLimit>1</stackLimit>
		<techLevel>Medieval</techLevel>
		<statBases>
			<MarketValue>800</MarketValue>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1</Flammability>  
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>3</Mass>
			<Bulk>15</Bulk>
		</statBases>
		<thingCategories>
			<li>WeaponCrate</li>
		</thingCategories> 
</ThingDef>
	
	
	
<ThingDef ParentName="SK_BuildingBase">
		<defName>Pavise</defName>
		<label>Pavise</label>
		<graphicData>
			<texPath>Things/Apparel/MedievalBodyArmorNew/PaviseShield/PaviseShield</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.2,1.2)</drawSize>
			<shadowData>
				<volume>(0.5, 1.0, 0.5)</volume>
			</shadowData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>40</pathCost>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.65</fillPercent>
		<minifiedDef>Minified_Pavise</minifiedDef>
		<thingCategories>
			<li>BuildingsSecurity</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Beauty>0</Beauty>
			<WorkToBuild>200</WorkToBuild>
			<Flammability>3</Flammability>
			<Mass>3</Mass>
		</statBases>

		<size>(1,1)</size>
		<building>
			<uninstallWork>500</uninstallWork>
			<ai_chillDestination>false</ai_chillDestination>
			<isInert>true</isInert>
		</building>
		<description>A large wooden shield carried on the back of an archer or crossbowman which is installed in the ground with an attached wooden spike. Uninstall to move carry to a new defensive location.</description>
		<costList>
			<PaviseCrate>1</PaviseCrate>
		</costList>
		<holdsRoof>false</holdsRoof>
		<blockLight>false</blockLight>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<constructEffect>ConstructWood</constructEffect>
		<designationCategory>Security</designationCategory>
		<repairEffect>ConstructWood</repairEffect>
		<rotatable>true</rotatable>
		<neverMultiSelect>true</neverMultiSelect>
		<researchPrerequisites>
			<li>SK_Craftsmanship</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>1</constructionSkillPrerequisite>
	

	
	
	
	</ThingDef>
</Defs>
