			<StuffEffectMultiplierArmor>2.2</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>0</ArmorRating_Sharp>
			<ArmorRating_Blunt>0</ArmorRating_Blunt>
			<ArmorRating_Heat>0.08</ArmorRating_Heat>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.08</MoveSpeed>
			<WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
			<GlobalLearningFactor>0.02</GlobalLearningFactor>
			<NegotiationAbility>0.05</NegotiationAbility>
			<TradePriceImprovement>0.06</TradePriceImprovement>
			<MiningSpeed>0.20</MiningSpeed>
			<GermResistance>0.02</GermResistance>
			<GermContainment>0.02</GermContainment>
		</equippedStatOffsets>
		<generateCommonality>0.01</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Mining/MiningHelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Miner</li>
			</defaultOutfitTags>
			<careIfWornByCorpse>false</careIfWornByCorpse>
		</apparel>
		<thingCategories>
			<li>SpecialHelmetsCat</li>
			<li>SetMiner</li>
		</thingCategories>
	</ThingDef>

