<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Class="SK_Radiation.ThingDef_ItemRAD">
		<defName>Uranium</defName>
		<label>Uranium Ore</label>
		<description>An extremely hard, dense metal. While it is best known for its use powering nuclear reactors, its physical properties also make it excellent in some roles as a tool, weapon, or armor. It has dangerous radition, so wear a hazmat suit for protection!</description>
   	 <graphicData>
		<texPath>Things/Item/Resource/Uranium</texPath>
		<graphicClass>Graphic_Random</graphicClass>
    	</graphicData>
		<thingClass>SK_Radiation.ItemRAD</thingClass>
    		<category>Item</category>
    		<resourceReadoutPriority>Middle</resourceReadoutPriority>
    		<selectable>true</selectable>
    		<altitudeLayer>Item</altitudeLayer>
    		<alwaysHaulable>true</alwaysHaulable>
    		<drawGUIOverlay>true</drawGUIOverlay>
    		<rotatable>false</rotatable>
    		<pathCost>15</pathCost>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<stackLimit>75</stackLimit>
    		<tickerType>Normal</tickerType>
		<statBases>
			<MarketValue>10</MarketValue>
		</statBases>
		<thingCategories>
			<li>RAD</li>
		</thingCategories>
    		<comps>
      		<li>
        			<compClass>CompForbiddable</compClass>
      		</li>
      		<li>
			<compClass>SK_Radiation.CompGlowerItemRAD</compClass>		
			<glowRadius>2</glowRadius>			
			<glowColor>(0,20,0,0)</glowColor>
			
      		</li>
    		</comps>
		 <!-- Damage to living things (Note: 60ticks = 1s) -->
		<DamageAppliedMin>1</DamageAppliedMin>
		<DamageAppliedMax>1</DamageAppliedMax>
		<DamageApplyCounter>600</DamageApplyCounter>
		<!-- Damage to self -->
		<DamageAppliedSelfMin>0</DamageAppliedSelfMin>
		<DamageAppliedSelfMax>0</DamageAppliedSelfMax>
		<DamageApplySelfCounter>1100</DamageApplySelfCounter>
		<DamageDefName>Radiation</DamageDefName>
	</ThingDef>

	<ThingDef Class="SK_Radiation.ThingDef_ItemRAD">
		<defName>HEU</defName>
		<label>Enriched Uranium</label>
		<description>U-235 is an extremely radioactive resource. It is used for powering nuclear plants as a fuel source. Wear a hazmat suit to protect against the dangerous radiation!</description>
    	<graphicData>
		<texPath>Things/Item/Resource/HEU</texPath>
		<graphicClass>Graphic_Single</graphicClass>
    	</graphicData>
		<thingClass>SK_Radiation.ItemRAD</thingClass>
    		<category>Item</category>
    		<resourceReadoutPriority>Middle</resourceReadoutPriority>
    		<selectable>true</selectable>
    		<altitudeLayer>Item</altitudeLayer>
    		<alwaysHaulable>true</alwaysHaulable>
    		<drawGUIOverlay>true</drawGUIOverlay>
    		<rotatable>false</rotatable>
    		<pathCost>15</pathCost>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
    		<tickerType>Normal</tickerType>
		<useHitPoints>true</useHitPoints>
		<stackLimit>15</stackLimit>
		<statBases>
			<MarketValue>200</MarketValue>
		</statBases>
		<thingCategories>
			<li>RAD</li>
		</thingCategories>
    		<comps>
      		<li>
        			<compClass>CompForbiddable</compClass>
      		</li>
      		<li>
			<compClass>SK_Radiation.CompGlowerItemRAD</compClass>		
			<glowRadius>4</glowRadius>			
			<glowColor>(0,20,0,0)</glowColor>
		
      		</li>
    		</comps>
		<!-- Damage to living things (Note: 60ticks = 1s) -->
