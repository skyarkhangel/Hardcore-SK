<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--========================= Doors =============================-->
	<ThingDef ParentName="BuildingBase"
        		Name="DoorGlassBase"
        		Abstract="True">
		<thingClass>Building_Door</thingClass>
		<category>Building</category>
		<altitudeLayer>DoorMoveable</altitudeLayer>
		<fillPercent>1</fillPercent>
		<useHitPoints>true</useHitPoints>
		<stuffCategories>
			<li>Glass</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>0</Flammability>
		</statBases>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<selectable>true</selectable>
		<tickerType>Normal</tickerType>
		<size>(1,1)</size>
		<rotatable>false</rotatable>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<designationCategory>Structure</designationCategory>
		<holdsRoof>true</holdsRoof>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<blockLight>false</blockLight>
		<drawerType>RealtimeOnly</drawerType>
		<building>
			<soundDoorOpenPowered>Door_OpenPowered</soundDoorOpenPowered>
			<soundDoorClosePowered>Door_ClosePowered</soundDoorClosePowered>
			<soundDoorOpenManual>Door_OpenManual</soundDoorOpenManual>
			<soundDoorCloseManual>Door_CloseManual</soundDoorCloseManual>
			<canPlaceOverWall>true</canPlaceOverWall>
			<ai_chillDestination>false</ai_chillDestination>
			<blueprintClass>Blueprint_Door</blueprintClass>
			<blueprintGraphicData>
				<texPath>Things/Building/Door/Door_Blueprint</texPath>
			</blueprintGraphicData>
		</building>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
	</ThingDef>
	<ThingDef ParentName="DoorGlassBase">
		<defName>AutoDoorGlass</defName>
		<label>autodoor</label>
		<description>Divides rooms. Powered operation allows people to move through the door without slowing down. Allows light to pass through.</description>
		<blockLight>false</blockLight>
		<graphicData>
			<texPath>Things/Building/Other/DoorGlass_Mover</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconPath>Things/Building/Other/DoorGlass_Icon</uiIconPath>
		<statBases>
			<MaxHitPoints>320</MaxHitPoints>
			<MarketValue>10</MarketValue>
			<WorkToBuild>350</WorkToBuild>
			<Flammability>0</Flammability>
			<Beauty>1</Beauty>
		</statBases>
		<stuffCategories>
			<li>Glass</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<costList>
			<ComponentIndustrial>2</ComponentIndustrial>
			<ElectronicComponents>2</ElectronicComponents>
			<Plasteel>5</Plasteel>
		</costList>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>50</basePowerConsumption>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<!--filthLeaving>BrokenGlass</filthLeaving-->
		<researchPrerequisites>
			<li>Autodoors</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	</ThingDef>
	<ThingDef ParentName="DoorGlassBase">
		<defName>DoorGlass</defName>
		<label>door</label>
		<description>Divides rooms. Allows light to pass through.</description>
		<blockLight>false</blockLight>
		<graphicData>
			<texPath>Things/Building/Other/DoorGlass_Mover</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconPath>Things/Building/Other/DoorGlass_Icon</uiIconPath>
		<statBases>
			<MaxHitPoints>320</MaxHitPoints>
			<MarketValue>10</MarketValue>
			<WorkToBuild>350</WorkToBuild>
			<Flammability>0</Flammability>
			<Beauty>1</Beauty>
		</statBases>
		<stuffCategories>
			<li>Glass</li>
		</stuffCategories>
		<costStuffCount>15</costStuffCount>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<!--filthLeaving>BrokenGlass</filthLeaving-->
		<researchPrerequisites>
			<li>Construction_B3</li>
		</researchPrerequisites>
	</ThingDef>
	<!--========================= Walls =============================-->
	<ThingDef ParentName="BuildingBase" Name="Window">
		<defName>Window</defName>
		<label>window</label>
		<thingClass>Building</thingClass>
		<category>Building</category>
		<description>It's like a wall but it lets light through.</description>
		<graphicData>
			<texPath>Things/Building/Linked/Wall</texPath>
			<graphicClass>Graphic_Appearances</graphicClass>
			<linkType>CornerFiller</linkType>
			<linkFlags>
				<li>Wall</li>
				<li>Rock</li>
			</linkFlags>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
				<edgeTop>Damage/Edge</edgeTop>
				<edgeBot>Damage/Edge</edgeBot>
				<edgeLeft>Damage/Edge</edgeLeft>
				<edgeRight>Damage/Edge</edgeRight>
			</damageData>
		</graphicData>
		<uiIconPath>Things/Building/Other/Window</uiIconPath>
		<statBases>
			<MaxHitPoints>600</MaxHitPoints>
			<MarketValue>15.2</MarketValue>
			<WorkToBuild>150</WorkToBuild>
			<Flammability>0</Flammability>
			<Beauty>1</Beauty>
		</statBases>
		<costStuffCount>15</costStuffCount>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<altitudeLayer>Building</altitudeLayer>
		<blockWind>true</blockWind>
		<passability>Impassable</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>1</fillPercent>
		<coversFloor>true</coversFloor>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<tickerType>Never</tickerType>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<holdsRoof>true</holdsRoof>
		<designationCategory>Structure</designationCategory>
		<staticSunShadowHeight>9.0</staticSunShadowHeight>
		<blockLight>false</blockLight>
		<!--Important-->
		<canOverlapZones>false</canOverlapZones>
		<stuffCategories>
			<li>Glass</li>
		</stuffCategories>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<building>
			<isInert>true</isInert>
			<canPlaceOverWall>true</canPlaceOverWall>
			<ai_chillDestination>false</ai_chillDestination>
			<blueprintGraphicData>
				<texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
			</blueprintGraphicData>
		</building>
		<researchPrerequisites>
			<li>Construction_B3</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>
