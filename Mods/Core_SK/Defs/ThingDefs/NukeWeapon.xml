<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

<ThingDef Name="NukeBullet" Abstract="True">
	<category>Projectile</category>
	<tickerType>Normal</tickerType>
	<altitudeLayer>Projectile</altitudeLayer>
	<thingClass>TurretCollection.Projectile_NukeBullet</thingClass>
	<useHitPoints>false</useHitPoints>		
	<neverMultiSelect>True</neverMultiSelect>
	<graphicData>
	  <shaderType>Transparent</shaderType>
	</graphicData>
</ThingDef>

<!-- ============================================== -->

  <ThingDef ParentName="NukeBullet">
    <defName>Bullet_Nuke</defName>
    <label>Nuclear Warhead</label>
	<graphicData>
		<texPath>Things/Projectile/SpotlightInv</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
    <projectile>
		<flyOverhead>true</flyOverhead>
		<damageDef>Stun</damageDef>
		<DamageAmountBase>0</DamageAmountBase>
		<Speed>1000</Speed>
	</projectile>
  </ThingDef>

  <ThingDef ParentName="BaseGun">
		<defName>Weapon_TacticalNuclearStrike</defName>
		<label>Tactical Nuclear Strike</label>
		<description>A device with a code giving you access to a tactical nuclear missile onboard with a combat supplier. You can use this device to order a tactical nuclear strike at any time. This item is a one time use. The warhead can't reach the target if it is inside of a mountain.</description>
	<graphicData>
		<texPath>Things/Building/Security/NukeLauncher</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<soundInteract>NukeReady</soundInteract>
    <canBeSpawningInventory>false</canBeSpawningInventory>
    <statBases>
      <MarketValue>10000</MarketValue>
    </statBases>
		<verbs>
		   <li>
			<verbClass>Verb_ShootOneUse</verbClass>
        	<hasStandardCommand>true</hasStandardCommand>
			<projectileDef>Bullet_Nuke</projectileDef>
			<warmupTicks>240</warmupTicks>
            <range>9999</range>
			<forcedMissRadius>3</forcedMissRadius>
			<burstShotCount>1</burstShotCount>
			<onlyManualCast>true</onlyManualCast>
			<soundCast>NukeLaunch</soundCast>
			<targetParams>
			  <canTargetLocations>true</canTargetLocations>
			</targetParams>
		   </li>
		</verbs>
	</ThingDef>

</ThingDefs>