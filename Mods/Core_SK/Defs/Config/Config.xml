<?xml version="1.0" encoding="utf-8" ?>
<Defs>
		<!-- Hardcore SK secret contant values -->
	<SK.Config>
		<defName>Config</defName>
		
		<!-- Raid Helper constants -->
		<!-- Suitable values: 100 - 300. Higher value increase the delay between raids -->
		<RaidWeightDelay>200</RaidWeightDelay>
		<!-- Shifting RaidWeightDelay value in days. Default: 0  Suit values: -4 - 4 -->
		<RaidDaysDelay>0</RaidDaysDelay>
		<!-- Shifting minimal variation in days. Default: -2  Suit values: -4 - 0 -->
		<RaidDaysVariationMin>-2</RaidDaysVariationMin>
		<!-- Shifting maximum variation in days. Should be higher then min value. Default: 4  Suit values: 0 - 4 -->
		<RaidDaysVariationMax>4</RaidDaysVariationMax>
		<!-- Raid point multiplier. Default: 1.9 (No multiplier).  Suit values: 0.50 - 2.00  -->
		<RaidPointsMultiplier>1.0</RaidPointsMultiplier>
		<!-- Chance to be attacked by double raid. Default: 0.2  Suit values: 0 - 0.25  -->
		<RaidDoubleChance>0.2</RaidDoubleChance>
		<!-- Chance to drop raid with landing. Default: 0.05  Suit values: 0.01 - 0.05  -->
		<DefaultRaidLandingChance>0.05</DefaultRaidLandingChance>
		<!-- Max chance to drop raid with landing. Default: 0.20 Should be higher then default value. Suit values: 0.01 - 0.05  -->
		<MaxRaidLandingChance>0.20</MaxRaidLandingChance>

		<!-- DropFixer constants -->
		<!-- 0.00 - 1.00 Chance to instant destroy ammo while looting -->
		<ChanceToInstantDestroyAmmo>0.2</ChanceToInstantDestroyAmmo>
		<!-- 0.00 - 1.00 Chance to instant destroy item (weapon) while looting -->
		<ChanceToInstantDestroyEnemyItem>0.05</ChanceToInstantDestroyEnemyItem>
		<!-- 0.00 - 1.00 Chance to damage looted item by deterioration -->
		<ChanceToDamageEnemyItem>0.25</ChanceToDamageEnemyItem>
		<!-- 0 - 100 Item take a deterioration damage -->
		<MinAmountDeterioration>10</MinAmountDeterioration>
		<!-- 0 - 100. Should be bigger then Min value. -->
		<MaxAmountDeterioration>50</MaxAmountDeterioration>
		
	</SK.Config>
</Defs>