	<IncidentDef Name="SK_DiseaseIncidentBase" Abstract="True">
		<workerClass>IncidentWorker_DiseaseHuman</workerClass>
		<earliestDay>30</earliestDay>
		<minRefireDays>15</minRefireDays>
		<category>DiseaseHuman</category>
		<targetTags>
