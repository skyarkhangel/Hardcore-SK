<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<TerrainDef>
		<defName>SoilRich</defName>
		<label>rich soil</label>
		<texturePath>Terrain/Surfaces/SoilRich</texturePath>
		<description>Soil that has been enriched with Fertilizer to improve crop growth.
Fertility: 150%.</description>
		<edgeType>FadeRough</edgeType>
		<renderPrecedence>335</renderPrecedence>
		<pathCost>10</pathCost>
		<statBases>
			<WorkToBuild>1800</WorkToBuild>
			<Beauty>0</Beauty>
			<Cleanliness>-1</Cleanliness>
		</statBases>
		<affordances>
			<li>Light</li>
			<li>Heavy</li>
			<li>GrowSoil</li>
			<li>Diggable</li>
		</affordances>
		<terrainFilthDef>FilthDirt</terrainFilthDef>
		<fertility>1.5</fertility>
		<takeFootprints>True</takeFootprints>
	</TerrainDef>

  <TerrainDef>
    <defName>Sand</defName>
    <label>sand</label>
	<description>Sand is finely divided rock and mineral particles. Naturally found on beaches and deserts.
Beauty: -1.</description>
    <texturePath>Terrain/Surfaces/Sand</texturePath>
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>350</renderPrecedence>
    <pathCost>20</pathCost>
    <statBases>
      <Beauty>-1</Beauty>
	  <Cleanliness>-1</Cleanliness>
      <WorkToBuild>1800</WorkToBuild>
    </statBases>
    <scatterType>SoftDry</scatterType>
    <affordances>
      <li>Light</li>
      <li>Heavy</li>
      <li>Diggable</li>
    </affordances>
    <terrainFilthDef>FilthSand</terrainFilthDef>
    <fertility>0.06</fertility>
    <takeFootprints>True</takeFootprints>
  </TerrainDef>


  <TerrainDef>
    <defName>Mud</defName>
    <label>mud</label>
    <texturePath>Terrain/Surfaces/Mud</texturePath>
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>330</renderPrecedence>
    <pathCost>30</pathCost>
    <statBases>
      <Beauty>-2</Beauty>
      <Cleanliness>-2</Cleanliness>
    </statBases>
    <affordances>
      <li>Undefined</li>
	  <li>Diggable</li>
    </affordances>
    <terrainFilthDef>FilthDirt</terrainFilthDef>
    <fertility>0</fertility>
    <takeFootprints>True</takeFootprints>
    <acceptFilth>false</acceptFilth>
    <avoidWander>true</avoidWander>
    <driesTo>Soil</driesTo>
    <smoothedTerrain>BridgeMud</smoothedTerrain>
  </TerrainDef>

  <TerrainDef>
    <defName>Marsh</defName>
    <label>marsh</label>
    <texturePath>Terrain/Surfaces/Marshnew</texturePath>
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>325</renderPrecedence>
    <pathCost>45</pathCost>
    <statBases>
      <Beauty>-2</Beauty>
      <Cleanliness>-3</Cleanliness>
    </statBases>
    <terrainFilthDef>FilthDirt</terrainFilthDef>
