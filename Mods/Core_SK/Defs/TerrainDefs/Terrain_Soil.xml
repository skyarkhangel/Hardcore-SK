<TerrainDefs>

	<TerrainDef>
		<defName>SoilRich</defName>
		<label>Rich Soil</label>
		<texturePath>Terrain/Surfaces/SoilRich</texturePath>
		<Description>Soil that has been enriched with Compost to improve crop growth.
Fertility: 150%.</Description>
		<EdgeType>FadeRough</EdgeType>
		<RenderPrecedence>335</RenderPrecedence>
		<PathCost>10</PathCost>
		<statBases>
			<WorkToMake>1800</WorkToMake>
			<Beauty>0</Beauty>
			<Cleanliness>-1</Cleanliness>
		</statBases>
		<affordances>
			<li>Light</li>
			<li>Heavy</li>
			<li>GrowSoil</li>
			<li>Diggable</li>
		</affordances>
		<TerrainFilthDef>FilthDirt</TerrainFilthDef>
		<Fertility>1.5</Fertility>
		<TakeFootprints>True</TakeFootprints>
		<terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
		<constructEffect>ConstructDirt</constructEffect>
		<designationCategory>OutsideFloors</designationCategory>
		<CostList>
			<Compost>10</Compost>
		</CostList>
		<researchPrerequisites><li>SK_SoilFertillizationI</li></researchPrerequisites>
	</TerrainDef>


