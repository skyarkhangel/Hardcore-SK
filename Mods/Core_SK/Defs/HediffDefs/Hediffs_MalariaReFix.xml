<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef Name="InfectionBase" Abstract="True">
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <comps>
      <li>
        <compClass>HediffComp_Discoverable</compClass>
        <sendLetterWhenDiscovered>true</sendLetterWhenDiscovered>
      </li>
    </comps>
  </HediffDef>

  <HediffDef Name="InfectionTreatableBase" ParentName="InfectionBase" Abstract="True">
    <comps>
      <li>
        <compClass>HediffComp_Tendable</compClass>
        <tendDuration>30000</tendDuration>
      </li>
    </comps>
  </HediffDef>

  <HediffDef ParentName="InfectionTreatableBase">
    <defName>Malaria</defName>
    <label>Malaria</label>
    <comps>
      <li>
        <compClass>HediffComp_Immunizable</compClass>
        <immunityPerDayNotSick>-0.01</immunityPerDayNotSick>
        <immunityPerDaySick>0.15</immunityPerDaySick>
        <severityPerDayNotImmune>0.05</severityPerDayNotImmune>
        <severityPerDayImmune>-0.05</severityPerDayImmune>
        <severityPerDayTendedOffset>-0.06</severityPerDayTendedOffset>
      </li>
    </comps>
    <stages>
      <li>
        <label>Minor</label>
        <everVisible>false</everVisible>
      </li>
      <li>
        <minSeverity>0.4</minSeverity>
        <label>Minor</label>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.55</minSeverity>
        <label>Major</label>
        <vomitMtbDays>1.5</vomitMtbDays>
        <painOffset>0.3</painOffset>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.12</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.08</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.7</minSeverity>
        <label>Extreme</label>
        <lifeThreatening>true</lifeThreatening>
        <vomitMtbDays>0.75</vomitMtbDays>
        <painOffset>0.3</painOffset>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.22</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.85</minSeverity>
        <label>Extreme</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>