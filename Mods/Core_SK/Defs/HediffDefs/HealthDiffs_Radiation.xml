<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Nonlocal injuries -->

  <HediffDef>
	<hediffClass>HediffWithComps</hediffClass>
	<defName>Rad</defName>
	<label>Radiation</label>
	<naturallyHealed>true</naturallyHealed>
	<defaultLabelColor>(0.35, 0.8, 0.35)</defaultLabelColor>
	<lethalSeverity>1</lethalSeverity>
	<comps>
	  <li>
	    <compClass>HediffComp_Immunizable</compClass>
	    <severityPerDayNotImmune>-0.02</severityPerDayNotImmune>
	  </li>
	</comps>
      <stages>
        <li>
          <label>initial</label>
          <painOffset>0.01</painOffset>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <offset>-0.01</offset>
              </li>
            </capMods>
        </li>
        <li>
          <label>minor</label>
          <minSeverity>0.1</minSeverity>
          <painOffset>0.1</painOffset>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <offset>-0.10</offset>
              </li>
            </capMods>
        </li>
        <li>
          <label>serious</label>
          <minSeverity>0.35</minSeverity>
          <vomitMtbDays>1.5</vomitMtbDays>
          <painOffset>0.25</painOffset>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <offset>-0.20</offset>
              </li>
            </capMods>
        </li>
        <li>
          <label>extreme</label>
          <minSeverity>0.62</minSeverity>
          <vomitMtbDays>0.5</vomitMtbDays>
          <lifeThreatening>true</lifeThreatening>
          <painOffset>0.60</painOffset>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <offset>-0.50</offset>
              </li>
            </capMods>
        </li>
        <li>
          <label>deadly</label>
          <minSeverity>0.99</minSeverity>
          <lifeThreatening>true</lifeThreatening>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <setMax>0</setMax>
              </li>
            </capMods>
        </li>
      </stages>
  </HediffDef>

</Defs>
