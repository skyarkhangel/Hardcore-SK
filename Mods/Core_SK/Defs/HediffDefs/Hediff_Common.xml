<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef ParentName="InfectionBase">
    <hediffClass>HediffWithComps</hediffClass>
    <initialSeverity>0.001</initialSeverity>
	<makesSickThought>true</makesSickThought>
	<makesAlert>true</makesAlert>

		<defName>Common_Cold</defName>
		<label>Common Cold</label>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>120000</min>
					<max>300000</max>
				</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<vomitMtbDays>0.5</vomitMtbDays>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
					 <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.1</offset>
                    </li>
					<li>
                        <capacity>Moving</capacity>
                        <offset>-0.3</offset>
                   </li>
				</capMods>
			</li>
		</stages>
	</HediffDef>


	<HediffDef ParentName="InfectionBase">
    <defName>StrepThroat</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>strep throat</label>
    <makesSickThought>true</makesSickThought>
    <tendable>true</tendable>
	<makesAlert>true</makesAlert>
	    <stages>
			<li>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
					 <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.1</offset>
                    </li>
                    <li>
                        <capacity>Talking</capacity>
                        <offset>-0.9</offset>
                    </li>
				</capMods>
			</li>
		</stages>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <tendDuration>60000</tendDuration>
        <disappearsAtTendedCount>5</disappearsAtTendedCount>
      </li>
    </comps>
  </HediffDef>
  
  
	<HediffDef ParentName="InfectionBase">
    <defName>Earache</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Ear ache</label>
    <makesSickThought>true</makesSickThought>
    <tendable>true</tendable>
	<makesAlert>true</makesAlert>
	    <stages>
			<li>
				<painOffset>0.2</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
					 <li>
                        <capacity>Sight</capacity>
                        <offset>-0.1</offset>
                    </li>
                    <li>
                        <capacity>Hearing</capacity>
                        <offset>-0.4</offset>
                    </li>
				</capMods>
			</li>
		</stages>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <tendDuration>100000</tendDuration>
        <disappearsAtTendedCount>5</disappearsAtTendedCount>
      </li>
    </comps>
  </HediffDef>
  
  
    <HediffDef ParentName="InfectionBase">
    <defName>Fever</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <label>fever</label>
    <makesSickThought>true</makesSickThought>
    <tendable>true</tendable>
	<comps>
		<li Class="HediffCompProperties_Disappears">
			<disappearsAfterTicks>
				<min>150000</min>
				<max>600000</max>
			</disappearsAfterTicks>
		</li>
		<li Class="HediffCompProperties_TendDuration">
			<tendDuration>40000</tendDuration>
			<disappearsAtTendedCount>3</disappearsAtTendedCount>
         </li>
		</comps>
    <stages>
      <li>
        <painOffset>0.05</painOffset>
		<restFallFactor>2</restFallFactor>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.1</offset>
          </li>
		  <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
  
    <HediffDef ParentName="InfectionBase">
    <defName>Ebola</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <label>ebola</label>
    <makesSickThought>true</makesSickThought>
    <lethalSeverity>1</lethalSeverity>
    <tendable>true</tendable>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <tendDuration>30000</tendDuration>
        <severityPerDayTended>-0.35</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Immunizable">
        <immunityPerDayNotSick>-0.02</immunityPerDayNotSick>
        <immunityPerDaySick>0.3</immunityPerDaySick>
        <severityPerDayNotImmune>0.5</severityPerDayNotImmune>
        <severityPerDayImmune>-0.2</severityPerDayImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>minor-hidden</label>
        <everVisible>false</everVisible>
      </li>
      <li>
        <minSeverity>0.333</minSeverity>
        <label>minor</label>
		<painOffset>0.05</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.666</minSeverity>
        <label>major</label>
        <vomitMtbDays>1.5</vomitMtbDays>
		<painOffset>0.25</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.833</minSeverity>
        <label>extreme</label>
        <lifeThreatening>true</lifeThreatening>
        <vomitMtbDays>0.75</vomitMtbDays>
        <painOffset>0.50</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.40</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>-0.30</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.30</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.30</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
