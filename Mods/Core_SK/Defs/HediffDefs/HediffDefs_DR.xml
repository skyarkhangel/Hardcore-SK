	<HediffDef ParentName="InjuryBaseDR">
		<defName>Crush</defName>
		<label>Crush</label>
		<naturallyHealed>true</naturallyHealed>
		<comps>
			<li>
				<compClass>HediffComp_Tendable</compClass>
				<labelTreatedWell>Bandaged</labelTreatedWell>
