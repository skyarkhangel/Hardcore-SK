<?xml version="1.0" encoding="utf-8" ?>
<HediffDefs>

<HediffDef ParentName="DiseaseBase">

	<defName>JTFieldSurgeryPain</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>surgical pain</label>
	<initialSeverity>0.01</initialSeverity>
	<lethalSeverity>2</lethalSeverity>
	<comps>
		<li>
			<compClass>HediffComp_Immunizable</compClass>
			<severityPerDayNotImmune>-0.16</severityPerDayNotImmune>
			<severityPerDayNotImmuneRandomFactor>
				<min>0.7</min>
				<max>1.3</max>
				</severityPerDayNotImmuneRandomFactor>
			</li>
	</comps>
    <stages>
		<li>
			<minSeverity>0.01</minSeverity>
			<painOffset>0.1</painOffset>
			<label>trivial</label>
			</li>
		<li>
			<minSeverity>0.2</minSeverity>
			<painOffset>0.2</painOffset>
			<label>minor</label>
			<capMods>
				<li>
					<capacity>Consciousness</capacity>
					<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
		<li>
			<minSeverity>0.4</minSeverity>
			<painOffset>0.4</painOffset>
			<label>moderate</label>
			<capMods>
				<li>
					<capacity>Consciousness</capacity>
					<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
		<li>
			<minSeverity>0.6</minSeverity>
			<painOffset>0.6</painOffset>
			<label>severe</label>
			<capMods>
				<li>
					<capacity>Consciousness</capacity>
					<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
		<li>
			<minSeverity>0.8</minSeverity>
			<painOffset>0.8</painOffset>
			<label>debilitating</label>
			<capMods>
				<li>
					<capacity>Consciousness</capacity>
					<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
	</stages>
</HediffDef>

</HediffDefs>