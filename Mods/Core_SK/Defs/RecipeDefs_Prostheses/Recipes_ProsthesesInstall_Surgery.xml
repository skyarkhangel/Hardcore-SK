<!-- Cosmetic: Ear -->
    <RecipeDef ParentName="SurgeryFlesh">
        <defName>RepairCosmeticEar</defName>
        <label>Repair ear</label>
        <description>Repair ear</description>
        <workerClass>Recipe_InstallNaturalBodyPart</workerClass>
        <jobString>Repairing ear</jobString>
        <workAmount>3000</workAmount>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>2</count>
            </li>
			 <li>
				<filter>
				   <thingDefs>
					  <li>Biomatter</li>
				   </thingDefs>
				</filter>
				<count>20</count>
			 </li>
			 <li>
				<filter>
				   <thingDefs>
					  <li>Plastic</li>
				   </thingDefs>
				</filter>
				<count>15</count>
			 </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
            </categories>
				   <thingDefs>
					  <li>Plastic</li>
					  <li>Biomatter</li>
				   </thingDefs>
      <exceptedThingDefs>
        <li>HerbalMedicine</li>
      </exceptedThingDefs>
        </fixedIngredientFilter>
        <skillRequirements>
            <li>
                <skill>Medicine</skill>
                <minLevel>9</minLevel>
            </li>
        </skillRequirements>
        <appliedOnFixedBodyParts>
            <li>LeftEar</li>
            <li>RightEar</li>
        </appliedOnFixedBodyParts>
    <researchPrerequisite>VitalsMonitor</researchPrerequisite>
    </RecipeDef>

