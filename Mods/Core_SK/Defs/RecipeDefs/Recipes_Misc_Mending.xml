<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef Abstract="True" Name="MendingBase">
    <workerClass>Mending.Worker</workerClass>
    <jobString>Mending.</jobString>
    <workSkill>Crafting</workSkill>
	<workSpeedStat>TailoringSpeed</workSpeedStat>
    <recipeUsers>
      <li>TableMending</li>
    </recipeUsers>
	<workSkillLearnFactor>0.7</workSkillLearnFactor>
  </RecipeDef>

  <RecipeDef ParentName="MendingBase">
    <defName>MendSimpleApparel</defName>
    <label>mend simple apparel</label>
    <description>Mend simple apparel.</description>
    <workAmount>80</workAmount>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Apparel</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Apparel</li>
      </categories>
      <disallowedCategories>
        <li>Headgear</li>
      </disallowedCategories>
      <disallowedThingDefs>
        <li>Apparel_PowerArmor</li>
        <li>Apparel_ShieldBelt</li> 
      </disallowedThingDefs>
    </fixedIngredientFilter>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
  </RecipeDef>

  <RecipeDef ParentName="MendingBase">
    <defName>MendComplexApparel</defName>
    <label>mend complex apparel</label>
    <description>Mend armor.</description>
    <workAmount>140</workAmount>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Headgear</li>
          </categories>
          <thingDefs>
            <li>Apparel_PowerArmor</li>
            <li>Apparel_ShieldBelt</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Headgear</li>
      </categories>
      <thingDefs>
        <li>Apparel_PowerArmor</li>
        <li>Apparel_ShieldBelt</li>
      </thingDefs>
    </fixedIngredientFilter>
		<skillRequirements>
			<Crafting>8</Crafting>
		</skillRequirements>
  </RecipeDef>

  <RecipeDef ParentName="MendingBase">
    <defName>MendSimpleWeapon</defName>
    <label>repair simple weapon</label>
    <description>Repair weapon.</description>
    <jobString>Repairing.</jobString>
    <workAmount>100</workAmount>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>WeaponsMelee</li>
            <li>SurvivalTools</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>WeaponsMelee</li>
        <li>SurvivalTools</li>
      </categories>
    </fixedIngredientFilter>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
  </RecipeDef>

  <RecipeDef ParentName="MendingBase">
    <defName>MendComplexWeapon</defName>
    <label>repair complex weapon</label>
    <description>Repair weapon.</description>
    <jobString>Repairing.</jobString>
    <workAmount>250</workAmount>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>WeaponsRanged</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>WeaponsRanged</li>
      </categories>
    </fixedIngredientFilter>
		<skillRequirements>
			<Crafting>14</Crafting>
		</skillRequirements>
  </RecipeDef>

  <RecipeDef>
    <workerClass>Mending.Worker</workerClass>
    <defName>RecycleApparel</defName>
    <label>recycle apparel</label>
    <description>Recycle apparel into their basic components.</description>
    <jobString>Recycling.</jobString>
    <workAmount>75</workAmount>
    <workSkill>Crafting</workSkill>
	<workSpeedStat>TailoringSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Apparel</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Apparel</li>
      </categories>
      <disallowedThingDefs> 
        <li>Apparel_ShieldBelt</li> 
      </disallowedThingDefs>
    </fixedIngredientFilter>
		<skillRequirements>
			<Crafting>2</Crafting>
		</skillRequirements>
    <requiredGiverWorkType>Crafting</requiredGiverWorkType>
    <recipeUsers>
      <li>LeatherworkerTable</li>
      <li>TableLoom</li>
    </recipeUsers>
  </RecipeDef>

</Defs>
