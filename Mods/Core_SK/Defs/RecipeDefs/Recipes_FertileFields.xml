<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>
  
  <RecipeDef Name="RFF_MakeCompostBase" Abstract="True">
    <description>Make compost from organic waste (raw meat and plants).</description>
    <jobString>Making compost.</jobString>
    <workSpeedStat>BrewingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <fixedIngredientFilter>
      <categories>
        <li>FoodRaw</li>
        <li>Waste</li>
      </categories>
      <thingDefs>
        <li>Hay</li>
        <li>RottedMeat</li>
        <li>RottedMush</li>
      </thingDefs>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <thingDefs>
        <li>Hay</li>
        <li>RottedMeat</li>
        <li>RottedMush</li>
      </thingDefs>
    </defaultIngredientFilter>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>TableButcher</li>
    </recipeUsers>
  </RecipeDef>

  <RecipeDef ParentName="RFF_MakeCompostBase">
    <defName>MakeCompost</defName>
    <label>make compost</label>
    <workSkillLearnFactor>0.25</workSkillLearnFactor>
    <workAmount>250</workAmount>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
            <li>AnimalProductRaw</li>
            <li>Waste</li>
          </categories>
          <thingDefs>
            <li>RottedMeat</li>
          </thingDefs>
        </filter>
        <count>.25</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
          <thingDefs>
            <li>Hay</li>
            <li>RottedMush</li>
          </thingDefs>
        </filter>
        <count>.5</count>
      </li>
    </ingredients>
    <products>
      <Compost>1</Compost>
    </products>
  </RecipeDef>
  
  <RecipeDef ParentName="RFF_MakeCompostBase">
    <defName>MakeCompost5</defName>
    <label>make compost x5</label>
    <workSkillLearnFactor>0.5</workSkillLearnFactor>
    <workAmount>625</workAmount>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
            <li>AnimalProductRaw</li>
            <li>Waste</li>
          </categories>
          <thingDefs>
            <li>RottedMeat</li>
          </thingDefs>
        </filter>
        <count>1.25</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
          <thingDefs>
            <li>Hay</li>
            <li>RottedMush</li>
          </thingDefs>
        </filter>
        <count>2.5</count>
      </li>
    </ingredients>
    <products>
      <Compost>5</Compost>
    </products>
  </RecipeDef>
  
  <RecipeDef>
    <defName>MakeFertilizer</defName>
    <label>make fertilizer</label>
    <jobString>Making fertilizer.</jobString>
    <workSpeedStat>BrewingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <workAmount>10000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Compost</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <products>
      <Fertilizer>10</Fertilizer>
    </products>
    <workSkill>Crafting</workSkill>
  </RecipeDef>
  
</RecipeDefs>
