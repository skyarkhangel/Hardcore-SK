<RecipeDef ParentName="SurgeryFlesh">
	<defName>JTFieldSurgeryFieldAmputate</defName>
	<label>Amputating</label>
	<description>Removes a natural body part without the use of anaesthetics, for use if no medicine is available. This does not "harvest" the part, but merely discards it. Part is still removed even on failure, but additional harm will be caused.</description>
	<workAmount>800</workAmount>
	<surgeonSurgerySuccessChanceExponent>3</surgeonSurgerySuccessChanceExponent>
	<roomSurgerySuccessChanceFactorExponent>4</roomSurgerySuccessChanceFactorExponent>
	<surgerySuccessChanceFactor>0.45</surgerySuccessChanceFactor>
	<deathOnFailedSurgeryChance>0.15</deathOnFailedSurgeryChance>
	<recipeUsers>
          <li>Human</li>
          <li>Narn</li>
          <li>Nova</li>
          <li>Norbal</li>
          <li>Orassan</li>
	</recipeUsers>
	<workerClass>JTFieldSurgery.Recipe_JTFieldSurgeryFieldAmputate</workerClass>
	<jobString>Amputating without anaesthetic.</jobString>
</RecipeDef>

</RecipeDefs>