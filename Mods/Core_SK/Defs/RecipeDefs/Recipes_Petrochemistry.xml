<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>MakePlastic</defName>
		<label>Create plastic</label>
		<description>Create plastic from polymers. Produces 10.</description>
		<jobString>Creating plastic from polymers.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Polymers</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
		</ingredients>
		<products>
			<Plastic>10</Plastic>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Polymers</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>
	<RecipeDef>
		<defName>MakeRubber</defName>
		<label>Create rubber</label>
		<description>Create rubber from polymers and sulphates. Produces 10.</description>
		<jobString>Creating rubber from polymers and sulphates.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Polymers</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Sulphates</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<products>
			<Rubber>10</Rubber>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Polymers</li>
				<li>Sulphates</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>




	<RecipeDef>
		<defName>VulcanizeRubber</defName>
		<label>Vulcanize rubber</label>
		<description>Vulcanize rubber from caoutchouc and sulphates. Produces 10.</description>
		<jobString>Vulcanizing rubber from caoutchouc and sulphates.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawCaoutchouc</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Sulphates</li>
						<li>Sulfur</li>
						<li>Ash</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<products>
			<Rubber>10</Rubber>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawCaoutchouc</li>
				<li>Sulphates</li>
				<li>Sulfur</li>
				<li>Ash</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>BiofuelRefining</researchPrerequisite>
	</RecipeDef>

	<RecipeDef>
		<defName>MakeSyntheticFibers</defName>
		<label>Create synthetic fibers</label>
		<description>Create synthetic fibers from polymers and sulphates. Produces 5.</description>
		<jobString>Creating synthetic fibers.</jobString>
		<workAmount>1200</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Polymers</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Sulphates</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<products>
			<SyntheticFibers>5</SyntheticFibers>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Polymers</li>
				<li>Sulphates</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>14</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>SK_Petrochemistry</researchPrerequisite>
	</RecipeDef>


	<!-- Compaste -->
	<RecipeDef>
		<defName>MakeCompaste</defName>
		<label>Craft compound paste</label>
		<description>Craft bottles of compound paste, used in a wide variety of clothing. Produces 20.</description>
		<jobString>Crafting compound paste.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<workAmount>3200</workAmount>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Rubber</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Paraffins</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<products>
			<Compaste>20</Compaste>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Chemfuel</li>
				<li>Rubber</li>
				<li>Paraffins</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>Chemfuel</li>
				<li>Rubber</li>
				<li>Paraffins</li>
			</thingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>TableLoom</li>
		</recipeUsers>
		<researchPrerequisite>SK_Petrochemistry</researchPrerequisite>
	</RecipeDef>

	<RecipeDef>
		<defName>MakeCarbon</defName>
		<label>Create carbon</label>
		<description>Create carbon from polymers, rubber and coal ore. Produces 12.</description>
		<jobString>Creating carbon.</jobString>
		<workAmount>4000</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Smith</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Polymers</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Coal</li>
					</categories>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Rubber</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<products>
			<Carbon>12</Carbon>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>Coal</li>
			</categories>
			<thingDefs>
				<li>Polymers</li>
				<li>Rubber</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>15</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>SK_Petrochemistry</researchPrerequisite>
	</RecipeDef>


	<!-- Vanilla chemfuel recipes -->
	
	<RecipeDef>
		<defName>Make_ChemfuelFromWood</defName>
		<label>make chemfuel from wood</label>
		<description>Make a batch of chemfuel by extracting and condensing wood gas from logs.</description>
		<jobString>Refining chemfuel from wood.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>2000</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<recipeUsers>
			<li>BiofuelRefinery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>70</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Chemfuel>35</Chemfuel>
		</products>
	</RecipeDef>

	<RecipeDef>
		<defName>Make_ChemfuelFromOrganics</defName>
		<label>make chemfuel from organics</label>
		<description>Make a batch of chemfuel by extracting biofuel from organic feedstocks.</description>
		<jobString>Refining chemfuel from organics.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>2500</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<recipeUsers>
			<li>BiofuelRefinery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Foods</li>
						<li>PlantMatter</li>
					</categories>
					<disallowedThingDefs>
						<li>Hay</li>
					</disallowedThingDefs>
					<disallowedCategories>
						<li>FoodMeals</li>
					</disallowedCategories>
				</filter>
				<count>3.5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Foods</li>
				<li>PlantMatter</li>
			</categories>
			<disallowedThingDefs>
				<li>Hay</li>
			</disallowedThingDefs>
			<disallowedCategories>
				<li>FoodMeals</li>
			</disallowedCategories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<disallowedCategories>
				<li>MeatRaw</li>
				<li>AnimalProductRaw</li>
			</disallowedCategories>
		</defaultIngredientFilter>
		<products>
			<Chemfuel>35</Chemfuel>
		</products>
	</RecipeDef>

</Defs>
