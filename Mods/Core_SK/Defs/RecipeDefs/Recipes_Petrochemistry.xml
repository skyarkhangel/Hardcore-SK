<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>MakePlastic</defName>
		<label>Create plastic</label>
		<description>Create plastic from polymers. Produces 10.</description>
		<jobString>Creating plastic from polymers.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Polymers</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
		</ingredients>
		<products>
			<Plastic>10</Plastic>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Polymers</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>
	<RecipeDef>
		<defName>MakeRubber</defName>
		<label>Create rubber</label>
		<description>Create rubber from polymers and sulphates. Produces 10.</description>
		<jobString>Creating rubber from polymers and sulphates.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Polymers</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Sulphates</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<products>
			<Rubber>10</Rubber>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Polymers</li>
				<li>Sulphates</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>




	<RecipeDef>
		<defName>VulcanizeRubber</defName>
		<label>Vulcanize rubber</label>
		<description>Vulcanize rubber from caoutchouc and sulphates. Produces 10.</description>
		<jobString>Vulcanizing rubber from caoutchouc and sulphates.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawCaoutchouc</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Sulphates</li>
						<li>Sulfur</li>
						<li>Ash</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<products>
			<Rubber>10</Rubber>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawCaoutchouc</li>
				<li>Sulphates</li>
				<li>Sulfur</li>
				<li>Ash</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Oil_Industry_C5</researchPrerequisite>
	</RecipeDef>

