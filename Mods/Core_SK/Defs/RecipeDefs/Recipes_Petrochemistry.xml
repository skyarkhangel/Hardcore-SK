	<!-- Compaste -->
	<RecipeDef>
		<defName>MakeCompaste</defName>
		<label>Craft compound paste</label>
		<description>Craft bottles of compound paste, used in a wide variety of clothing. Produces 20.</description>
		<jobString>Crafting compound paste.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<workAmount>3200</workAmount>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Rubber</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Paraffins</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<products>
			<Compaste>20</Compaste>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Chemfuel</li>
				<li>Rubber</li>
				<li>Paraffins</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>Chemfuel</li>
				<li>Rubber</li>
				<li>Paraffins</li>
			</thingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>TableLoom</li>
		</recipeUsers>
		<researchPrerequisite>AdvancedFabrication</researchPrerequisite>
	</RecipeDef>

	<RecipeDef>
		<defName>MakeCarbon</defName>
		<label>Create carbon</label>
		<description>Create carbon from polymers, rubber and coal ore. Produces 12.</description>
		<jobString>Creating carbon.</jobString>
		<workAmount>4000</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Smith</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Polymers</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Coal</li>
					</categories>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Rubber</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<products>
			<Carbon>12</Carbon>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>Coal</li>
			</categories>
			<thingDefs>
				<li>Polymers</li>
				<li>Rubber</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>15</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Oil_Industry_C6</researchPrerequisite>
	</RecipeDef>
</Defs>
