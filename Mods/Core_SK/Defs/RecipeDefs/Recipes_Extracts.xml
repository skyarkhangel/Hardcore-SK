   <!-- SOYLENT GREEN -->
   <RecipeDef>
      <defName>makesoylentgreen</defName>
      <label>obtain soylent green</label>
      <description>Obtain Soylent Green from a humanlike corpse. Produces 45.</description>
      <jobString>Obtaining Soylent Green.</jobString>
      <workAmount>1400</workAmount>
	  <workSpeedStat>CookSpeed</workSpeedStat>
      <effectWorking>ButcherFlesh</effectWorking>
      <soundWorking>Bio_Matter_Sound</soundWorking>
      <ingredients>
         <li>
            <filter>
               <categories>
                  <li>CorpsesHumanlike</li>
               </categories>
            </filter>
            <count>1</count>
         </li>
      </ingredients>
      <products>
         <soylentgreen>45</soylentgreen>
      </products>
		<fixedIngredientFilter>
			<categories>
				<li>CorpsesHumanlike</li>
			</categories>
		  <specialFiltersToDisallow>
			<li>AllowRotten</li>
		  </specialFiltersToDisallow>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
        <li>Human_Corpse</li>
        <li>Norbal_Corpse</li>
        <li>Alien_Nova_Corpse</li>
		<li>Alien_Orassan</li>
        <li>Alien_Asari_Corpse</li>
			</thingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<Crafting>12</Crafting>
		</skillRequirements>
      <workSkill>Crafting</workSkill>
    	<workSkillLearnFactor>0.8</workSkillLearnFactor>
   </RecipeDef>
	
</Defs>
