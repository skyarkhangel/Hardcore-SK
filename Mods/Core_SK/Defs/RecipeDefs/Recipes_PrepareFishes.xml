            <li>Corpses</li>
          </categories>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <products>
      <MealFine>4</MealFine>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Corpse_ThingDefFishBlueblade</li>
        <li>Corpse_ThingDefFishSeasnake</li>
      </thingDefs>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
