<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Yeast -->
    <ThingDef ParentName="CropsBase">
        <defName>Yeast</defName>
        <label>Yeast</label>
        <description>Processed Yeast used in fermentation.</description>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <texPath>Things/Item/Yeast</texPath>
        </graphicData>
        <statBases>
            <MarketValue>2.5</MarketValue>
			<Flammability>0.5</Flammability>
        </statBases>
        <tickerType>Rare</tickerType>
        <thingCategories>
            <li>CookingSupplies</li>
        </thingCategories>
        <stuffProps>
            <categories>
                <li>Stuff</li>
            </categories>
        </stuffProps>
        <comps>
            <li Class="CompProperties_Rottable">
                <daysToRotStart>40</daysToRotStart>
                <rotDestroys>true</rotDestroys>
            </li>
        </comps>
        <stackLimit>275</stackLimit>
    </ThingDef>
	<!--  Mash Base -->
	<ThingDef Abstract="True" ParentName="ResourceBase" Name="MashBase">
        <label>Mash</label>
        <description>A mixture of yeast and sugar rich plant matter.</description>
        <graphicData>
            <texPath>Things/Item/Resource/Wort</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <rotatable>false</rotatable>
        <stackLimit>100</stackLimit>
        <thingCategories>
            <li>CookingSupplies</li>
        </thingCategories>
        <statBases>
            <DeteriorationRate>1.0</DeteriorationRate>
            <MarketValue>2.5</MarketValue>
            <Mass>0.8</Mass>
            <MaxHitPoints>60</MaxHitPoints>
			<Flammability>0.2</Flammability>
        </statBases>
        <tickerType>Rare</tickerType>
        <comps>
            <li Class="CompProperties_Rottable">
                <daysToRotStart>10</daysToRotStart>
                <rotDestroys>true</rotDestroys>
            </li>
        </comps>
    </ThingDef>
	<!-- Grain Mash -->
    <ThingDef ParentName="MashBase">
        <defName>grainmash</defName>
        <label>Grain Mash</label>
        <description>A mixture of yeast and wheat to ferment into Whisky.</description>
    </ThingDef>
	<!-- Saké Mash -->
    <ThingDef ParentName="MashBase">
        <defName>sakemash</defName>
        <label>Saké Mash</label>
        <description>A mixture of yeast and rice to ferment into Saké.</description>
    </ThingDef>
	<!-- Rum Mash -->
    <ThingDef ParentName="MashBase">
        <defName>rummash</defName>
        <label>Rum Mash</label>
        <description>A mixture of yeast and sugar cane to ferment into Rum.</description>
    </ThingDef>
	<!-- Cider Mash -->
    <ThingDef ParentName="MashBase">
        <defName>cidermash</defName>
        <label>Cider Mash</label>
        <description>A mixture of yeast and apples to ferment into Cider.</description>
    </ThingDef>
	<!-- Berry Mash -->
    <ThingDef ParentName="MashBase">
        <defName>berrymash</defName>
        <label>Berry Mash</label>
        <description>A mixture of yeast and various berries to ferment into Berrywine.</description>
    </ThingDef>
	<!-- Vodka Mash -->
    <ThingDef ParentName="MashBase">
        <defName>vodkamash</defName>
        <label>Vodka Mash</label>
        <description>A mixture of yeast and raw potatoes to ferment into Vodka.</description>
    </ThingDef>
	<!-- Tequila Mash -->
    <ThingDef ParentName="MashBase">
        <defName>tequilamash</defName>
        <label>Tequila Mash</label>
        <description>A mixture of yeast and blue agave to ferment into Tequila.</description>
    </ThingDef>
	<!-- Wine Mash -->
    <ThingDef ParentName="MashBase">
        <defName>winemash</defName>
        <label>Wine Mash</label>
        <description>A mixture of yeast and grapes to ferment into Wine.</description>
    </ThingDef>
</Defs>