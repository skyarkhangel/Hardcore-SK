					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Mechanism</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ElectronicComponents</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<products>
			<Weapon_GrenadeEMP>1</Weapon_GrenadeEMP>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>SLDBar</li>
