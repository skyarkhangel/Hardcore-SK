        <rect>(0,0.1,1,0.8)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Doors/Autodoor_MenuIcon</uiIconPath>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>30</costStuffCount>
		<costList>
			<Components>1</Components>
			<ElectronicComponents>1</ElectronicComponents>
		</costList>
