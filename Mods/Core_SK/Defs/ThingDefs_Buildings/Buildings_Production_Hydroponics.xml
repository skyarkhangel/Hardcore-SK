<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <!-- ========== Hydroponics ==============-->

  <ThingDef ParentName="BuildingBase">
    <defName>PrimitiveHydroponic</defName>
    <label>saturated soil</label>
    <thingClass>HydroponicRoom.Building_PlantGrowerLinked</thingClass>
    <graphicData>
      <ShaderType>CutoutComplex</ShaderType>
      <texPath>Things/Building/Production/pghydro</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(4,4)</drawSize>
    </graphicData>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <passability>PassThroughOnly</passability>
    <description>Еnrichment soil.</description>
    <size>(1,3)</size>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>5</costStuffCount>
    <statBases>
      <WorkToBuild>1150</WorkToBuild>
	  <Cleanliness>-5</Cleanliness>
    </statBases>
    <costList>
      <Nitre>15</Nitre>
      <Sand>30</Sand>
      <Component>3</Component>
    </costList>
    <fertility>0.8</fertility>
    <building>
      <defaultPlantToGrow>PlantPotato</defaultPlantToGrow>
      
      <sowTag>Hydroponic</sowTag>
    </building>
    <tickerType>Rare</tickerType>
    <rotatable>true</rotatable>
	<blockWind>false</blockWind>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
    <designationCategory>Production</designationCategory>
	<researchPrerequisites><li>SK_IndoorFarming</li></researchPrerequisites>
  </ThingDef>


  <ThingDef ParentName="BuildingBase">
    <defName>HydroponicsBasin</defName>
    <label>hydroponic basin</label>
    <thingClass>HydroponicRoom.Building_PlantGrowerLinked</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/HydroponicsBasin</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,4)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>60</pathCost>
    <castEdgeShadows>true</castEdgeShadows>
    <statBases>
      <WorkToBuild>2800</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
	  <Cleanliness>-3</Cleanliness>
    </statBases>
    <description>A hydroponic basin can grow several plants quickly. The basin requires power to work and plants will die if the power is cut.</description>
    <size>(1,4)</size>
	<stuffCategories>
	<li>Metallic</li>
	<li>Woody</li>
	<li>Plastic</li>
	</stuffCategories>
	<costStuffCount>60</costStuffCount>
    <costList>
			<Fertilizer>30</Fertilizer>
			<Component>5</Component>
    </costList>
    <fertility>1.5</fertility>
    <building>
      <defaultPlantToGrow>PlantPotato</defaultPlantToGrow>
      
      <sowTag>Hydroponic</sowTag>
    </building>
    <tickerType>Rare</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>70</basePowerConsumption>
      </li>
			  <li Class="CompProperties_Flickable"/>
    </comps>
    <researchPrerequisites><li>Hydroponics</li></researchPrerequisites>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<DesignationCategory>Production</DesignationCategory>
    <!--<staticSunShadowHeight>0.03</staticSunShadowHeight>-->
  </ThingDef>


  <!-- ========== New Hydroponics ==============-->

  <ThingDef ParentName="BuildingBase">
		<defName>NewHydroponicsBasin</defName>
		<label>advanced hydroponic basin</label>
		<thingClass>HydroponicRoom.Building_PlantGrowerLinked</thingClass>
		<graphicData>
			<texPath>Things/Building/Production/Hydrophonic/Hydroponics_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Custom1</li>
			</linkFlags>
		</graphicData>
		<blueprintGraphicData>
			<texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
		</blueprintGraphicData>
		<uiIconPath>Things/Building/Production/Hydrophonic/Hydroponics_MenuIcon</uiIconPath>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>60</pathCost>
		<castEdgeShadows>true</castEdgeShadows>
		<statBases>
			<WorkToBuild>2500</WorkToBuild>
			<MaxHitPoints>50</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Cleanliness>-1</Cleanliness>
		</statBases>
		<description>Advanced hydroponic basins grow plants quicker and provide their own light source. The basin requires power to work and plants will die if the power is lost.</description>
	<stuffCategories>
		<li>Metallic</li>
		<li>Woody</li>
		<li>Plastic</li>
	</stuffCategories>
	<costStuffCount>20</costStuffCount>
		<costList>
			<Fertilizer>10</Fertilizer>
			<Component>2</Component>
		  <Glass>3</Glass>
		  <ElectronicComponents>2</ElectronicComponents>
		</costList>
		<surfaceType>Item</surfaceType>
		<fertility>1.9</fertility>
		<building>
			<ignoreNeedsPower>false</ignoreNeedsPower>
			<defaultPlantToGrow>PlantPotato</defaultPlantToGrow>
			
			<sowTag>Hydroponic</sowTag>
		</building>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<tickerType>Rare</tickerType>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<transmitsPower>true</transmitsPower>
				<startElectricalFires>true</startElectricalFires>
				<soundPowerOn>PowerOnSmall</soundPowerOn>
				<soundPowerOff>PowerOffSmall</soundPowerOff>
				<basePowerConsumption>45</basePowerConsumption>
			</li>
			<li Class="CompProperties_Glower">
				<overlightRadius>7.0</overlightRadius>
				<glowRadius>2</glowRadius>
				<glowColor>(370,370,370,0)</glowColor>
			</li>
			  <li Class="CompProperties_Flickable"/>
		</comps>
		<researchPrerequisites><li>SK_HydroponicsII</li></researchPrerequisites>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Production</designationCategory>
		<staticSunShadowHeight>0.03</staticSunShadowHeight>
	</ThingDef>


  <ThingDef ParentName="BuildingBase">
		<defName>ClutterAlloyHydroponicsBasinVS</defName>
		<label>hydroponic pot</label>
		<thingClass>HydroponicRoom.Building_PlantGrowerLinked</thingClass>
    <graphicData>
		<ShaderType>CutoutComplex</ShaderType>
		<texPath>Things/Building/Production/Hydrophonic/Pot</texPath>
		<graphicClass>Graphic_Random</graphicClass>
    </graphicData>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<description>A hydroponic pot planted into the ground. Requires power.</description>
		<size>(1,1)</size>
		<statBases>
			<WorkToBuild>2200</WorkToBuild>
			<MaxHitPoints>50</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>16</Beauty>
			<Cleanliness>-1</Cleanliness>
		</statBases>
	<stuffCategories>
		<li>Metallic</li>
		<li>Woody</li>
		<li>Plastic</li>
    </stuffCategories>
    <costStuffCount>25</costStuffCount>
    <costList>
      <Fertilizer>10</Fertilizer>
      <Rubber>5</Rubber>
      <Component>3</Component>
      <ElectronicComponents>1</ElectronicComponents>
    </costList>
    <fertility>1.8</fertility>
    <building>
      <defaultPlantToGrow>PlantPotato</defaultPlantToGrow>
      
      <sowTag>Hydroponic</sowTag>
    </building>
    <tickerType>Rare</tickerType>
    <comps>
     <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>25</basePowerConsumption>
      </li>
			  <li Class="CompProperties_Flickable"/>
    </comps>
    <rotatable>false</rotatable>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <researchPrerequisites><li>SK_HydroponicsII</li></researchPrerequisites>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Production</designationCategory>
  </ThingDef>


   <ThingDef Name="Agrarian" ParentName="BuildingBase">
      <defName>Agrarian</defName>
      <label>hydroponic box</label>
      <description>A small self-watering wooden wood box with earth in it for growing plants. Requires power.</description>
      <thingClass>HydroponicRoom.Building_PlantGrowerLinked</thingClass>
      <designationCategory>Production</designationCategory>
      <statBases>
         <MaxHitPoints>200</MaxHitPoints>
         <Beauty>1</Beauty>
         <WorkToBuild>1000</WorkToBuild>
         <Flammability>0.7</Flammability>
		 <Cleanliness>-11</Cleanliness>
      </statBases>
      <size>(3,3)</size>
	<stuffCategories>
	<li>Metallic</li>
	<li>Woody</li>
	<li>Plastic</li>
	</stuffCategories>
	<costStuffCount>90</costStuffCount>
    <costList>
			<Fertilizer>50</Fertilizer>
			<Component>6</Component>
    </costList>
      <fertility>1.2</fertility>
      <building>
         <defaultPlantToGrow>PlantPotato</defaultPlantToGrow>
         
         <sowTag>Hydroponic</sowTag>
		 <deconstructible>true</deconstructible>
      </building>
      <comps>
         <li Class="CompProperties_Power">
            <compClass>CompPowerTrader</compClass>
            <startElectricalFires>true</startElectricalFires>
            <basePowerConsumption>150</basePowerConsumption>
         </li>
      </comps>
     <uiIconPath>Things/Building/AgrarianIcon</uiIconPath>
     <graphicData>
       <texPath>Things/Building/AgrarianAtlas</texPath>
       <graphicClass>Graphic_Single</graphicClass>
       <drawSize>(3,3)</drawSize>
     </graphicData>
     <interactionCellOffset>(0,0,-2)</interactionCellOffset>
     <altitudeLayer>FloorEmplacement</altitudeLayer>
      <tickerType>Rare</tickerType>
      <passability>PassThroughOnly</passability>
      <pathCost>50</pathCost>
      <fillPercent>0.1</fillPercent>
      <neverMultiSelect>true</neverMultiSelect>
      <holdsRoof>false</holdsRoof>
	  <rotatable>true</rotatable>
    <researchPrerequisites><li>Hydroponics</li></researchPrerequisites>
   </ThingDef>

</ThingDefs>
