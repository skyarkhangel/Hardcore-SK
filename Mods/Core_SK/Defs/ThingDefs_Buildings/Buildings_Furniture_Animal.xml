  <ThingDef ParentName="FurnitureBase">
    <defName>FeedingBowl</defName>
    <label>feeding bowl</label>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Things/Building/FeedingBowl</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>.5</drawSize>
      <shadowData>
        <volume>(0.2, 0.3, 0.2)</volume>
      </shadowData>
    </graphicData>
    <rotatable>false</rotatable>
    <fillPercent>0.4</fillPercent>
    <stuffCategories>
	<li>Metallic</li>
	<li>Woody</li>
	<li>Plastic</li>
	<li>Precious</li>
	<li>Glass</li>
    </stuffCategories>
    <costStuffCount>6</costStuffCount>
		<costList>
		<Component>1</Component>
		</costList>
    <statBases>
      <MaxHitPoints>25</MaxHitPoints>
      <WorkToBuild>500</WorkToBuild>
      <Beauty>5</Beauty>
	  <Bulk>4</Bulk>
	  <Mass>1</Mass>
    </statBases>
    <description>Your animals will love this bowl so much that they'll go eat out of here first!</description>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>MeatRaw</li>
            <li>PlantFoodRaw</li>
			<li>Animalfood</li>
            <!--<li>CatFoods</li>-->
          </categories>
          <disallowedSpecialFilters>
            <li>AllowRotten</li>
          </disallowedSpecialFilters>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
			<li>Animalfood</li>
            <!--<li>CatFoods</li>-->
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <surfaceType>Item</surfaceType>
	<researchPrerequisites><li>SK_LivestockII</li></researchPrerequisites>
  </ThingDef>

