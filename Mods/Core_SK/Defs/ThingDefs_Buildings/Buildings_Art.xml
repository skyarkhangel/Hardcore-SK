		<pathCost>70</pathCost>
		<useHitPoints>true</useHitPoints>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsArt</li>
		</thingCategories>
		<thingSetMakerTags>
			<li>RewardStandardLowFreq</li>
		</thingSetMakerTags>
		<statBases>
			<Flammability>1.0</Flammability>
			<SellPriceFactor>1.10</SellPriceFactor>
			<MeditationFocusStrength>0.0</MeditationFocusStrength>
		</statBases>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtSculpture</nameMaker>
				<descriptionMaker>ArtDescription_Sculpture</descriptionMaker>
				<canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
			</li>
			<li Class="CompProperties_MeditationFocus">
				<statDef>MeditationFocusStrength</statDef>
				<focusTypes>
					<li>Artistic</li>
				</focusTypes>
				<offsets>
					<li Class="FocusStrengthOffset_Quality">
						<curve>
							<points>
								<li>(0,0.12)</li>
								<!-- awful -->
								<li>(1,0.16)</li>
								<!-- poor -->
								<li>(2,0.20)</li>
								<!-- normal -->
								<li>(3,0.22)</li>
								<!-- good -->
								<li>(4,0.24)</li>
								<!-- excellent -->
								<li>(5,0.26)</li>
								<!-- masterwork -->
								<li>(6,0.28)</li>
								<!-- legendary -->
							</points>
						</curve>
					</li>
					<li Class="FocusStrengthOffset_BuildingDefsWithQuality">
						<defs>
							<li>SculptureSmall</li>
							<li>SculptureLarge</li>
							<li>SculptureGrand</li>
							<li>MuffaloArt</li>
							<li>QueenArt</li>
							<li>NymphArt</li>
							<li>GreenyArt</li>
							<li>WolfArt</li>
							<li>DragonArt</li>
							<li>ZeonArt</li>							
							<li>DecorativeUrnSmall</li>
							<li>SmallPottery</li>
						</defs>
						<radius>9.9</radius>
						<maxBuildings>8</maxBuildings>
						<focusPerQuality>
							<points>
								<li>(0,0.0)</li>
								<!-- awful -->
								<li>(1,0.0)</li>
								<!-- poor -->
								<li>(2,0.01)</li>
								<!-- normal -->
								<li>(3,0.01)</li>
								<!-- good -->
								<li>(4,0.01)</li>
								<!-- excellent -->
								<li>(5,0.02)</li>
								<!-- masterwork -->
								<li>(6,0.02)</li>
								<!-- legendary -->
							</points>
						</focusPerQuality>
						<explanationKey>MeditationFocusPerSculpture</explanationKey>
						<explanationKeyAbstract>MeditationFocusPerSculptureAbstract</explanationKeyAbstract>
					</li>
				</offsets>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_MeditationOffsetBuildingsNear</li>
		</placeWorkers>
		<building>
			<uninstallWork>600</uninstallWork>
