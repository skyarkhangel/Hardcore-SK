<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Large impassable and non-deconstructible buildings -->
	<ThingDef Abstract="True" Name="NonDeconstructibleAncientBuildingBase" ParentName="SK_BuildingBase">
		<building>
			<deconstructible>false</deconstructible>
			<claimable>false</claimable>
		</building>
		<passability>Impassable</passability>
		<canOverlapZones>false</canOverlapZones>
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<Flammability>0</Flammability>
			<!-- Non-deconstructible things need to be non-flammable for story-logical and gameplay reasons -->
		</statBases>
	</ThingDef>

</Defs>