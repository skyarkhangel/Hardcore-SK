    </graphicData>
    <ingestible>
      <nutrition>0.10</nutrition>
    </ingestible>
    <plant>
      <maxMeshCount>4</maxMeshCount>
      <sowMinSkill>10</sowMinSkill>
      <sowResearchPrerequisites>
        <li>SK_MedicalCropsII</li>
      </sowResearchPrerequisites>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <harvestedThingDef>aloe</harvestedThingDef>
