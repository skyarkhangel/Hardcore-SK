<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

   <ThingDef ParentName="PlantDef">
    <defName>PlantHealroot</defName>
    <label>Healroot Plant</label>
    <description>A slow-growing plant which yields herbal medicine when harvested.\n\nHealroot was selectively bred for centuries by settlers. It is sometimes also called &quot;healer's hand&quot; by tribespeople - a nickname it owes to its five major medicinal virtues.</description>
  <graphicData>
      <texPath>Things/Plant/PlantHeelingRoot</texPath>
	  <graphicClass>Graphic_Random</graphicClass>
  </graphicData>
    <ingestible>
      <nutrition>0.1</nutrition>
    </ingestible>
    <plant>
      <maxMeshCount>4</maxMeshCount>
      <sowMinSkill>5</sowMinSkill>
      <sowResearchPrerequisites>
        <li>SK_MedicalCropsI</li>
      </sowResearchPrerequisites>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <harvestedThingDef>HerbalMedicine</harvestedThingDef>
      <harvestYield>3</harvestYield>
      <topWindExposure>0.1</topWindExposure>
      <growDays>10</growDays>
      <fertilitySensitivity>0.5</fertilitySensitivity>
      <fertilityMin>0.4</fertilityMin>
      <visualSizeRange>
        <min>0.2</min>
        <max>0.7</max>
      </visualSizeRange>
    </plant>
  </ThingDef>
  
<ThingDef ParentName="PlantDef">
		<defName>Plantaloe</defName>
		<label>Aloe Plant</label>
		<description>Aloe Plants produce Aloe Leaves, which are similar to Healroots but can be produced as Herbal Medicine Kits from the Canning Stove.</description>
    <statBases>
