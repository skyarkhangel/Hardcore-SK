<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="SK_DeciduousPlantDef">
		<defName>Plant_Healroot</defName>
		<label>Healroot Plant</label>
		<description>A slow-growing plant which yields raw herbal medicine when harvested.\n\nHealroot was selectively bred for centuries by settlers. It is sometimes also called &quot;healer's hand&quot; by tribespeople - a nickname it owes to its five major medicinal virtues.</description>
		<graphicData>
			<texPath>Things/Plant/PlantHeelingRoot_Harvest</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<Nutrition>0.15</Nutrition>
		</statBases>
		<plant>
			<maxMeshCount>4</maxMeshCount>
			<sowMinSkill>5</sowMinSkill>
			<sowResearchPrerequisites>
				<li>Medical_Plants_A1</li>
			</sowResearchPrerequisites>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<immatureGraphicPath>Things/Plant/PlantHeelingRoot</immatureGraphicPath>
			<harvestedThingDef>MedicineHerbal</harvestedThingDef>
			<harvestYield>8</harvestYield>
			<topWindExposure>0.1</topWindExposure>
			<growDays>5.8</growDays>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<fertilityMin>0.4</fertilityMin>
			<visualSizeRange>
				<min>0.2</min>
				<max>0.7</max>
			</visualSizeRange>
			<wildOrder>2</wildOrder>
			<purpose>Health</purpose>
		</plant>
	</ThingDef>

	<ThingDef ParentName="PlantDef">
		<defName>Plant_HealrootWild</defName>
		<label>Aloe Plant</label>
		<description>Aloe Plants produce Aloe Leaves, which are similar to Healroots but can be produced as Herbal Medicine Kits from the Canning Stove.</description>
		<statBases>
			<Beauty>3</Beauty>
			<Nutrition>0.15</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/PlantAloe_Harvest</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<plant>
			<maxMeshCount>4</maxMeshCount>
			<sowMinSkill>10</sowMinSkill>
			<sowResearchPrerequisites>
				<li>Medical_Plants_A2</li>
			</sowResearchPrerequisites>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<immatureGraphicPath>Things/Plant/PlantAloe</immatureGraphicPath>
			<harvestedThingDef>aloe</harvestedThingDef>
			<harvestYield>4</harvestYield>
			<topWindExposure>0.1</topWindExposure>
			<growDays>4.7</growDays>
			<fertilityMin>1.35</fertilityMin>
			<fertilitySensitivity>1.5</fertilitySensitivity>
			<visualSizeRange>
				<min>0.1</min>
				<max>0.7</max>
			</visualSizeRange>
			<wildOrder>2</wildOrder>
			<purpose>Health</purpose>
		</plant>
	</ThingDef>

	<ThingDef ParentName="PlantDef">
		<defName>Plant_NeutroFlower</defName>
		<label>Neutro Flower</label>
		<description>A beautiful Yellow-Orange Flower. Used to make Neutroamine, a medicine base.</description>
		<graphicData>
			<texPath>Things/Plant/PlantNeuroflowers_Harvest</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>30</Beauty>
		</statBases>
		<plant>
			<maxMeshCount>4</maxMeshCount>
			<sowMinSkill>7</sowMinSkill>
			<sowResearchPrerequisites>
				<li>Flowers_A2</li>
			</sowResearchPrerequisites>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<immatureGraphicPath>Things/Plant/PlantNeuroflowers</immatureGraphicPath>
			<harvestedThingDef>NeutroPetals</harvestedThingDef>
			<harvestYield>5</harvestYield>
			<growDays>6.2</growDays>
			<fertilitySensitivity>1</fertilitySensitivity>
			<visualSizeRange>
				<min>0.2</min>
				<max>0.8</max>
			</visualSizeRange>
			<wildOrder>2</wildOrder>
		</plant>
	</ThingDef>

</Defs>