<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--============================ Bushes  ============================-->

	<ThingDef ParentName="BushBase">
		<defName>PlantBush</defName>
		<label>bush</label>
		<description>Bushes are a type of green, short shrubbery. Unlike other plants this one is incapable of producing fruits or vegetables.</description>
		<graphicData>
			<texPath>Things/Plant/PlantBush</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<ingestible>
			<nutrition>0.27</nutrition>
		</ingestible>
		<plant>
			<visualSizeRange>
				<min>0.5</min>
				<max>1.3</max>
			</visualSizeRange>
			<maxMeshCount>16</maxMeshCount>
			<leaflessGraphicPath>Things/Plant/PlantBush_Leafless</leaflessGraphicPath>
			<harvestWork>130</harvestWork>
			<fertilityMin>0.2</fertilityMin>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>Kindling</harvestedThingDef>
			<harvestMinGrowth>0.5</harvestMinGrowth>
			<harvestFailable>false</harvestFailable>
			<harvestYield>5</harvestYield>
			<growDays>5</growDays>
			<topWindExposure>0.3</topWindExposure>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<sowMinSkill>1</sowMinSkill>
			<sowResearchPrerequisites>
				<li>SK_TreesI</li>
			</sowResearchPrerequisites>
		</plant>
	</ThingDef>


	<ThingDef ParentName="BushBase">
		<defName>Rhododendron</defName>
		<label>rhododendron</label>
		<description>An attractive, hardy, and slow-growing shrub known for its beautiful flowers.</description>
		<statBases>
			<Beauty>6</Beauty>
			<MaxHitPoints>150</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Rhododendron</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<ingestible>
			<nutrition>0.28</nutrition>
		</ingestible>
		<plant>
			<visualSizeRange>
				<min>0.5</min>
				<max>1.3</max>
			</visualSizeRange>
			<maxMeshCount>16</maxMeshCount>
			<leaflessGraphicPath>Things/Plant/Rhododendron_Leafless</leaflessGraphicPath>
			<harvestWork>150</harvestWork>
			<fertilityMin>0.2</fertilityMin>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>Kindling</harvestedThingDef>
			<harvestYield>6</harvestYield>
			<harvestMinGrowth>0.5</harvestMinGrowth>
			<harvestFailable>false</harvestFailable>
			<growDays>7</growDays>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<sowMinSkill>8</sowMinSkill>
			<sowResearchPrerequisites>
				<li>SK_TreesI</li>
			</sowResearchPrerequisites>
		</plant>
	</ThingDef>

	<ThingDef ParentName="BushBase">
		<defName>PlantSwordFern</defName>
		<label>PlantSwordFern</label>
		<description>An attractive and hardy fern. Not eaten by most animals due to toxins and carcinogens.</description>
		<statBases>
			<Beauty>4</Beauty>
			<MaxHitPoints>100</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/PlantSwordFern</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<ingestible>
			<nutrition>0.2</nutrition>
		</ingestible>
		<pathCost>25</pathCost>
		<plant>
			<leaflessGraphicPath>Things/Plant/PlantSwordFern_Leafless</leaflessGraphicPath>
			<visualSizeRange>
				<min>0.6</min>
				<max>1.6</max>
			</visualSizeRange>
			<maxMeshCount>4</maxMeshCount>
			<fertilityMin>0.5</fertilityMin>
			<fertilitySensitivity>1.1</fertilitySensitivity>
			<harvestTag>Standard</harvestTag>
			<growDays>10</growDays>
			<reproduceRadius>7</reproduceRadius>
			<wildClusterSizeRange>
				<min>7</min>
				<max>26</max>
			</wildClusterSizeRange>
			<wildClusterRadius>4</wildClusterRadius>
		</plant>
	</ThingDef>

	<ThingDef ParentName="BushBase">
		<defName>PlantAlocasia</defName>
		<label>alocasia</label>
		<description>A common broadleaf tropical plant.</description>
		<graphicData>
			<texPath>Things/Plant/PlantAlocasia</texPath>
			<drawSize>1.4</drawSize>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.55, 0.17, 0.15)</volume>
				<offset>(0,0,-0.2)</offset>
			</shadowData>
		</graphicData>
		<plant>
			<leaflessGraphicPath>Things/Plant/PlantAlocasia_Leafless</leaflessGraphicPath>
			<wildClusterSizeRange>
				<min>9</min>
				<max>20</max>
			</wildClusterSizeRange>
			<wildClusterRadius>6</wildClusterRadius>
		</plant>
	</ThingDef>

	<ThingDef ParentName="BushBase">
		<defName>PlantClivia</defName>
		<label>clivia</label>
		<description>An unusual plant with tall, pretty flowers. Some call it the 'bush lily'.</description>
		<statBases>
			<Beauty>2</Beauty>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/PlantClivia</texPath>
			<drawSize>1.1</drawSize>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.3, 0.2, 0.15)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
		</graphicData>
		<plant>
			<maxMeshCount>4</maxMeshCount>
			<leaflessGraphicPath>Things/Plant/PlantClivia_Leafless</leaflessGraphicPath>
			<wildClusterSizeRange>
				<min>3</min>
				<max>7</max>
			</wildClusterSizeRange>
			<wildClusterRadius>3</wildClusterRadius>
		</plant>
	</ThingDef>

	<ThingDef ParentName="BushBase">
		<defName>PlantRafflesia</defName>
		<label>giant rafflesia</label>
		<description>A rare, giant flower. You would think a giant flower would be beautiful, but this one is quite smelly and ugly.</description>
		<statBases>
			<Beauty>-6</Beauty>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/PlantRafflesia</texPath>
			<drawSize>1.4</drawSize>
			<shadowData>
				<volume>(0.55, 0.2, 0.2)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<plant>
			<topWindExposure>0.07</topWindExposure>
			<wildClusterSizeRange>
				<min>1</min>
				<max>1</max>
			</wildClusterSizeRange>
		</plant>
	</ThingDef>

</Defs>