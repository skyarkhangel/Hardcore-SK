		</raidCommonalityFromPointsCurve>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,90)</li>
				<li>(300, 130)</li>
				<li>(600, 190)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
