	<!-- ================== M240B ================== -->

	<ThingDef ParentName="BaseGun_Turret">
		<defName>Gun_M240B</defName>
		<label>M240B machine gun</label>
		<graphicData>
			<texPath>Things/Building/Security/M240_Top</texPath>
			<graphicClass>Graphic_Single</graphicClass>
