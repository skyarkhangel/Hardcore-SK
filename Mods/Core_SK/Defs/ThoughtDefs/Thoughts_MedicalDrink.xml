<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>MedicalDrink</defName>
	<workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>MedicalDrink</hediff>
    <stages>
      <li>
        <label>buzzed-hidden</label>
        <description>Should not appear.</description>
        <baseMoodEffect>0</baseMoodEffect>
        <visible>false</visible>
      </li>
      <li>
        <label>Awful taste</label>
        <description>I feel slightly better but the taste is just awful.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
      <li>
        <label>Feeling better</label>
        <description>I feel much better!</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>     
      <li>
        <label>Painfree</label>
        <description>There's no pain anymore, it's great!</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
      <li>
        <label>Overdosed</label>
        <description>Uhh! I see funny shapes everywhere!</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>
      <li>
        <label>Completely Overdosed</label>
        <description>I feel like I'm flying! Please don't wake me up!</description>
        <baseMoodEffect>20</baseMoodEffect>
      </li>   	  
    </stages>
  </ThoughtDef>
  

  <ThoughtDef>
    <defName>HadMedicalDrink</defName>
    <durationDays>1</durationDays>
    <stackLimit>5</stackLimit>
    <stages>
      <li>
        <label>Feeling better</label>
        <description>Wow, I feel much better!</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>