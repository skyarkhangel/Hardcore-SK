<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- =========== HARDCORE SK: THOUGHTS ===============-->

	<ThoughtDef>
		<defName>AteReplicatedMeal</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<stackedEffectMultiplier>0.25</stackedEffectMultiplier>
		<stackLimit>3</stackLimit>
		<stages>
			<li>
				<label>Ate Replicated Meal</label>
				<description>I ate a Replicated Meal. It wasn't fancy, but it was filling!</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>FrostyBeer</defName>
		<durationDays>0.5</durationDays>
		<stackLimit>2</stackLimit>
		<stages>
			<li>
				<label>enjoyed a cold one</label>
				<description>Nothing better then a frosty beverage!</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>AteLuxuryMeal</defName>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>ate luxury meal</label>
				<description>That luxury meal was excellent. It nourished my body and my soul.</description>
				<baseMoodEffect>15</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>AteAgedCheese</defName>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>ate luxury cheese</label>
				<description>That luxury cheese was excellent. It had such a complex taste.</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- =========== Enviro ===============-->

	<ThoughtDef>
		<defName>AteCannedMeal</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<stackedEffectMultiplier>0.25</stackedEffectMultiplier>
		<stackLimit>3</stackLimit>
		<stages>
			<li>
				<label>Ate Canned meal</label>
				<description>I had to eat canned meal. It gives a metallic taste.</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>


	<!-- =========== Cats ===============-->

	<ThoughtDef>
		<defName>AteCatFood</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<stackedEffectMultiplier>0.25</stackedEffectMultiplier>
		<stackLimit>3</stackLimit>
		<stages>
			<li>
				<label>Ate Cat Food</label>
				<description>I had to eat cat food. What kind of colony is this where we feed the cats first, and the colonists later?</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>


	<!-- =========== Soylent Green ===============-->


	<ThoughtDef>
		<defName>AteSoylentGreen</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<stackLimit>5</stackLimit>
		<nullifyingTraits>
			<li>Cannibal</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>Ate Soylent Green</label>
				<description>I ate Soylent Green made from the meat of another human. This is bad.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>


	<!-- =========== VG ===============-->

	<ThoughtDef>
		<defName>AtePie</defName>
		<durationDays>1</durationDays>
		<stackLimit>4</stackLimit>
		<stages>
			<li>
				<label>Ate Pie</label>
				<description>I ate a really tasty pie. It's not a lie!</description>
				<baseMoodEffect>8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>


	<ThoughtDef>
		<defName>AteCandy</defName>
		<durationDays>1</durationDays>
		<stackLimit>5</stackLimit>
		<stages>
			<li>
				<label>Ate Candy</label>
				<description>I ate a really tasty candy. Now I'm sugar buzzed.</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>Hotdrink</defName>
		<durationDays>1</durationDays>
		<stackLimit>5</stackLimit>
		<stages>
			<li>
				<label>Hot Drink</label>
				<description>I drank a really nice hot drink, now I feel better.</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>


	<ThoughtDef>
		<defName>HadTea</defName>
		<durationDays>0.25</durationDays>
		<stackLimit>5</stackLimit>
		<stages>
			<li>
				<label>Drank Cup of Tea</label>
				<description>Tea is tasty! I like this.</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>HadFruitDrink</defName>
		<durationDays>0.25</durationDays>
		<stackLimit>5</stackLimit>
		<stages>
			<li>
				<label>Drank Fruit Drink</label>
				<description>That fruit drink was so healthy! I'm feeling good now.</description>
				<baseMoodEffect>7</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>


	<!-- =========== Medical Drink ===============-->


	<ThoughtDef>
		<defName>MedicalDrink</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>MedicalDrink</hediff>
		<stages>
			<li>
				<label>Buzzed (Hidden)</label>
				<description>Should not appear.</description>
				<baseMoodEffect>0</baseMoodEffect>
				<visible>false</visible>
			</li>
			<li>
				<label>Awful Taste</label>
				<description>I feel slightly better but the taste is just awful.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
			<li>
				<label>Feeling Better</label>
				<description>I feel much better!</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>     
			<li>
				<label>No Pain</label>
				<description>There's no pain anymore, it's great!</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
			<li>
				<label>Overdosed</label>
				<description>Uhh! I see funny shapes everywhere!</description>
				<baseMoodEffect>15</baseMoodEffect>
			</li>
			<li>
				<label>Completely Overdosed</label>
				<description>I feel like I'm flying! Please don't wake me up!</description>
				<baseMoodEffect>20</baseMoodEffect>
			</li>   	  
		</stages>
	</ThoughtDef>
</Defs>