<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ========================== Wolves ================================= -->
  <Verse.ThingDef Name="ThingBaseWolf" ParentName="AnimalThingBase" Abstract="True">
    <thingClass>SK.ShieldPawn</thingClass>
    <statBases>
      <Mass>60</Mass>
      <MoveSpeed>5.45</MoveSpeed>
      <ComfyTemperatureMin>-50</ComfyTemperatureMin>
      <MarketValue>920</MarketValue>
      <ImmunityGainSpeed>1.2</ImmunityGainSpeed>
      <MeleeDodgeChance>0.18</MeleeDodgeChance>
      <MeleeCritChance>0</MeleeCritChance>
    </statBases>
    <tools>
	  <li Class="CombatExtended.ToolCE">
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
		<armorPenetration>0.24</armorPenetration>
      </li>
	  <li Class="CombatExtended.ToolCE">
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
		<armorPenetration>0.24</armorPenetration>
      </li>
	  <li Class="CombatExtended.ToolCE">
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2.0</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
		<armorPenetration>0.22</armorPenetration>
      </li>
	  <li Class="CombatExtended.ToolCE">
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <commonality>0.2</commonality>
		<armorPenetration>0.1</armorPenetration>
      </li>
    </tools>
    <race>
      <herdAnimal>true</herdAnimal>
      <body>QuadrupedAnimalWithPawsAndTail</body>
      <predator>true</predator>
      <maxPreyBodySize>1.0</maxPreyBodySize>
      <petness>0.5</petness>
      <baseBodySize>0.85</baseBodySize>
      <baseHungerRate>0.75</baseHungerRate>
      <baseHealthScale>0.99</baseHealthScale>
      <foodType>CarnivoreAnimal, CarnivoreAnimalStrict</foodType>
      <gestationPeriodDays>22.5</gestationPeriodDays>
      <nameOnTameChance>1</nameOnTameChance>
      <trainableIntelligence>Advanced</trainableIntelligence>
      <wildness>0.7</wildness>
      <nuzzleMtbHours>60</nuzzleMtbHours>
      <manhunterOnDamageChance>0.3</manhunterOnDamageChance>
      <manhunterOnTameFailChance>0.03</manhunterOnTameFailChance>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2, 1.7)</li>
          <li>(3, 0.7)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>14</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.25</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.8</minAge>
          <soundWounded>Pawn_Dog_Injured</soundWounded>
          <soundDeath>Pawn_Dog_Death</soundDeath>
          <soundCall>Pawn_Dog_Call</soundCall>
          <soundAngry>Pawn_Dog_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>StandardAnimal</li>
      <li>BadassAnimal</li>
    </tradeTags>
    <modExtensions>
      <li Class="CombatExtended.RacePropertiesExtensionCE">
        <bodyShape>Quadruped</bodyShape>
      </li>
    </modExtensions>
  </Verse.ThingDef>

  <PawnKindDef ParentName="AnimalKindBase" Name="AnimalKindBaseWolf" Abstract="True">
    <combatPower>135</combatPower>
    <wildSpawn_spawnWild>true</wildSpawn_spawnWild>
