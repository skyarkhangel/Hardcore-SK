<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>
	<RecipeDef>
		<defName>MakeTincture</defName>
		<label>make mushroom tincture</label>
		<description>Instill mushrooms into tincture. Useful for medicine. Produces 1.</description>
		<jobString>Making Mushroom Tincture.</jobString>
		<workSpeedStat>BrewingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Chemlab_Medicine_Drink</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>400</workAmount>
		<targetCountAdjustment>1</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>GleamcapStem</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>GleamcapStem</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MushroomTincture>1</MushroomTincture>
		</products>
		<skillRequirements>
			<li>
				<skill>Medicine</skill>
				<minLevel>3</minLevel>
			</li>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
		<recipeUsers>
			<li>ButcheringSpot</li>
			<li>TableButcherNeolithic</li>
			<li>TableButcher</li>
		</recipeUsers>
		<researchPrerequisite>SK_Medicalcare</researchPrerequisite>
	</RecipeDef>

