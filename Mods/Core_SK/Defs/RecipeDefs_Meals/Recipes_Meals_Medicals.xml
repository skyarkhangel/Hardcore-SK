<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	
  <RecipeDef>
    <defName>MakeTincture</defName>
    <label>Make Mushroom Tincture</label>
    <description>Instill mushrooms into tincture. Useful for medicine. Produces 1.</description>
    <jobString>Making Mushroom Tincture.</jobString>
    <workSpeedStat>BrewingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
	<soundWorking>Chemlab_Medicine_Drink</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>400</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>GleamcapStem</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>GleamcapStem</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MushroomTincture>1</MushroomTincture>
    </products>
		<skillRequirements>
			<li>
				<skill>Medicine</skill>
				<minLevel>6</minLevel>
			</li>
		</skillRequirements>
    <workSkill>Cooking</workSkill>
    <recipeUsers>
      <li>TableButcher</li>
    </recipeUsers>
    <researchPrerequisite>SK_FungiIII</researchPrerequisite>
  </RecipeDef>
  
  
    <RecipeDef>
    <defName>MakeTincture_Bulk</defName>
    <label>Make bottles of Mushroom Tincture</label>
    <description>Instill a few bottles of tincture from mushrooms. Useful for medicine. Produces 4.</description>
    <jobString>Making bottles of Mushroom Tincture.</jobString>
    <workSpeedStat>BrewingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
	<soundWorking>Chemlab_Medicine_Drink</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>800</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>GleamcapStem</li>
          </thingDefs>
        </filter>
        <count>12</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>GleamcapStem</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MushroomTincture>4</MushroomTincture>
    </products>
		<skillRequirements>
			<li>
				<skill>Medicine</skill>
				<minLevel>6</minLevel>
			</li>
		</skillRequirements>
    <workSkill>Cooking</workSkill>
    <recipeUsers>
      <li>Brewery</li>
    </recipeUsers>
    <researchPrerequisite>SK_FungiIII</researchPrerequisite>
  </RecipeDef>
	
	



  <RecipeDef>
    <defName>BrewMedicalDrink</defName>
    <label>Brew Medical Drink</label>
    <description>Brew a bottle of healthy medical drink from Healroot and Hops. Produces 1.</description>
    <jobString>Brewing Medical Drink.</jobString>
    <workSpeedStat>BrewingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
	<soundWorking>Chemlab_Medicine_Drink</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
      <recipeUsers>
         <li>TableChemlab</li>
      </recipeUsers>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>HerbalMedicine</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RawHops</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawHops</li>
		<li>HerbalMedicine</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MedicalDrink>1</MedicalDrink>
    </products>
		<skillRequirements>
			<li>
				<skill>Medicine</skill>
				<minLevel>10</minLevel>
			</li>
		</skillRequirements>
    <workSkill>Cooking</workSkill>
    <researchPrerequisite>SK_MedicineII</researchPrerequisite>
  </RecipeDef>

</RecipeDefs>
