<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>MakeTincture</defName>
		<label>brew mushroom tincture</label>
		<description>Instill mushrooms into tincture. Useful for medicine. Requires basic understanding of cooking. Produces 1.</description>
		<jobString>Brewing mushroom tincture.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<soundWorking>Chemlab_Medicine_Drink</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>400</workAmount>
		<targetCountAdjustment>1</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>GleamcapStem</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>GleamcapStem</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MushroomTincture>1</MushroomTincture>
		</products>
		<skillRequirements>
			<Medicine>1</Medicine>
		</skillRequirements>
		<workSkill>Medicine</workSkill>
		<recipeUsers>
			<li>ButcherSpot</li>
			<li>TableButcher</li>
			<li>TableKitchen</li>
		</recipeUsers>
		<researchPrerequisite>Medicine_A1</researchPrerequisite>
	</RecipeDef>

	<RecipeDef>
		<defName>MakeTincture_Bulk</defName>
		<label>brew bottles of mushroom tincture</label>
		<description>Instill a few bottles of tincture from mushrooms. Useful for medicine. Requires basic understanding of cooking. Produces 4.</description>
		<jobString>Brewing bottles of mushroom tincture.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Chemlab_Medicine_Drink</soundWorking>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>800</workAmount>
		<targetCountAdjustment>1</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>GleamcapStem</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>GleamcapStem</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MushroomTincture>4</MushroomTincture>
		</products>
		<skillRequirements>
			<Medicine>6</Medicine>
		</skillRequirements>
		<workSkill>Medicine</workSkill>
		<researchPrerequisite>Medicine_A2</researchPrerequisite>
	</RecipeDef>

	<RecipeDef>
		<defName>MakeTinctureHealroot</defName>
		<label>brew healroot tincture</label>
		<description>Instill healroot into a tincture. Useful for medicine. Requires basic understanding of cooking. Produces 1.</description>
		<jobString>Brewing healroot tincture.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Chemlab_Medicine_Drink</soundWorking>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>400</workAmount>
		<targetCountAdjustment>1</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MedicineHerbal</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Ash</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MedicineHerbal</li>
				<li>Ash</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<HealrootTincture>1</HealrootTincture>
		</products>
		<skillRequirements>
			<Medicine>3</Medicine>
		</skillRequirements>
		<workSkill>Medicine</workSkill>
		<recipeUsers>
			<li>ButcherSpot</li>
			<li>TableButcher</li>
			<li>TableKitchen</li>
		</recipeUsers>
		<researchPrerequisite>Medicine_A1</researchPrerequisite>
	</RecipeDef>	

	<RecipeDef>
		<defName>BrewMedicalDrink</defName>
		<label>Make Antibiotics</label>
		<description>Make Antibiotics from healroot and hops or yeast. Requires basic understanding of cooking. Produces 1.</description>
		<jobString>Brewing medical drink.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Chemlab_Medicine_Drink</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>1000</workAmount>
		<recipeUsers>
			<li>meditable</li>
		</recipeUsers>
		<targetCountAdjustment>1</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MedicineHerbal</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RawHops</li>
						<li>Yeast</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Yeast</li>
				<li>RawHops</li>
				<li>MedicineHerbal</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MedicalDrink>1</MedicalDrink>
		</products>
		<skillRequirements>
			<Medicine>10</Medicine>
		</skillRequirements>
		<workSkill>Medicine</workSkill>
		<researchPrerequisite>PenoxycylineProduction</researchPrerequisite>
	</RecipeDef>

</Defs>
