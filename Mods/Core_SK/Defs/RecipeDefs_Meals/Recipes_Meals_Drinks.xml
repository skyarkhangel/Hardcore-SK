<Defs>

	<RecipeDef>
		<defName>MakeFruitYogurt</defName>
		<label>cook fruit yogurts</label>
		<description>Cook yogurts from milk or soy milk and some fruits. Produces 3.</description>
		<jobString>Cooking yogurts.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
	        <li>
	        <filter>
	          <categories>
	            <li>FruitFoodRaw</li>
	          </categories>
	        </filter>
	        <count>18</count>
	        </li>
			<li>
				<filter>
					<categories>
						<li>CookingSupplies</li>
					</categories>
				</filter>
				<count>18</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
	            <li>FruitFoodRaw</li>
	        </categories>
			<thingDefs>
				<li>coconutmilk</li>
				<li>SoyMilk</li>
			   	<li>Milk</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<FruitYogurt>3</FruitYogurt>
		</products>
		<skillRequirements>
			<Cooking>8</Cooking>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
	</RecipeDef>

	
