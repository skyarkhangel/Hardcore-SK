		<ingredients>
			<li>
				<filter>
					<categories>
						<li>FruitFoodRaw</li>
					</categories>
				</filter>
				<count>0.4</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>CookingSupplies</li>
					</categories>
				</filter>
				<count>0.6</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>FruitFoodRaw</li>
			</categories>
			<thingDefs>
				<li>coconutmilk</li>
				<li>SoyMilk</li>
				<li>Milk</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<FruitYogurt>3</FruitYogurt>
		</products>
		<skillRequirements>
			<Cooking>8</Cooking>
