<RecipeDef>
	<defName>BrewTea</defName>
	<label>brew cups of tea</label>
	<description>Prepare tea leaves and brew them into cups of tea. Produces 3.</description>
	<jobString>Brewing cups of tea.</jobString>
	<workSpeedStat>BrewingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
	<workAmount>1200</workAmount>
     	<allowMixingIngredients>true</allowMixingIngredients>
	<recipeUsers>
         <li>TableCoffee</li>
		 <li>Brewery</li>
      </recipeUsers>
	<ingredients>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>RawTea</li>
	      </thingDefs>
	    </filter>
	    <count>15</count>
	  </li>
			<li>
				<filter>
					<thingDefs>
						<li>Sugar</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>RawTea</li>
		<li>Sugar</li>
	  </thingDefs>
	</fixedIngredientFilter>

	<products>
	  <Cuptea>3</Cuptea>
	</products>
		<skillRequirements>
			<Cooking>2</Cooking>
		</skillRequirements>
	<workSkill>Cooking</workSkill>
    <researchPrerequisite>SK_TropicalCropsIII</researchPrerequisite>
</RecipeDef>

	
