<Defs>

	<!-- Terraforming -->

	<ThingDef ParentName="RFF_TerraformBasicBase">
		<defName>Salt-RockyDirt</defName>
		<label>Salt field ► Rocky dirt</label>
		<description>↑ Salted earth\n↑ Salt field\n\n↓ Rocky dirt\n\n  ▪ 5 Salt</description>
		<uiIconPath>UI/Icons/Terraforming/Salt-RockyDirt</uiIconPath>
		<modExtensions>
			<li Class="FertileFields.Terrain">
				<above>
					<li>SaltField</li>
					<li>Salted_Earth</li>
				</above>
				<result>RockySoil</result>
				<products>
					<Salt>5</Salt>
				</products>
			</li>
		</modExtensions>
		<statBases>
			<WorkToBuild>3000</WorkToBuild>
		</statBases>
		<costList>
			<CrushedStone>15</CrushedStone>
			<SandResource>5</SandResource>
			<Fertilizer>2</Fertilizer>
		</costList>
	</ThingDef>
