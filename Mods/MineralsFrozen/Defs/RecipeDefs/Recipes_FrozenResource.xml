<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <RecipeDef>
    <defName>Make_IceFromSnow</defName>
    <label>Make ice blocks</label>
    <description>Make ice blocks by compacting snow.</description>
    <jobString>Compacting snow into ice.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <recipeUsers>
      <li>TableStonecutter</li>
      <li>TableMachining</li>
      <li>TableStonecutterNeolithic</li>
    </recipeUsers>
    <workAmount>1000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>SnowBlocks</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>SnowBlocks</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <IceBlocks>10</IceBlocks>
    </products>
    <researchPrerequisite>FrozenConstructionII</researchPrerequisite>
  </RecipeDef>

</Defs>
