<Defs>
  
  <ThingDef Name="FrozenBlockBase" ParentName="SK_ResourceBase" Class="MineralsFrozen.ThingDef_FrozenBlockBase" Abstract="True">
    <thingClass>MineralsFrozen.FrozenBlockBase</thingClass>
