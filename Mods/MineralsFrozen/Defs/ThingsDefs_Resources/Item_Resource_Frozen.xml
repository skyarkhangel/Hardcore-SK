  <ThingDef ParentName="FrozenBlockBase" Class="MineralsFrozen.ThingDef_FrozenBlockBase">
    <defName>SnowBlocks</defName>
    <label>Snow Blocks</label>
    <description>Hunks of compacted snow.</description>
