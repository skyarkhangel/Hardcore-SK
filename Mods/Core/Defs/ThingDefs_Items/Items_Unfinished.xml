<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef Name="UnfinishedBase" Abstract="True">
    <thingClass>UnfinishedThing</thingClass>
    <category>Item</category>
    <label>Unfinished thing</label>
    <graphicData>
      <texPath>Things/Item/Unfinished/UnfinishedSculpture</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <useHitPoints>true</useHitPoints>
    <isUnfinishedThing>true</isUnfinishedThing>
    <selectable>true</selectable>
    <tradeability>Never</tradeability>
    <drawerType>RealtimeOnly</drawerType>
    <!-- For CompForbiddable -->
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
    <thingCategories>
      <li>Unfinished</li>
    </thingCategories>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
  </ThingDef>

  <ThingDef ParentName="UnfinishedBase">
    <defName>UnfinishedSculpture</defName>
    <label>Unfinished sculpture</label>
    <graphicData>
      <texPath>Things/Item/Unfinished/UnfinishedSculpture</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
  </ThingDef>

  <ThingDef ParentName="UnfinishedBase">
    <defName>UnfinishedGun</defName>
    <label>Unfinished gun</label>
    <graphicData>
      <texPath>Things/Item/Unfinished/UnfinishedGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories />
  </ThingDef>
  
  <ThingDef ParentName="UnfinishedBase">
    <defName>UnfinishedWeapon</defName>
    <label>Unfinished weapon</label>
    <graphicData>
      <texPath>Things/Item/Unfinished/UnfinishedWeapon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
  </ThingDef>

  <ThingDef ParentName="UnfinishedBase">
    <defName>UnfinishedTechArmor</defName>
    <label>Unfinished armor</label>
    <graphicData>
      <texPath>Things/Item/Unfinished/UnfinishedTechArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories />
  </ThingDef>
  
  <ThingDef ParentName="UnfinishedBase">
    <defName>UnfinishedApparel</defName>
    <label>Unfinished apparel</label>
    <graphicData>
      <texPath>Things/Item/Unfinished/UnfinishedApparel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
      <li>Metallic</li>
    </stuffCategories>
    <comps>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
  </ThingDef>


  <!-- ======================= Minified things ========================= -->

  <ThingDef Name="MinifiedBase" Abstract="True">
    <thingClass>MinifiedThing</thingClass>
    <category>Item</category>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <!-- for CompForbiddable -->
    <drawerType>RealtimeOnly</drawerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
  </ThingDef>

  <ThingDef ParentName="MinifiedBase">
    <defName>MinifiedSculpture</defName>
    <label>Sculpture</label>
    <thingCategories>
      <li>Art</li>
    </thingCategories>
    <inspectorTabs>
      <li>ITab_Art</li>
