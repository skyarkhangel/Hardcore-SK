<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef ParentName="BuildingBase">
    <defName>AncientConcreteBarrier</defName>
    <label>ancient concrete barrier</label>
    <thingClass>Building</thingClass>
    <category>Building</category>
		<description>A traffic management solution from long ago.</description>
		<graphicData>
      <texPath>Things/Building/Ruins/AncientConcreteBarrier</texPath>
      <graphicClass>Graphic_Random</graphicClass>
			<color>(231,216,206)</color>
    </graphicData>
    <startingHpRange>
      <min>0.5</min>
      <max>1.3</max>
    </startingHpRange>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>35</pathCost>
    <pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <Beauty>-10</Beauty>
      <Flammability>0</Flammability>
      <WorkToBuild>600</WorkToBuild>
    </statBases>
    <building>
			<ai_chillDestination>false</ai_chillDestination>
			<isInert>true</isInert>
    </building>
    <costList>
      <Steel>15</Steel>
    </costList>
    <filthLeaving>BuildingRubble</filthLeaving>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <repairEffect>ConstructDirt</repairEffect>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>AncientLamppost</defName>
    <label>ancient lamppost</label>
    <thingClass>Building</thingClass>
    <category>Building</category>
		<description>Road lighting from long ago. No longer functional.</description>
		<graphicData>
      <texPath>Things/Building/Ruins/AncientLamppost</texPath>
      <graphicClass>Graphic_Random</graphicClass>
			<drawSize>(1,2)</drawSize>
			<color>(231,216,206)</color>
			<shadowData>
        <volume>(0.28, 0.5, 0.28)</volume>
				<offset>(0,0,-0.39)</offset>
      </shadowData>
    </graphicData>
    <startingHpRange>
      <min>0.5</min>
      <max>1.3</max>
    </startingHpRange>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>400</WorkToBuild>
		</statBases>
    <fillPercent>0.25</fillPercent>
    <passability>PassThroughOnly</passability>
    <pathCost>100</pathCost>
    <blockWind>true</blockWind>
    <filthLeaving>BuildingRubble</filthLeaving>
    <rotatable>false</rotatable>
    <costList>
      <Steel>15</Steel>
    </costList>
  </ThingDef>

</ThingDefs>