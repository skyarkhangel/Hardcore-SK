    <durationDays>30</durationDays>
    <stackLimit>5</stackLimit>
	<showBubble>true</showBubble>
    <stages>
      <li>
        <label>failed to rescue {0}</label>
        <description>We had a chance to rescue my relative, and failed. I could have helped!</description>
        <baseMoodEffect>-18</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

