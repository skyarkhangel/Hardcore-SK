<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <IncidentDef>
    <defName>Eclipse</defName>
    <WorkerClass>IncidentWorker_MakeMapCondition</WorkerClass>
    <mapCondition>Eclipse</mapCondition>
    <letterLabel>Eclipse</letterLabel>
    <letterText>One of the moons of this planet has orbited in front of the sun. An eclipse has begun.</letterText>
    <letterType>BadNonUrgent</letterType>
    <chance>3</chance>
    <minRefireDays>30</minRefireDays>
    <durationDays>
      <min>1.5</min>
      <max>2.5</max>
    </durationDays>
  </IncidentDef>

  <IncidentDef>
    <defName>SolarFlare</defName>
    <workerClass>IncidentWorker_MakeMapCondition</workerClass>
    <mapCondition>SolarFlare</mapCondition>
    <letterLabel>Solar flare</letterLabel>
    <letterText>A solar flare has begun.\n\nThe intense radiation will shut down all electrical devices.\n\nIt should pass in about a day.</letterText>
    <letterType>BadNonUrgent</letterType>
    <chance>1.5</chance>
    <minRefireDays>30</minRefireDays>
    <durationDays>
      <min>0.3</min>
      <max>1.0</max>
    </durationDays>
  </IncidentDef>
  
  <IncidentDef>
    <defName>PsychicDrone</defName>
    <workerClass>IncidentWorker_PsychicDrone</workerClass>
    <mapCondition>PsychicDrone</mapCondition>
    <chance>1.0</chance>
    <minRefireDays>30</minRefireDays>
    <durationDays>
      <min>1.5</min>
      <max>3.5</max>
    </durationDays>
  </IncidentDef>

  <IncidentDef>
    <defName>ToxicFallout</defName>
    <workerClass>IncidentWorker_MakeMapCondition</workerClass>
    <mapCondition>ToxicFallout</mapCondition>
    <letterLabel>Toxic fallout</letterLabel>
    <letterText>A distant chemical fire has released a plume of poison over this entire region.\n\nAny person or creature not under a roof will be slowly sickened by the toxic dust settling out of the atmosphere.\n\nIt will last for anywhere between a few days to over a month.</letterText>
    <letterType>BadNonUrgent</letterType>
    <chance>0.25</chance>
    <earliestDay>40</earliestDay>
    <minRefireDays>180</minRefireDays>
    <durationDays>
      <min>5</min>
      <max>21</max>
    </durationDays>
  </IncidentDef>

  <IncidentDef>
    <defName>VolcanicWinter</defName>
    <workerClass>IncidentWorker_MakeMapCondition</workerClass>
    <mapCondition>VolcanicWinter</mapCondition>
    <letterLabel>Volcanic winter</letterLabel>
    <letterText>A distant supervolcano has erupted and begun spewing millions of cubic kilometers of ash into the atmosphere.\n\nAsh in the atmosphere will obscure the sun. Temperatures will drop and plants will suffer for lack of sunlight. It could pass in a few weeks, or it might last many months.</letterText>
    <letterType>BadNonUrgent</letterType>
    <chance>0.11</chance>
    <earliestDay>60</earliestDay>
    <minRefireDays>280</minRefireDays>
    <durationDays>
      <min>15</min>
      <max>80</max>
    </durationDays>
  </IncidentDef>

  <IncidentDef>
    <defName>HeatWave</defName>
    <workerClass>IncidentWorker_HeatWave</workerClass>
    <mapCondition>HeatWave</mapCondition>
    <letterLabel>Heat wave</letterLabel>
    <letterText>An unusual heat wave has begun. Watch out for heat stroke.</letterText>
    <letterType>BadNonUrgent</letterType>
    <chance>3</chance>
    <minRefireDays>30</minRefireDays>
    <durationDays>
      <min>3.0</min>
      <max>7.0</max>
    </durationDays>
  </IncidentDef>

  <IncidentDef>
    <defName>ColdSnap</defName>
    <workerClass>IncidentWorker_ColdSnap</workerClass>
    <mapCondition>ColdSnap</mapCondition>
    <letterLabel>Cold snap</letterLabel>
    <letterText>An unusual cold snap has set in. Watch out for hypothermia and dying crops.</letterText>
    <letterType>BadNonUrgent</letterType>
    <chance>3</chance>
    <minRefireDays>30</minRefireDays>
    <durationDays>
      <min>3.0</min>
      <max>7.0</max>
    </durationDays>
  </IncidentDef>
  
  <IncidentDef>
    <defName>Flashstorm</defName>
    <workerClass>IncidentWorker_Flashstorm</workerClass>
    <letterLabel>Flashstorm</letterLabel>
    <letterText>Extreme amounts of lightning are hitting a small region. This can cause massive fires.</letterText>
    <letterType>BadNonUrgent</letterType>
    <chance>0.3</chance>
    <minRefireDays>30</minRefireDays>
    <durationDays>
      <min>0.15</min>
      <max>0.2</max>
    </durationDays>
  </IncidentDef>

  <IncidentDef>
    <defName>ShortCircuit</defName>
    <workerClass>IncidentWorker_ShortCircuit</workerClass>
    <chance>1.2</chance>
    <minRefireDays>15</minRefireDays>
  </IncidentDef>

  <IncidentDef>
    <defName>CropBlight</defName>
    <workerClass>IncidentWorker_CropBlight</workerClass>
    <chance>0.4</chance>
    <minRefireDays>70</minRefireDays>
  </IncidentDef>

  <IncidentDef>
    <defName>Alphabeavers</defName>
    <workerClass>IncidentWorker_Alphabeavers</workerClass>
    <chance>1.0</chance>
    <minRefireDays>15</minRefireDays>
    <allowedBiomes>
      <li>BorealForest</li>
      <li>TemperateForest</li>
      <li>TropicalRainforest</li>
    </allowedBiomes>
  </IncidentDef>


</Defs>