<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<FactionDef Abstract="True" Name="SpacerBase">
		<label>spacer</label>
		<description>People from the distant reaches of space.</description>
		<pawnsPlural>spacers</pawnsPlural>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<fixedName>Spacer</fixedName>
		<techLevel>Spacer</techLevel>
		<backstoryCategory>Civil</backstoryCategory>
		<hidden>true</hidden>
		<rescueesCanJoin>true</rescueesCanJoin>
		<autoFlee>false</autoFlee>
		<geneticVariance>1</geneticVariance>
		<hairTags>
			<li>Urban</li>
		</hairTags>
		<apparelStuffFilter>
			<thingDefs>
				<li>Synthread</li>
				<li>Hyperweave</li>
