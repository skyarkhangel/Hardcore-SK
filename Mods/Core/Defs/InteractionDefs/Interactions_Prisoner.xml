<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <InteractionDef>
    <defName>PrisonerFriendlyChat</defName>
    <label>prisoner chat</label>
    <symbol>Things/Mote/SpeechSymbols/PrisonerConvince</symbol>
    <initiatorXpGainSkill>Social</initiatorXpGainSkill>
    <initiatorXpGainAmount>50</initiatorXpGainAmount>
    <recipientThought>PrisonerFriendlyChat</recipientThought>
    <logRulesInitiator>
      <rulesStrings>
        <li>logentry->Tried to convince [other_nameShortIndef] of the goodness of the colony.</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>logentry->Listened to [other_nameShortIndef] talk about how nice the colony is.</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>

  <InteractionDef>
    <defName>RecruitAttempt</defName>
    <label>recruit attempt</label>
    <symbol>Things/Mote/SpeechSymbols/PrisonerRecruit</symbol>
    <workerClass>InteractionWorker_RecruitAttempt</workerClass>
    <logRulesInitiator>
      <rulesStrings>
        <li>logentry->Attempted to recruit [other_nameShortIndef].</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>logentry->Listened to a recruitment pitch from [other_nameShortIndef].</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>

