<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <InteractionDef>
    <defName>AnimalChat</defName>
    <label>animal chat</label>
    <symbol>Things/Mote/SpeechSymbols/AnimalChat</symbol>
    <initiatorXpGainSkill>Animals</initiatorXpGainSkill>
    <initiatorXpGainAmount>90</initiatorXpGainAmount>
    <logRulesInitiator>
      <rulesStrings>
        <li>logentry->Communicated with [other_nameShortIndef], attempting to build rapport.</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>logentry->Responded to [other_nameShortIndef]'s friendly communication.</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>

  <InteractionDef>
    <defName>TrainAttempt</defName>
    <label>train attempt</label>
    <symbol>Things/Mote/SpeechSymbols/TrainAttempt</symbol>
    <initiatorXpGainSkill>Animals</initiatorXpGainSkill>
    <initiatorXpGainAmount>90</initiatorXpGainAmount>
    <logRulesInitiator>
      <rulesStrings>
        <li>logentry->Trained [other_nameShortIndef].</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>logentry->Was trained by [other_nameShortIndef].</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>

  <InteractionDef>
    <defName>TameAttempt</defName>
    <label>tame attempt</label>
    <symbol>Things/Mote/SpeechSymbols/PrisonerRecruit</symbol>
    <workerClass>InteractionWorker_RecruitAttempt</workerClass>
    <initiatorXpGainSkill>Animals</initiatorXpGainSkill>
    <initiatorXpGainAmount>90</initiatorXpGainAmount>
    <logRulesInitiator>
      <rulesStrings>
        <li>logentry->Attempted to tame [other_nameShortIndef].</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>logentry->Watches [other_nameShortIndef] attempt to tame me.</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>
  
  <InteractionDef>
    <defName>Nuzzle</defName>
    <label>nuzzle</label>
    <interactionMote>Mote_Thought</interactionMote>
    <symbol>Things/Mote/SpeechSymbols/Nuzzle</symbol>
    <workerClass>InteractionWorker_Nuzzle</workerClass>
    <logRulesInitiator>
      <rulesStrings>
        <li>logentry->Nuzzled [other_nameShortIndef].</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>logentry->Was nuzzled by [other_nameShortIndef].</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>

</Defs>
