        <skill>Social</skill>
        <baseValue>0</baseValue>
        <bonusPerLevel>0.015</bonusPerLevel>
      </li>
    </skillNeedFactors>
    <capacityFactors>
      <li>
        <capacity>Talking</capacity>
        <weight>0.9</weight>
        <allowedDefect>0.05</allowedDefect>
        <max>1</max>
      </li>
      <li>
        <capacity>Hearing</capacity>
        <weight>0.9</weight>
        <allowedDefect>0.20</allowedDefect>
        <max>1</max>
      </li>
    </capacityFactors>
  </StatDef>

    <StatDef>
