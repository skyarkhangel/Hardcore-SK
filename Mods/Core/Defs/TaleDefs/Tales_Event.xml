<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <TaleDef>
    <defName>LaunchedShip</defName>
    <label>launched ship</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>50</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawn_nameShortDef] escaping the planet</li>
        <li>tale_noun->[pawn_nameShortDef] taking off in a spaceship</li>
        <li>image->[pawn_nameFull] being launched towards the stars [circumstance_group]</li>
        <li>image->[pawn_nameFull] racing towards the heavens [circumstance_group]</li>
        <li>image->[pawn_nameFull] accelerating to escape velocity [circumstance_group]</li>
        <li>image->[pawn_nameFull] piloting a rocket [circumstance_group]</li>
        <li>circumstance_phrase->in front of a [terrainfeature]</li>
        <li>circumstance_phrase->with incredible force</li>
        <li>circumstance_phrase->in a plume of dust and rocks</li>
        <li>circumstance_phrase->with rockets firing dramatically</li>
        <li>circumstance_phrase->in a precision takeoff</li>
        <li>desc_sentence->[pawn_pronoun] is concentrating intently on the controls.</li>
        <li>desc_sentence->[pawn_pronoun] has [pawn_possessive] eyes closed and looks confident.</li>
        <li>desc_sentence->[pawn_pronoun] is sleeping, [pawn_possessive] eyes closed peacefully.</li>
        <li>desc_sentence->[pawn_pronoun] is smiling with grim joy.</li>
        <li>desc_sentence->[pawn_pronoun] seems to be fully in control of the situation.</li>
        <li>desc_sentence->There is a flame trail licking off the back of the ship.</li>
        <li>desc_sentence->A nearby [animal] is looking up, startled.</li>
        <li>desc_sentence->A [animal] is fleeing the launch in fear.</li>
        <li>desc_sentence->There is a [terrainfeature] in the background.</li>
        <li>desc_sentence->A [outlander] watches silently from afar.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>

  <TaleDef>
    <defName>SocialFight</defName>
    <label>social fight</label>
    <taleClass>Tale_DoublePawn</taleClass>
    <type>Volatile</type>
    <firstPawnSymbol>pawna</firstPawnSymbol>
    <secondPawnSymbol>pawnb</secondPawnSymbol>
    <baseInterest>10</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawna_nameShortDef] [fight_name_present] [pawnb_nameShortDef]</li>
        <li>image->[pawna_nameFull] insulting [pawnb_nameFull] [circumstance_group]</li>
        <li>image->[pawna_nameFull] taunting [pawnb_nameFull] [circumstance_group]</li>
        <li>image->[pawna_nameFull] threatening [pawnb_nameFull] [circumstance_group]</li>
        <li>image->[pawna_nameFull] intimidating [pawnb_nameFull] [circumstance_group]</li>
        <li>image->[pawna_nameFull] attacking [pawnb_nameFull] [circumstance_group]</li>
        <li>image->[pawna_nameFull] assaulting [pawnb_nameFull] [circumstance_group]</li>
        <li>image->[pawna_nameFull] punching [pawnb_nameFull] [circumstance_group]</li>
        <li>image->[pawna_nameFull] kicking [pawnb_nameFull] [circumstance_group]</li>
        <li>image->[pawna_nameFull] cowering from [pawnb_nameFull] [circumstance_group]</li>
        <li>fight_name_present->assaulting</li>
        <li>fight_name_present->attacking</li>
        <li>fight_name_present->fighting</li>
        <li>circumstance_phrase->while [pawnb_nameShortDef] insults [pawna_objective]</li>
        <li>circumstance_phrase->while [pawnb_nameShortDef] taunts [pawna_objective]</li>
        <li>circumstance_phrase->while [pawnb_nameShortDef] threatens [pawna_objective]</li>
        <li>circumstance_phrase->while [pawnb_nameShortDef] intimidates [pawna_objective]</li>
        <li>circumstance_phrase->while [pawnb_nameShortDef] attacks [pawna_objective]</li>
        <li>circumstance_phrase->while [pawnb_nameShortDef] assaults [pawna_objective]</li>
        <li>circumstance_phrase->while [pawnb_nameShortDef] punches [pawna_objective]</li>
        <li>circumstance_phrase->while [pawnb_nameShortDef] kicks [pawna_objective]</li>
        <li>circumstance_phrase->while [pawnb_nameShortDef] cowers from [pawna_objective]</li>
        <li>desc_sentence->[target] appears without remorse.</li>
        <li>desc_sentence->[target] is consumed with passionate rage.</li>
        <li>desc_sentence->[target] has no emotion or expression.</li>
        <li>desc_sentence->[target]'s body is covered in [gore].</li>
        <li>desc_sentence->[target] is screaming furiously.</li>
        <li>desc_sentence->[target] is visibly wounded.</li>
        <li>desc_sentence->[target]'s eyes are glowing [color].</li>
        <li>target->[pawna_nameShortDef]</li>
        <li>target->[pawnb_nameShortDef]</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>

  <TaleDef>
    <defName>CollapseDodged</defName>
    <label>collapse dodged</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>10</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawn_nameShortDef] dodging a cavein</li>
        <li>tale_noun->[pawn_nameShortDef] nearly crushed by falling objects</li>
        <li>image->[pawn_nameFull] leaping away from a collapse of debris [circumstance_group]</li>
        <li>image->[pawn_nameFull] narrowly avoiding a cavein [circumstance_group]</li>
        <li>image->[pawn_nameFull] avoiding a falling ceiling [circumstance_group]</li>
        <li>image->[pawn_nameFull] avoiding certain death by a falling rock [circumstance_group]</li>
        <li>circumstance_phrase->that vanishes behind a curtain of debris and dust</li>
        <li>circumstance_phrase->that pulverizes everything beneath it</li>
        <li>circumstance_phrase->which impacts with incredible force</li>
        <li>desc_sentence->[pawn_pronoun] is sweating with exertion.</li>
        <li>desc_sentence->[pawn_pronoun] appears to be terrified.</li>
        <li>desc_sentence->[pawn_pronoun] is scratched and bleeding.</li>
        <li>desc_sentence->[pawn_pronoun] has lost [pawn_possessive] balance.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>

</Defs>
