<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>PlantRose</defName>
    <label>rose</label>
    <description>A beautiful cultivated flower, symbolic of love and romance since ancient times.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>14</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Rose</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible>
      <nutrition>0.05</nutrition>
    </ingestible>
    <plant>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<reproduces>false</reproduces>
			<harvestTag>Standard</harvestTag>
			<sowWork>400</sowWork>
			<sowTags>
				<li>Ground</li>
				<li>Decorative</li>
			</sowTags>
			<growMinGlow>0.3</growMinGlow>
			<topWindExposure>0.1</topWindExposure>
			<growDays>1.5</growDays>
			<lifespanFraction>8</lifespanFraction>
			<visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <defName>PlantDaylily</defName>
    <label>daylily</label>
    <description>A beautiful cultivated flower - great for brightening up a drab yard. Must be replanted often.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>18</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Daylily</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible>
      <nutrition>0.05</nutrition>
    </ingestible>
    <plant>
      <fertilitySensitivity>1</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <reproduces>false</reproduces>
      <harvestTag>Standard</harvestTag>
      <sowWork>400</sowWork>
      <sowTags>
        <li>Ground</li>
        <li>Decorative</li>
      </sowTags>
      <growMinGlow>0.3</growMinGlow>
      <topWindExposure>0.1</topWindExposure>
      <growDays>1.5</growDays>
      <lifespanFraction>5</lifespanFraction>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>

</Defs>
