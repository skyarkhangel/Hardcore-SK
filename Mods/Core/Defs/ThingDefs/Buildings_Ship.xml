    <placeWorkers>
      <li>PlaceWorker_HeadOnShipBeam</li>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <building>
      <shipPart>true</shipPart>
      <ignoreNeedsPower>true</ignoreNeedsPower>
