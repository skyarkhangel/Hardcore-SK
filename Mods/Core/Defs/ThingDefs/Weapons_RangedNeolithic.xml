        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Arrow_Short</projectileDef>
        <warmupTicks>150</warmupTicks>
        <range>29</range>
        <soundCast>BowSmall</soundCast>
      </li>
    </verbs>
  </ThingDef>


