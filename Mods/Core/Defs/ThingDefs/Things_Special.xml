<?xml version="1.0" encoding="utf-8" ?>
<ThingDefinitions>


  <ThingDef>
    <defName>RectTrigger</defName>
    <category>Ethereal</category>
    <label>RectTrigger</label>
    <thingClass>RectTrigger</thingClass>
    <drawerType>None</drawerType>
    <tickerType>Normal</tickerType>
  </ThingDef>

  <ThingDef>
    <defName>Explosion</defName>
    <category>Ethereal</category>
    <label>explosion</label>
    <thingClass>Explosion</thingClass>
    <drawerType>None</drawerType>
    <tickerType>Normal</tickerType>
    <useHitPoints>false</useHitPoints>
  </ThingDef>
  
  <ThingDef>
    <defName>Puddle_Fuel</defName>
    <label>fuel puddle</label>
    <thingClass>LiquidFuel</thingClass>
    <category>Item</category>
    <graphicData>
      <texPath>Things/Item/Special/LiquidFuel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
    </graphicData>
    <altitudeLayer>LowPlant</altitudeLayer>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <description>Burns on the ground.</description>
  </ThingDef>

  <ThingDef>
    <defName>DropPodIncoming</defName>
    <label>drop pod (incoming)</label>
    <thingClass>DropPodIncoming</thingClass>
    <category>Skyfaller</category>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Special/DropPod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>1.9</drawSize>
    </graphicData>
    <altitudeLayer>MetaOverlays</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <drawOffscreen>true</drawOffscreen>
  </ThingDef>


  <ThingDef>
    <defName>DropPod</defName>
    <label>drop pod</label>
    <category>Item</category>
    <thingClass>DropPod</thingClass>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Special/DropPod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.9</drawSize>
      <shadowData>
        <volume>(0.8, 0.6, 0.8)</volume>
      </shadowData>
    </graphicData>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <selectable>true</selectable>
  </ThingDef>



  <ThingDef>
    <defName>Fire</defName>
    <label>fire</label>
    <thingClass>Fire</thingClass>
    <category>Attachment</category>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Special/Fire</texPath>
      <graphicClass>Graphic_Flicker</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData> 
    <altitudeLayer>PawnState</altitudeLayer>
    <useHitPoints>false</useHitPoints>
  </ThingDef>



  <ThingDef>
    <defName>Spark</defName>
    <label>spark</label>
    <thingClass>Spark</thingClass>
    <graphicData>
      <texPath>Things/Projectile/Spark</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
    </graphicData>
    <category>Projectile</category>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Projectile</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <neverMultiSelect>true</neverMultiSelect>
    <projectile>
      <alwaysFreeIntercept>true</alwaysFreeIntercept>
      <speed>1.5</speed>
    </projectile>
  </ThingDef>


</ThingDefinitions>