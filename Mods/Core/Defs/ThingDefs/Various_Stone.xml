    </graphicData>
    <soundDrop>ChunkSlag_Drop</soundDrop>
    <thingCategories>
      <li>Chunks</li>
    </thingCategories>
    <smeltProducts>
      <Steel>10</Steel>
    </smeltProducts>
  </ThingDef>




