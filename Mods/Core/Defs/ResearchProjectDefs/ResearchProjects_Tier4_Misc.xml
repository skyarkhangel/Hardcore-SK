<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--========================= Tier 4: Hit-tech research bench with multi-analyzer ===================================-->

  <ResearchProjectDef>
    <defName>VitalsMonitor</defName>
    <label>vitals monitor</label>
    <description>Allows colonists to build vitals monitors which increase patients treatment quality if placed next to medical beds.</description>
    <baseCost>1600</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>MicroelectronicsBasics</li>
      <li>HospitalBed</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>ComponentAssembly</defName>
    <label>component assembly</label>
    <description>Allows you to build the Component Assembly Bench, where colonists can make components from simple materials.</description>
    <baseCost>3000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>MicroelectronicsBasics</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>MultibarrelWeapons</defName>
    <label>multibarrel weapons</label>
    <description>Allows you to build miniguns.</description>
    <baseCost>3000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>MicroelectronicsBasics</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>Cryptosleep</defName>
    <label>cryptosleep casket</label>
    <description>Allows colonists to construct cryptosleep caskets, which can put living beings in a state of suspended animation.</description>
    <baseCost>1000</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>MicroelectronicsBasics</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>PoweredArmor</defName>
    <label>powered armor</label>
    <description>Neuro-memetic robotics and advanced plasteel weaving technologies allow you to build the power armor and power armor helmets.</description>
    <baseCost>1500</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>MicroelectronicsBasics</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>ChargedShot</defName>
    <label>charged shot</label>
    <description>Understand the secrets of pulse-charged energy/projectile munitions. Allows you to build the charge rifle.</description>
    <baseCost>1500</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>MicroelectronicsBasics</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
  </ResearchProjectDef>

</Defs>