<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ResearchProjectDef>
    <defName>MultiAnalyzer</defName>
    <label>multi-analyzer</label>
    <description>Build multi-analyzers which increase research speed and allow higher-level research projects.</description>
    <baseCost>4000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>MicroelectronicsBasics</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <researchViewX>11</researchViewX>
    <researchViewY>2.9</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>GroundPenetratingScanner</defName>
    <label>ground-penetrating scanner</label>
    <description>Build ground-penetrating scanners that can detect drillable resources under the surface. Requires advanced components to construct.</description>
    <baseCost>1000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>DeepDrilling</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>13</researchViewX>
    <researchViewY>1.5</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>DeepDrilling</defName>
    <label>deep drilling</label>
    <description>Build deep drills for extracting resources from underground. You'll need a ground-penetrating scanner to find the resources.</description>
    <baseCost>4000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>MultiAnalyzer</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>12</researchViewX>
    <researchViewY>1.5</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>VitalsMonitor</defName>
    <label>vitals monitor</label>
    <description>Build vitals monitors which improve medical outcomes when placed next to hospital beds.</description>
    <baseCost>2500</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>MultiAnalyzer</li>
      <li>HospitalBed</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>12</researchViewX>
    <researchViewY>0.8</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>Fabrication</defName>
    <label>fabrication</label>
    <description>Build fabrication benches, capable of high-tech projects ranging from component assembly to power armor construction.</description>
    <baseCost>4000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>MultiAnalyzer</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>12</researchViewX>
    <researchViewY>2.9</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>AdvancedFabrication</defName>
    <label>advanced fabrication</label>
    <description>Fabricate advanced components from standard components and other materials.</description>
    <baseCost>4000</baseCost>
    <techLevel>Industrial</techLevel>
    <unlockExtremeDifficulty>true</unlockExtremeDifficulty>
    <prerequisites>
      <li>Fabrication</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>13</researchViewX>
    <researchViewY>2.9</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>Cryptosleep</defName>
    <label>cryptosleep casket</label>
    <description>Construct cryptosleep caskets, which can put living beings in a state of indefinite suspended animation.</description>
    <baseCost>2000</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>MultiAnalyzer</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>12</researchViewX>
    <researchViewY>2.2</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>PoweredArmor</defName>
    <label>powered armor</label>
    <description>Build the power armor and power armor helmets. Note that these also require advanced components.</description>
    <baseCost>6000</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>Fabrication</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>13</researchViewX>
    <researchViewY>3.4</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>ChargedShot</defName>
    <label>pulse-charged munitions</label>
    <description>Build weapons which fire pulse-charged munitions for extra damage. Note that these also require advanced components.</description>
    <baseCost>3000</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>Fabrication</li>
      <li>PrecisionRifling</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>13</researchViewX>
    <researchViewY>4</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>Bionics</defName>
    <label>bionics</label>
    <description>Build high-tech bionic body parts to replace lost limbs and eyes. Requires a skilled doctor to attach.</description>
    <baseCost>3000</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>Prosthetics</li>
      <li>Fabrication</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>13</researchViewX>
    <researchViewY>4.8</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>SniperTurret</defName>
    <label>uranium slug turret</label>
    <description>Produce the armor-penetrating uranium slug turret. It fires uranium slugs which tear through plasteel like paper, but it's less effective at close range.</description>
    <baseCost>3000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>HeavyTurrets</li>
      <li>PrecisionRifling</li>
      <li>MultiAnalyzer</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>12</researchViewX>
    <researchViewY>3.7</researchViewY>
  </ResearchProjectDef>

</Defs>
