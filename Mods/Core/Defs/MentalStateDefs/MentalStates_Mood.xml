    <colonistsOnly>true</colonistsOnly>
    <minTicksBeforeRecovery>4000</minTicksBeforeRecovery>
    <recoveryMtbDays>0.1</recoveryMtbDays>
    <maxTicksBeforeRecovery>15000</maxTicksBeforeRecovery>
    <nameColor>(0.5, 0.9, 0.5)</nameColor>
