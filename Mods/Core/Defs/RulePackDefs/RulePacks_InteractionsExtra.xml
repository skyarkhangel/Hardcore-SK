<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RulePackDef>
    <defName>Sentence_SocialFightStarted</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->This drove [recipient_nameShortDef] into a rage and [recipient_pronoun] began a fight!</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Sentence_RomanceAttemptAccepted</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[recipient_nameShortDef] agreed and is now [initiator_nameShortDef]'s lover.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Sentence_RomanceAttemptRejected</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[recipient_nameShortDef] rejected the advance.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Sentence_MarriageProposalAccepted</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[recipient_nameShortDef] agreed and the two are now engaged.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Sentence_MarriageProposalRejected</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[recipient_nameShortDef] rejected the proposal.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Sentence_MarriageProposalRejectedBrokeUp</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->It was too much for the relationship to continue, and the two have now broken up.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Sentence_RecruitAttemptAccepted</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[recipient_nameShortDef] has accepted and joined [initiator_nameShortDef]'s community.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Sentence_RecruitAttemptRejected</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[recipient_nameShortDef] rejected the offer.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

</Defs>
