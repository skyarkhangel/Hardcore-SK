<?xml version="1.0" encoding="utf-8" ?>
<NameMakerDefs>

  <RulePackDef>
    <defName>NamerFactionSpacer</defName>
    <rulePack>
      <rulesStrings>
        <li>name->Spacer</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>


  <RulePackDef>
    <defName>NamerFactionPirate</defName>
    <rulePack>
      <rulesStrings>
        <li>name->The [badassanimal]s</li>
        <li>name->The [badassanimal] Men</li>
        <li>name->The [badassanimal]s of [badassconcept]</li>
        <li>name->The [badassperson]s of [badassconcept]</li>
        <li>name->The [badassperson]s</li>
        <li>name->The [weapon] Men</li>
        <li>name->The [weapon]s</li>
        <li>name->The [weapon] [badassanimal]s</li>
        <li>name->The [badasscolor] [weapon]s</li>
        <li>name->The [badasscolor] [badassanimal]s</li>
        <li>name->The [badasscolor] [badassperson]s</li>
        <li>name->The [badassperson] [groupname]</li>
        <li>name->The [badassadjective] [groupname]</li>
        <li>name->The [badassadjective] [badassanimal]s</li>
        <li>name->The [badassadjective] [badassperson]s</li>
        <li>name->[weapon] [groupname]</li>
        <li>name->[badassconcept] [groupname]</li>
        <li>name->[badassconcept][groupname]</li>
        <li>name->[badassanimal]s [terrainfeature]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>badassanimal</keyword>
          <path>NameBanks/Nouns_BadassAnimals</path>
        </li>
        <li Class="Rule_File">
          <keyword>badassadjective</keyword>
          <path>NameBanks/Adjectives_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>badassperson</keyword>
          <path>NameBanks/Nouns_BadassPersons</path>
        </li>
        <li Class="Rule_File">
          <keyword>badassconcept</keyword>
          <path>NameBanks/Nouns_Concepts_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>groupname</keyword>
          <path>NameBanks/Nouns_GroupNames</path>
        </li>
        <li Class="Rule_File">
          <keyword>terrainfeature</keyword>
          <path>NameBanks/Nouns_TerrainFeatures</path>
        </li>
        <li Class="Rule_File">
          <keyword>badasscolor</keyword>
          <path>NameBanks/ColorsBadass</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>



  <RulePackDef>
    <defName>NamerColony</defName>
    <rulePack>
      <rulesStrings>
        <li>name->[colonyname]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>colonyname</keyword>
          <path>NameBanks/ColonyNames</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>



  <RulePackDef>
    <defName>NamerFactionOutlander</defName>
    <rulePack>
      <rulesStrings>
        <li>rule->[positiveconcept]'s [terrainfeature]</li>
        <li>rule->[outlander]'s [terrainfeature]</li>
        <li>rule->[outlander]'s [community]</li>
        <li>rule->[community]-at-the-[terrainfeature]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>positiveconcept</keyword>
          <path>NameBanks/Nouns_Concepts_Positive</path>
        </li>
        <li Class="Rule_File">
          <keyword>community</keyword>
          <path>NameBanks/Nouns_Communities</path>
        </li>
        <li Class="Rule_File">
          <keyword>terrainfeature</keyword>
          <path>NameBanks/Nouns_TerrainFeatures</path>
        </li>
        <li Class="Rule_File">
          <keyword>outlander</keyword>
          <pathList>
            <li>NameBanks/Nouns_People_Outlanders</li>
            <li>NameBanks/Nouns_People_Family</li>
          </pathList>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>




  <RulePackDef>
    <defName>NamerFactionTribal</defName>
    <rulePack>
      <rulesStrings>
        <li>name->[tribalword] [tribalword]</li>
        <li>name->[tribalword] [tribalword]</li>
        <li>name->[tribalword] [tribalword] [tribalword]</li>
        <li>name->[tribalword] of [animal]</li>
        <li>name->[color] [animal] [tribalword]</li>
        <li>name->The [tribalword] of the [terrainfeature]</li>
        <li>name->The [color] [terrainfeature] People</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>tribalword</keyword>
          <path>NameBanks/TribalWords</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>





</NameMakerDefs>







