<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Player initial namers - used initially -->

  <RulePackDef>
    <defName>NamerFactionBasePlayerColony</defName>
    <rulePack>
      <rulesStrings>
        <li>name->Colony</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerFactionBasePlayerTribe</defName>
    <rulePack>
      <rulesStrings>
        <li>name->Village</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

	<!-- Player suggestion namers - used for default name in the 'name faction and/or base' dialogs -->
	
	<RulePackDef>
		<defName>NamerFactionPlayerColonyRandomized</defName>
		<rulePack>
			<rulesStrings>
				<li>name->[colonyname]</li>
			</rulesStrings>
			<rulesRaw>
				<li Class="Rule_File">
					<keyword>colonyname</keyword>
					<path>Names/ColonyNames</path>
				</li>
			</rulesRaw>
		</rulePack>
	</RulePackDef>

	<RulePackDef>
    <defName>NamerFactionBasePlayerColonyRandomized</defName>
    <include>
      <li>NamerFactionBaseOutlander</li>
    </include>
  </RulePackDef>

  <!-- Pirate -->

  <RulePackDef>
    <defName>NamerFactionPirate</defName>
    <rulePack>
      <rulesStrings>
        <li>name->The [badassanimal]s</li>
        <li>name->The [badassanimal] Men</li>
        <li>name->The [badassanimal]s of [badassconcept]</li>
        <li>name->The [badassperson]s of [badassconcept]</li>
        <li>name->The [badassperson]s</li>
        <li>name->The [weapon] Men</li>
        <li>name->The [weapon]s</li>
        <li>name->The [weapon] [badassanimal]s</li>
        <li>name->The [badasscolor] [weapon]s</li>
        <li>name->The [badasscolor] [badassanimal]s</li>
        <li>name->The [badasscolor] [badassperson]s</li>
        <li>name->The [badassperson] [groupname]</li>
        <li>name->The [badassadjective] [groupname]</li>
        <li>name->The [badassadjective] [badassanimal]s</li>
        <li>name->The [badassadjective] [badassperson]s</li>
        <li>name->[weapon] [groupname]</li>
        <li>name->[badassconcept] [groupname]</li>
        <li>name->[badassconcept][groupname]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>badassanimal</keyword>
          <path>Words/Nouns/Animals_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>badassadjective</keyword>
          <path>Words/Adjectives/Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>badassperson</keyword>
          <path>Words/Nouns/People_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>badassconcept</keyword>
          <path>Words/Nouns/Concepts_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>groupname</keyword>
          <path>Words/Nouns/GroupNames</path>
        </li>
        <li Class="Rule_File">
          <keyword>badasscolor</keyword>
          <path>Words/Nouns/Colors_Badass</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerFactionBasePirate</defName>
    <rulePack>
      <rulesStrings>
        <li>name->[badassanimal] [geography]</li>
        <li>name->[badassconcept] [geography]</li>
        <li>name->[badassanimal]'s [geography]</li>
        <li>name->[badassperson]'s [geography]</li>
        <li>geography->[terrainfeature]</li>
        <li>geography->[community]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>community</keyword>
          <path>Words/Nouns/Communities</path>
        </li>
        <li Class="Rule_File">
          <keyword>badassanimal</keyword>
          <path>Words/Nouns/Animals_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>badassadjective</keyword>
          <path>Words/Adjectives/Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>badassperson</keyword>
          <path>Words/Nouns/People_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>badassconcept</keyword>
          <path>Words/Nouns/Concepts_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>groupname</keyword>
          <path>Words/Nouns/GroupNames</path>
        </li>
        <li Class="Rule_File">
          <keyword>terrainfeature</keyword>
          <path>Words/Nouns/TerrainFeatures</path>
        </li>
        <li Class="Rule_File">
          <keyword>badasscolor</keyword>
          <path>Words/Nouns/Colors_Badass</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

  <!-- Outlander -->

  <RulePackDef>
    <defName>OutlanderWord</defName>
    <rulePack>
      <rulesStrings>
        <li>outlanderword->[olsyl][olendsyl]</li>
        <li>outlanderword->[olsyl][olendsyl]</li>
        <li>outlanderword->[olsyl][olendsyl]</li>
        <li>outlanderword->[olsyl][olsyl][olendsyl]</li>
        <li>outlanderword->[olsyl][olsyl][olendsyl]</li>
        <li>outlanderword->[olsyl][olsyl][olsyl][olendsyl]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>olsyl</keyword>
          <path>WordParts/Syllables_English</path>
        </li>
        <li Class="Rule_File">
          <keyword>olendsyl</keyword>
          <path>WordParts/PlaceEndings</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerFactionOutlander</defName>
    <include>
      <li>OutlanderWord</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>name->[subname]</li>
        <li>name->[subname]</li>
        <li>name->[subname]</li>
        <li>name->[subname] [politicalunion]</li>
        <li>name->[subname] [politicaladjective] [politicalunion]</li>
        <li>name->[politicalunion] of [subname]</li>
        <li>name->[politicaladjective] [politicalunion] of [subname]</li>
        <li>subname->[outlanderword]</li>
        <li>subname->[outlanderword]</li>
        <li>subname->[outlanderword]</li>
        <li>subname->[direction] [outlanderword]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>politicalunion</keyword>
          <path>Words/Nouns/PoliticalUnions_Outlander</path>
        </li>
        <li Class="Rule_File">
          <keyword>politicaladjective</keyword>
          <path>Words/Adjectives/PoliticalUnions</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerFactionBaseOutlander</defName>
    <rulePack>
      <rulesStrings>
        <li>name->[positiveconcept]'s [terrainfeature]</li>
        <li>name->[outlander]'s [terrainfeature]</li>
        <li>name->[outlander]'s [community]</li>
        <li>name->[nearname]</li>
        <li>name->[wordname]</li>
        <li>name->[wordname]</li>
        <li>nearname->[subname]-at-the-[terrainfeature]</li>
        <li>nearname->[subname]-by-the-[terrainfeature]</li>
        <li>subname->[wordname]</li>
        <li>subname->[community]</li>
        <li>wordname->[syl][syl]</li>
        <li>wordname->[syl][townend]</li>
        <li>wordname->[syl][syl][townend]</li>
        <li>wordname->[terrainfeature][townend]</li>
        <li>townend->ville</li>
        <li>townend->town</li>
        <li>townend->hurst</li>
        <li>townend->bourne</li>
        <li>townend->brad</li>
        <li>townend->dale</li>
        <li>townend->hope</li>
        <li>townend->ing</li>
        <li>townend->ness</li>
        <li>townend->mere</li>
        <li>townend->shaw</li>
        <li>townend->wick</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>positiveconcept</keyword>
          <path>Words/Nouns/Concepts_Positive</path>
        </li>
        <li Class="Rule_File">
          <keyword>community</keyword>
          <path>Words/Nouns/Communities</path>
        </li>
        <li Class="Rule_File">
          <keyword>terrainfeature</keyword>
          <path>Words/Nouns/TerrainFeatures</path>
        </li>
        <li Class="Rule_File">
          <keyword>outlander</keyword>
          <pathList>
            <li>Words/Nouns/People_Outlanders</li>
            <li>Words/Nouns/People_Family</li>
          </pathList>
        </li>
        <li Class="Rule_File">
          <keyword>syl</keyword>
          <path>WordParts/Syllables_English</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

  <!-- Tribe -->

  <RulePackDef>
    <defName>TribalWord</defName>
    <rulePack>
      <rulesStrings>
        <li>tribalword->[tribalwordfile]</li>
        <li>tribalword->[trsyl][trsyl]</li>
        <li>tribalword->[trsyl][trsyl]</li>
        <li>tribalword->[trsyl][trsyl]</li>
        <li>tribalword->[trsyl][trsyl][trsyl]</li>
        <li>tribalword->[trsyl][trsyl][trsyl]</li>
        <li>tribalword->[trsyl][trsyl][trsyl][trsyl]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>tribalwordfile</keyword>
          <path>Words/Foreign/Tribal</path>
        </li>
        <li Class="Rule_File">
          <keyword>trsyl</keyword>
          <path>WordParts/Syllables_Tribal</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>
  
  <RulePackDef>
    <defName>NamerFactionTribal</defName>
    <include>
      <li>TribalWord</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>name->[tribalworld] [politicalunion]</li>
        <li>name->The [tribalworld] [politicalunion]</li>
        <li>name->The [color] [terrainfeature] [politicalunion]</li>
        <li>name->[politicalunion] of [tribalword]</li>
        <li>name->The [color] [animal] [tribalword]</li>
        <li>name->The [tribalword] of the [terrainfeature]</li>
        <li>tribalword->[tribalwordfile]</li>
        <li>tribalword->[syl][syl]</li>
				<li>tribalword->[syl][syl]</li>
				<li>tribalword->[syl][syl]</li>
				<li>tribalword->[syl][syl][syl]</li>
				<li>tribalword->[syl][syl][syl]</li>
				<li>tribalword->[syl][syl][syl][syl]</li>
			</rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>tribalwordfile</keyword>
          <path>Words/Foreign/Tribal</path>
        </li>
        <li Class="Rule_File">
          <keyword>syl</keyword>
          <path>WordParts/Syllables_Tribal</path>
        </li>
        <li Class="Rule_File">
          <keyword>politicalunion</keyword>
          <path>Words/Nouns/PoliticalUnions_Outlander</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerFactionBaseTribal</defName>
    <rulePack>
      <rulesStrings>
        <li>name->[tribalword]</li>
        <li>name->[tribalword]</li>
        <li>name->[color] [tribalword]</li>
        <li>name->[color] [terrainfeature]</li>
        <li>name->[tribalword] [terrainfeature]</li>
        <li>tribalword->[tribalwordfile]</li>
        <li>tribalword->[syl][syl]</li>
        <li>tribalword->[syl][syl][syl]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>tribalwordfile</keyword>
          <path>Words/Foreign/Tribal</path>
        </li>
        <li Class="Rule_File">
          <keyword>terrainfeature</keyword>
          <path>Words/Nouns/TerrainFeatures</path>
        </li>
        <li Class="Rule_File">
          <keyword>syl</keyword>
          <path>WordParts/Syllables_Tribal</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

  <!-- Special -->

  <RulePackDef>
    <defName>NamerFactionSpacer</defName>
    <rulePack>
      <rulesStrings>
        <li>name->Spacer</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

</Defs>
