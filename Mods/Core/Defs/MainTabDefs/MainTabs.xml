<?xml version="1.0" encoding="utf-8" ?>
<MainTabDefs>

  <MainTabDef>
    <defName>Inspect</defName>
    <label>inspect</label>
    <windowClass>MainTabWindow_Inspect</windowClass>
    <showTabButton>false</showTabButton>
  </MainTabDef>
  
  <MainTabDef>
    <defName>Architect</defName>
    <label>architect</label>
    <description>Designate where and what colonists should build, farm, store items, and so on.</description>
    <windowClass>MainTabWindow_Architect</windowClass>
    <order>1</order>
    <defaultToggleKey>Tab</defaultToggleKey>
  </MainTabDef>
  
  <MainTabDef>
    <defName>Work</defName>
    <label>work</label>
    <description>Choose which colonist does what kinds of work, and in what priority order.</description>
    <windowClass>MainTabWindow_Work</windowClass>
    <concept>WorkTab</concept>
    <tutorHighlightTag>ButtonWorkTab</tutorHighlightTag>
    <order>10</order>
    <defaultToggleKey>F1</defaultToggleKey>
  </MainTabDef>
  
  <MainTabDef>
    <defName>Restrict</defName>
    <label>restrict</label>
    <description>Restrict colonists to certain activities at certain times of day, or to specific allowed areas.</description>
    <windowClass>MainTabWindow_Restrict</windowClass>
    <order>20</order>
    <defaultToggleKey>F2</defaultToggleKey>
  </MainTabDef>
  
  <MainTabDef>
    <defName>Assign</defName>
    <label>assign</label>
    <description>Configure what each colonist is allowed to wear, and how to react to nearby enemies.</description>
    <windowClass>MainTabWindow_Assign</windowClass>
    <order>30</order>
    <defaultToggleKey>F3</defaultToggleKey>
  </MainTabDef>
  
  <MainTabDef>
    <defName>Animals</defName>
    <label>animals</label>
    <description>Configure how the colony's tame animals should be treated.</description>
    <windowClass>MainTabWindow_Animals</windowClass>
    <order>40</order>
    <defaultToggleKey>F4</defaultToggleKey>
  </MainTabDef>
  
  <MainTabDef>
    <defName>Factions</defName>
    <label>factions</label>
    <description>Review the factions known to the colony and their relationships.</description>
    <windowClass>MainTabWindow_Factions</windowClass>
    <order>50</order>
    <defaultToggleKey>F5</defaultToggleKey>
  </MainTabDef>
  
  <MainTabDef>
    <defName>World</defName>
    <label>world</label>
    <description>Examine the world map.</description>
    <windowClass>MainTabWindow_World</windowClass>
    <order>60</order>
    <defaultToggleKey>F6</defaultToggleKey>
  </MainTabDef>
  
  <MainTabDef>
    <defName>History</defName>
    <label>history</label>
    <description>Review records of the colony's history.</description>
    <windowClass>MainTabWindow_History</windowClass>
    <concept>HistoryTab</concept>
    <tutorHighlightTag>ButtonHistoryTab</tutorHighlightTag>
    <order>70</order>
    <defaultToggleKey>F7</defaultToggleKey>
  </MainTabDef>
  
  <MainTabDef>
    <defName>Statistics</defName>
    <label>statistics</label>
    <description>Review statistics about the colony.</description>
    <windowClass>MainTabWindow_Statistics</windowClass>
    <order>80</order>
    <defaultToggleKey>F8</defaultToggleKey>
  </MainTabDef>
  
  <MainTabDef>
    <defName>Research</defName>
    <label>research</label>
    <description>Examine and decide on research projects.</description>
    <windowClass>MainTabWindow_Research</windowClass>
    <order>90</order>
  </MainTabDef>
  
  <MainTabDef>
    <defName>Menu</defName>
    <label>menu</label>
    <description>Change options, save, load, or quit the game.</description>
    <windowClass>MainTabWindow_Menu</windowClass>
    <order>500</order>
  </MainTabDef>

</MainTabDefs>