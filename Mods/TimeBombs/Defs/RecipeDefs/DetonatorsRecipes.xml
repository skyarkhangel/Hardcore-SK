<Defs>

  <RecipeDef>
    <defName>MakeDetonator_Simple</defName>
    <label>make simple detonator</label>
    <description>Make simple mechanical detonator.</description>
    <jobString>Making simple detonator.</jobString>
    <workSkill>Crafting</workSkill>
    <workAmount>550</workAmount>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    <skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Mechanism</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Wire</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
				<li>ComponentIndustrial</li>
				<li>Wire</li>
				<li>Mechanism</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <TimedDetonatorSimple>1</TimedDetonatorSimple>
    </products>
    <recipeUsers>
			<li>FabricationBench</li>
			<li>AdvToolBench</li>
		</recipeUsers>
    <researchPrerequisite>Grenade_C1</researchPrerequisite>
  </RecipeDef>


