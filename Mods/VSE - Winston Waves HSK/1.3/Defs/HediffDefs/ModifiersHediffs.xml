<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef Name="VESWW_ModifierBase" Abstract="True">
    <initialSeverity>1</initialSeverity>
    <everCurableByItem>false</everCurableByItem>
    <hediffClass>VSEWW.Hediff_RemoveIfColonist</hediffClass>
  </HediffDef>

  <HediffDef ParentName="VESWW_ModifierBase">
    <defName>VESWW_NoPain</defName>
    <label>no pain</label>
    <description>No pain.</description>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
        <painFactor>0.0</painFactor>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="VESWW_ModifierBase">
    <defName>VSEWW_Sprinter</defName>
    <label>sprinter</label>
    <description>Sprint fast.</description>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>1.0</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="VESWW_ModifierBase">
    <defName>VSEWW_Boom</defName>
    <label>boom</label>
    <description>Boom!</description>
    <hediffClass>VSEWW.Hediff_Boom</hediffClass>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="VESWW_ModifierBase">
    <defName>VESWW_Veterans</defName>
    <label>veteran</label>
    <description>Veteran</description>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.5</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="VESWW_ModifierBase">
    <defName>VESWW_Ninja</defName>
    <label>ninja</label>
    <description>ninja</description>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>1800~1800</disappearsAfterTicks>
      </li>
      <li Class="HediffCompProperties">
        <compClass>HediffComp_Invisibility</compClass>
      </li>
    </comps>
  </HediffDef>

  <HediffDef ParentName="VESWW_ModifierBase">
    <defName>VSEWW_BulletSponge</defName>
    <label>bullet sponge</label>
    <description>bullet sponge</description>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="VESWW_ModifierBase">
    <defName>VESWW_BulletProof</defName>
    <label>bullet proof</label>
    <description>bullet proof</description>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
        <statFactors>
          <IncomingDamageFactor>1.5</IncomingDamageFactor>
        </statFactors>
      </li>
    </stages>
  </HediffDef>
</Defs>