<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ResearchProjectDef>
        <defName>ArmorRacks_MechanizedArmorRackResearch</defName>
        <label>mechanized armor rack</label>
        <description>Produce mechanized armor racks that help your colonists quickly change apparel to respond to emergencies.</description>
        <baseCost>1000</baseCost>
        <techLevel>Industrial</techLevel>
        <prerequisites>
            <li>ComplexFurniture</li>
            <li>MicroelectronicsBasics</li>
        </prerequisites>
        <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
        <researchViewX>10</researchViewX>
        <researchViewY>4.6</researchViewY>
    </ResearchProjectDef>

    <ResearchProjectDef>
        <defName>ArmorRacks_MendingArmorRackResearch</defName>
        <label>mending armor rack</label>
        <description>Produce mending armor racks that repair stored equipment, in addition to other benefits.</description>
        <baseCost>2000</baseCost>
        <techLevel>Spacer</techLevel>
        <prerequisites>
            <li>ArmorRacks_MechanizedArmorRackResearch</li>
            <li>Fabrication</li>
        </prerequisites>
        <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
        <requiredResearchFacilities>
            <li>MultiAnalyzer</li>
        </requiredResearchFacilities>
        <researchViewX>13</researchViewX>
        <researchViewY>5.6</researchViewY>
    </ResearchProjectDef>
    
</Defs>