<?xml version="1.0" encoding="UTF-8"?>

<RecipeDefs>

   <RecipeDef Abstract="True" Name="RecipeBasicProsthesis">
      <workSpeedStat>TailoringSpeed</workSpeedStat>
	  <unfinishedThingDef>UnfinishedProsthesis</unfinishedThingDef>
      <workSkill>Crafting</workSkill>
      <workAmount>2500</workAmount>
   </RecipeDef>

   <RecipeDef ParentName="RecipeBasicProsthesis">
      <defName>CreateSteelArm</defName>
      <label>Craft steel arm</label>
      <description>Crafts a steel arm from steel.</description>
      <jobString>Crafting prosthesis.</jobString>
      <soundWorking>EPOEAssembling</soundWorking>
      <products>
         <SteelArm>1</SteelArm>
      </products>
      <ingredients>
         <li>
            <filter>
               <thingDefs>
                  <li>Steel</li>
               </thingDefs>
            </filter>
            <count>75</count>
         </li>
      </ingredients>
      <fixedIngredientFilter>
         <thingDefs>
            <li>Steel</li>
         </thingDefs>
      </fixedIngredientFilter>
   </RecipeDef>
   
