<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="SK_BuildingBase">
		<defName>AncientConcreteBarrier</defName>
		<label>ancient concrete barrier</label>
		<thingClass>Building</thingClass>
		<category>Building</category>
		<description>A traffic management solution from long ago.</description>
		<graphicData>
			<texPath>Things/Building/Ruins/AncientConcreteBarrier</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<color>(231,216,206)</color>
		</graphicData>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.2</staticSunShadowHeight>
		<startingHpRange>
			<min>0.5</min>
			<max>1.3</max>
		</startingHpRange>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>35</pathCost>
		<pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.5</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<Beauty>-10</Beauty>
			<Flammability>0</Flammability>
			<WorkToBuild>450</WorkToBuild>
		</statBases>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<isInert>true</isInert>
		</building>
		<costList>
			<ComponentIndustrial>2</ComponentIndustrial>
			<ReinforcedConcrete>8</ReinforcedConcrete>
		</costList>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<repairEffect>ConstructDirt</repairEffect>
	</ThingDef>

	<ThingDef ParentName="SK_BuildingBase">
		<defName>AncientLamppost</defName>
		<label>ancient lamppost</label>
		<thingClass>Building</thingClass>
		<category>Building</category>
		<description>Road lighting from long ago. No longer functional.</description>
		<graphicData>
			<texPath>Things/Building/Ruins/AncientLamppost</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<drawSize>(1,2)</drawSize>
			<color>(231,216,206)</color>
			<shadowData>
				<volume>(0.76,0.3,0.15)</volume>
				<offset>(0,0,-0.39)</offset>
			</shadowData>
		</graphicData>
		<startingHpRange>0.5~1.3</startingHpRange>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToBuild>400</WorkToBuild>
		</statBases>
		<fillPercent>0.25</fillPercent>
		<passability>PassThroughOnly</passability>
		<pathCost>100</pathCost>
		<blockWind>true</blockWind>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<rotatable>false</rotatable>
		<costList>
			<ComponentIndustrial>6</ComponentIndustrial>
		</costList>
		<building>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
		</building>
	</ThingDef>

	<ThingDef ParentName="SK_BuildingBase">
		<defName>Urn</defName>
		<label>urn</label>
		<description>An ancient-style decorative container.</description>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.40</fillPercent>
		<statBases>
			<MaxHitPoints>40</MaxHitPoints>
			<WorkToBuild>400</WorkToBuild>
			<Mass>5</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>5</Beauty>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>20</costStuffCount>
		<canOverlapZones>false</canOverlapZones>
		<pathCost>50</pathCost>
		<rotatable>false</rotatable>
		<building>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
		</building>
		<graphicData>
			<texPath>Things/Building/Misc/Urn</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.55, 0.35, 0.3)</volume>
				<offset>(0, 0, -0.28)</offset>
			</shadowData>
			<damageData>
				<rect>(0.3,0,0.3,0.9)</rect>
			</damageData>
		</graphicData>
	</ThingDef>

</Defs>