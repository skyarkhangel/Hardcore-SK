<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef>
		<defName>LivingFrost</defName>
		<label>Living Frost</label>
		<description>The frigid, throbbing heart of a thawed Kirin. It radiates frost and will gradually lower temperatures if kept in a room. It is prized by traders for its supposed medicinal values and uses in alchemy.</description>
		<thingClass>ThingWithComps</thingClass>
		<comps>
			<li Class="SK.CompPropertiesSnow">
				<compClass>SK.CompSnow</compClass>
				<heatSuckMinTemperature>-10</heatSuckMinTemperature>
				<ColdPerSecond>100</ColdPerSecond>
				<snowRadius>2</snowRadius>
				<snowDepth>.01</snowDepth>
			</li>     
			<li Class="CompProperties_Forbiddable"/>

			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(175,238,238,0)</glowColor>
			</li>
			<li Class="CompProperties_Lifespan">
				<lifespanTicks>1000000</lifespanTicks>
			</li>
		</comps>
		<tickerType>Normal</tickerType>
		<category>Item</category>
		<tradeTags>
			<li>Exotic</li>
		</tradeTags>
		<thingCategories>
			<li>BodyParts</li>
		</thingCategories>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<useHitPoints>true</useHitPoints>
		<selectable>true</selectable>
		<altitudeLayer>Item</altitudeLayer>
		<stackLimit>1</stackLimit>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<MarketValue>1500</MarketValue>
			<Bulk>7</Bulk>
			<Mass>4</Mass>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Item/LivingFrost</texPath>
		</graphicData>
	</ThingDef>

	<ThingDef>
		<defName>LivingFire</defName>
		<label>Living Fire</label>
		<description>The scorching, vibrating heart of an extinguished Feenix. It pulses with heat and will gradually raise temperatures if kept in a room. It is prized by traders for its supposed medicinal values and uses in alchemy.</description>
		<thingClass>ThingWithComps</thingClass>
		<comps>
			<li Class="SK.CompProperties_HeatPusherFenix">
				<heatPushMaxTemperature>100</heatPushMaxTemperature>
				<heatPerSecond>50</heatPerSecond>
			</li>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(255,150,100,0)</glowColor>
			</li>
			<li Class="CompProperties_Lifespan">
				<lifespanTicks>1000000</lifespanTicks>
			</li>
		</comps>
		<tickerType>Normal</tickerType>
		<category>Item</category>
		<tradeTags>
			<li>Exotic</li>
		</tradeTags>
		<thingCategories>
			<li>BodyParts</li>
		</thingCategories>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<useHitPoints>true</useHitPoints>
		<selectable>true</selectable>
		<altitudeLayer>Item</altitudeLayer>
		<stackLimit>1</stackLimit>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<MarketValue>1500</MarketValue>
			<Bulk>7</Bulk>
			<Mass>4</Mass>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Item/LivingFire</texPath>
		</graphicData>
	</ThingDef>

</Defs>