<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<RecipeDef>
		<defName>MakeSulfur</defName>
		<label>Obtain sulfur</label>
		<description>Obtain sulfur from iron ore. Sulfur occurs naturally as the pure element - native sulfur and as sulfide and sulfate minerals. It is useful for gunpowder in crafting various types ammo. Produces 10.</description>
		<jobString>Obtaining sulfur from iron ore.</jobString>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>1200</workAmount>
		<targetCountAdjustment>5</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>35</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Sulfur>10</Sulfur>
		</products>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>


	<RecipeDef>
		<defName>MakePowder</defName>
		<label>Make gunpowder</label>
		<description>Makes gunpowder, which is useful for crafting ammo. Produces 20.</description>
		<jobString>Making gunpowder.</jobString>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>3000</workAmount>
		<targetCountAdjustment>5</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Nitre</li>
					</thingDefs>
				</filter>
				<count>75</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Coal</li>
					</categories>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Sulfur</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Nitre</li>
				<li>Sulfur</li>
			</thingDefs>
			<categories>
				<li>Coal</li>
			</categories>	  
		</fixedIngredientFilter>
		<products>
			<Powder>20</Powder>
		</products>
		<skillRequirements>
			<Crafting>3</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>


	<RecipeDef>
		<defName>MakeNapalm</defName>
		<label>Create napalm</label>
		<description>Creates napalm, a flammable chemical weapon. Produces 10.</description>
		<jobString>Creating napalm.</jobString>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>1200</workAmount>
		<targetCountAdjustment>5</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Polymers</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Chemfuel</li>
				<li>Polymers</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Napalm>10</Napalm>
		</products>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>

</Defs>