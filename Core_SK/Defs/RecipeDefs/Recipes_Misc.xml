<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<RecipeDef>
		<defName>MakePainting</defName>
		<label>create a painting</label>
		<description>Create a painting by using cloth and painting supplies. Produces 1.</description>
		<jobString>Painting happy little trees.</jobString>
		<workAmount>15000</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Artistic</workSkill>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Cloth</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>PaintingSupplies</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Cloth</li>
				<li>PaintingSupplies</li>
			</thingDefs>
		</fixedIngredientFilter>
		<unfinishedThingDef>UnfinishedPainting</unfinishedThingDef>
		<products>
			<Painting>1</Painting>
		</products>
		<recipeUsers>
			<li>Easel</li>
		</recipeUsers>
		<researchPrerequisite>Art_A1</researchPrerequisite>
	</RecipeDef>

	<RecipeDef>
		<defName>CookPaint</defName>
		<label>create painting supplies</label>
		<description>Creates paint by boiling flowers until the gum and pigments bind and then combining it with wood to finish the set. Produces 1.</description>
		<jobString>Creating paint set.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>550</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WildRose</li>
						<li>Hypericum</li>
						<li>MintLeaves</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Woody</li>
					</categories>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodPlank</li>
				<li>BambooPlank</li>
				<li>WildRose</li>
				<li>Hypericum</li>
				<li>MintLeaves</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<PaintingSupplies>1</PaintingSupplies>
		</products>
		<recipeUsers>
			<li>ElectricStove</li>
			<li>FueledStove</li>
		</recipeUsers>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<researchPrerequisite>Art_A1</researchPrerequisite>
	</RecipeDef>

	<!-- mai items -->

	<RecipeDef>
		<defName>MakeRobotParts</defName>
		<label>assemble robot parts</label>
		<description>Assemble robot parts. Produces 25.</description>
		<jobString>Assembling robot parts.</jobString>
		<workAmount>8000</workAmount>
		<workSpeedStat>ElectronicCraftingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<recipeUsers>
			<li>TableElectronics</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>USLDBar</li>
					</categories>
				</filter>
				<count>60</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>AdvMechanism</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<products>
			<RobotParts>25</RobotParts>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>USLDBar</li>
			</categories>
			<thingDefs>
				<li>AdvMechanism</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>15</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Droids_D1</researchPrerequisite>
	</RecipeDef>

</Defs>