	<ThingDef ParentName="SK_ResourceBase">
		<defName>RawCotton</defName>
		<label>Raw Cotton</label>
		<description>Raw Cotton from a Cotton Bush. It can be spun into Cloth at a Tailor's Workbench.</description>
    <graphicData>
		<texPath>Things/Item/Resource/RawCotton</texPath>
		<graphicClass>Graphic_Single</graphicClass>
    </graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<stackLimit>300</stackLimit>
		<tickerType>Rare</tickerType>
		<statBases>
			<MarketValue>1.5</MarketValue>
    		<Flammability>2</Flammability>
