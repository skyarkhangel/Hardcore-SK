<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--=============== Glass ====================-->
	<ThingDef ParentName="SK_ResourceBase">
		<defName>GlassBatch</defName>
		<label>Glass Batch</label>
		<description>Raw Glass Batch that was made from Sand. It would be more useful when it is refined into Glass Frames.</description>
		<graphicData>
			<texPath>Things/Item/Resource/GlassBatch</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<tickerType>Rare</tickerType>
		<techLevel>Industrial</techLevel>
		<statBases>
			<MarketValue>1.2</MarketValue>
			<Flammability>0.05</Flammability>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>0.2</Mass>
			<Bulk>0.2</Bulk>
		</statBases>
		<stackLimit>300</stackLimit>
		<thingCategories>
			<li>GlassCat</li>
		</thingCategories>
	</ThingDef>
	<ThingDef ParentName="SK_ResourceBase">
		<defName>Glass</defName>
