<Defs>

	<ThoughtDef>
		<defName>Enlighten_Environment_Bright</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>Enlighten_Bright</hediff>
		<nullifyingTraits>
			<li>NightOwl</li>
		</nullifyingTraits>
