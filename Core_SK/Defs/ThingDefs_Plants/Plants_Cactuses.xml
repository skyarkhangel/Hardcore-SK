<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--============================ Cactus  ============================-->

	<ThingDef ParentName="CactusBase">
		<defName>Plant_SaguaroCactus</defName>
		<label>saguaro cactus</label>
		<description>The saguaro cactus is native to desert and arid environments. When fully grown, it can be chopped for a small amount of wood.</description>
		<statBases>
			<Beauty>2</Beauty>
			<BeautyOutdoors>2</BeautyOutdoors>
			<MaxHitPoints>200</MaxHitPoints>
			<Nutrition>0.7</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/PlantSaguaroCactus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.18, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.25</fillPercent>
		<passability>PassThroughOnly</passability>
		<pathCost>130</pathCost>
		<blockWind>true</blockWind>
		<ingestible>
			<foodType>Tree</foodType>
			<preferability>RawBad</preferability>
		</ingestible>
		<plant>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<fertilityMin>0.04</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>5</growDays>
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
			<harvestWork>300</harvestWork>
			<harvestedThingDef>WoodLog</harvestedThingDef>
			<harvestTag>Wood</harvestTag>
			<harvestYield>10</harvestYield>
			<harvestMinGrowth>0.2</harvestMinGrowth>
			<harvestFailable>false</harvestFailable>
			<visualSizeRange>
				<min>0.7</min>
				<max>1.6</max>
			</visualSizeRange>
			<topWindExposure>0.08</topWindExposure>
			<lifespanDaysPerGrowDays>40</lifespanDaysPerGrowDays>
			<wildClusterRadius>-1</wildClusterRadius>
			<treeLoversCareIfChopped>false</treeLoversCareIfChopped>
		</plant>
	</ThingDef>


	<ThingDef ParentName="CactusBase">
		<defName>Plant_PincushionCactus</defName>
		<label>pincushion cactus</label>
		<description>A pincushion cactus is a short, round cactus with long pin-like needles. It is native to desert and arid environments.</description>
		<graphicData>
			<texPath>Things/Plant/PlantPincushionCactus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.15, 0.2, 0.15)</volume>
				<offset>(0,0,0)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Beauty>1</Beauty>
			<BeautyOutdoors>1</BeautyOutdoors>
			<Nutrition>0.3</Nutrition>
		</statBases>
		<fillPercent>0.08</fillPercent>
		<plant>
			<fertilityMin>0.04</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>2.7</growDays>
			<visualSizeRange>
				<min>0.40</min>
				<max>0.65</max>
			</visualSizeRange>
			<topWindExposure>0.0</topWindExposure>
			<wildClusterWeight>4</wildClusterWeight>
			<wildClusterRadius>4</wildClusterRadius>
			<maxMeshCount>4</maxMeshCount>
		</plant>
	</ThingDef>

</Defs>