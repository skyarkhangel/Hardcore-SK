<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RoofDef>
		<defName>RoofTransparent</defName>
		<label>transparent roof</label>
		<description>Transparent roofing lets the light through, but keeps the weather out!</description>
		<isThickRoof>false</isThickRoof>
		<isNatural>false</isNatural>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<soundPunchThrough>PunchThroughRoofMetal</soundPunchThrough>
		<modExtensions>
			<li Class="ExpandedRoofing.RoofExtension">
				<spawnerDef>RoofTransparentFraming</spawnerDef>
				<transparency>0.9</transparency>
			</li>
		</modExtensions>
	</RoofDef>

	<RoofDef>
		<defName>RoofSolar</defName>
		<label>solar roof</label>
		<description>Solar roofing generates power on your roof. Requires a Solar Controller to function.</description>
		<isThickRoof>false</isThickRoof>
		<isNatural>false</isNatural>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<soundPunchThrough>Roof_Collapse</soundPunchThrough>
		<modExtensions>
			<li Class="ExpandedRoofing.RoofExtension">
				<spawnerDef>RoofSolarFraming</spawnerDef>
			</li>
		</modExtensions>
	</RoofDef>

	<!-- This is basically an abstract but attribute will lead to errors...-->
	<RoofDef Name="ThickStoneRoofBase">
		<defName>ThickStoneRoof</defName>
		<label>bunker roof</label>
		<description>Solid bunker roofing. Helps keep out the drop pods, mortar rounds, reduces the likelihood of roof collapse during normal earthquakes.</description>
		<isThickRoof>true</isThickRoof>
		<isNatural>false</isNatural>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<!-- CollapsedRocks -->
		<soundPunchThrough>Roof_Collapse</soundPunchThrough>
		<collapseLeavingThingDef>CollapsedReinforcedConcrete</collapseLeavingThingDef>
		<modExtensions>
			<li Class="ExpandedRoofing.RoofExtension">
				<spawnerDef>ThickStoneRoofFraming</spawnerDef>
			</li>
		</modExtensions>
	</RoofDef>

	<RoofDef ParentName="ThickStoneRoofBase">
		<defName>ReinforcedConcreteThickStoneRoof</defName>
		<label>reinforced concrete bunker roof</label>
		<description>reinforced concrete bunker roof</description>
		<collapseLeavingThingDef>CollapsedReinforcedConcrete</collapseLeavingThingDef>
	</RoofDef>

</Defs>