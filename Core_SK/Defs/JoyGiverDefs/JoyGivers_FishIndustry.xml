<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Consumption -->

  <JoyGiverDef>
    <defName>EatOyster</defName>
    <giverClass>JoyGiver_Ingest</giverClass>
    <baseChance>2.5</baseChance>
    <thingDefs>
      <li>Oyster</li>
    </thingDefs>
    <joyKind>Gluttonous</joyKind>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
  </JoyGiverDef>

  <!-- Building - meditative -->
  
  <JoyGiverDef>
    <defName>MeditateOnFishingPier</defName>
    <giverClass>JoyGiver_InteractBuildingInteractionCell</giverClass>
    <baseChance>1.5</baseChance>
    <thingDefs>
      <li>FishingPier</li>
    </thingDefs>
    <jobDef>LookAtWater</jobDef>
    <joyKind>Meditative</joyKind>
    <unroofedOnly>false</unroofedOnly>
    <requiredCapacities>
      <li>Sight</li>
    </requiredCapacities>
  </JoyGiverDef>

</Defs>