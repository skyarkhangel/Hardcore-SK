<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <TaleDef>
    <defName>MentalStateSelfHarm</defName>
    <label>deep depression</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawn_nameShortDef] slicing their wrists</li>
        <li>image->[pawn_nameFull] cutting {PAWN_possessive} wrists [circumstance_group]</li>
		<li>image->[pawn_nameFull] sitting in a pool of {PAWN_possessive} blood [circumstance_group]</li>
        <li>image->[pawn_nameFull] staring off into the distance [circumstance_group]</li>
        <li>circumstance_phrase->while whimpering</li>
        <li>circumstance_phrase->while cowering in {PAWN_possessive} room</li>
        <li>circumstance_phrase->without speaking a word</li>
        <li>circumstance_phrase->while crying</li>
        <li>desc_sentence->{PAWN_pronoun} looks pale and sickly.</li>
        <li>desc_sentence->{PAWN_possessive} arms are limp.</li>
		<li>desc_sentence->{PAWN_possessive} clothes are stained with blood.</li>
        <li>desc_sentence->{PAWN_pronoun} is sitting on the floor, rocking back and forth.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  
  <TaleDef>
    <defName>MentalStateApathy</defName>
    <label>apathy</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawn_nameShortDef] wandering around apathetically</li>
        <li>image->[pawn_nameFull] wandering around the colony apathetically [circumstance_group]</li>
		<li>image->[pawn_nameFull] sitting around lethargically [circumstance_group]</li>
        <li>image->[pawn_nameFull] avoiding doing {PAWN_possessive} chores [circumstance_group]</li>
		<li>image->[pawn_nameFull] reluctantly doing {PAWN_possessive} chores [circumstance_group]</li>
		<li>image->[pawn_nameFull] slacking off [circumstance_group]</li>
        <li>circumstance_phrase->with an annoyed look on {PAWN_possessive} face</li>
        <li>circumstance_phrase->while pouting</li>
        <li>circumstance_phrase->while grumbling</li>
		<li>desc_sentence->{PAWN_pronoun} looks exhausted.</li>
        <li>desc_sentence->{PAWN_possessive} arms are crossed.</li>
        <li>desc_sentence->{PAWN_pronoun} looks like {PAWN_pronoun} couldn't care less.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  
  <TaleDef>
    <defName>MentalStateCompulsion</defName>
    <label>compulsion</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawn_nameShortDef] neurotically cleaning</li>
        <li>image->[pawn_nameFull] obsessively organizing resources [circumstance_group]</li>
		<li>image->[pawn_nameFull] covered in dirt and grime [circumstance_group]</li>
        <li>image->[pawn_nameFull] scrubbing the floors obsessively [circumstance_group]</li>
        <li>circumstance_phrase->while mumbling under {PAWN_possessive} breath</li>
        <li>circumstance_phrase->while sweating profusely</li>
		<li>circumstance_phrase->while struggling to stay awake</li>
        <li>desc_sentence->{PAWN_pronoun} looks like {PAWN_pronoun} hasn't slept in days.</li>
		<li>desc_sentence->{PAWN_pronoun} looks malnourished and hungry.</li>
		<li>desc_sentence->{PAWN_possessive} hands are trembling.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>

</Defs>