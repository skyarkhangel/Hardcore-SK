<Defs>

	<RecipeDef>
		<defName>MakeAntidoteSimple</defName>
		<label>Make simple antidote</label>
		<description>Make simple antidote from poison gland. Produces 1.</description>
		<jobString>Making simple antidote</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Chemlab_Medicine_Drink</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>500</workAmount>
		<recipeUsers>
			<li>TableButcher</li>
			<li>TableKitchen</li>
			<li>meditable</li>
			<li>DrugLab</li>
		</recipeUsers>
		<targetCountAdjustment>1</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MedicineHerbal</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>PoisonGland</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>PoisonGland</li>
				<li>MedicineHerbal</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AntidoteSimple>1</AntidoteSimple>
		</products>
		<skillRequirements>
			<Medicine>1</Medicine>
		</skillRequirements>
		<workSkill>Medicine</workSkill>
		<researchPrerequisite>Medicine_A2</researchPrerequisite>
	</RecipeDef>

