<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef Name="CookCatFood">
		<defName>CookCatFood</defName>
		<label>make cat food</label>
		<description>Creates Cat Food from raw meat and plant ingredients. Your cats are guaranteed to love it! Produces 20.</description>
		<jobString>Making Cat Food.</jobString>
		<workAmount>100</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<efficiencyStat>ButcheryFleshEfficiency</efficiencyStat>
		<effectWorking>ButcherFlesh</effectWorking>
		<soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>   
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<recipeUsers>
			<li>TableButcher</li>
			<li>TableKitchen</li>			
		</recipeUsers>		
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
				</filter>
				<count>0.5</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>0.5</count>
			</li>
		</ingredients>
		<products>
			<CatFood>20</CatFood>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<specialFiltersToDisallow>
				<li>AllowRotten</li>
				<li>AllowPlantFood</li>
			</specialFiltersToDisallow>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<disallowedThingDefs>
				<li>Meat_Human</li>
			</disallowedThingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<Cooking>0</Cooking>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
		<researchPrerequisite>Animal_A2</researchPrerequisite>
	</RecipeDef>


	<RecipeDef>
		<defName>MakeSilage</defName>
		<label>make silage</label>
		<description>Make Silage from Hay and plant ingredients for animal food. It is more nutritional than hay. Produces 30.</description>
		<jobString>Making Silage.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>300</workAmount>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Rawwheat</li>
						<li>RawCorn</li>
						<li>RawRice</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Hay</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Rawwheat</li>
				<li>RawCorn</li>
				<li>RawRice</li>
				<li>Hay</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Silage>30</Silage>
		</products>
		<workSkill>Cooking</workSkill>
		<recipeUsers>
			<li>TableButcher</li>
			<li>TableKitchen</li>
		</recipeUsers>
		<researchPrerequisite>Animal_A2</researchPrerequisite>
	</RecipeDef>

</Defs>
