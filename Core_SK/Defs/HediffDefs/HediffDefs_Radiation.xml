	<HediffDef>
		<hediffClass>SK.Hediff_FatalRad</hediffClass>
		<defName>FatalRad</defName>
		<label>Fatal Radiation Exposure</label>
		<description>Got a critical dose of radiation</description>
		<minSeverity>0</minSeverity>
		<maxSeverity>1</maxSeverity>
		<lethalSeverity>1</lethalSeverity>
		<defaultLabelColor>(1, 0.35, 0.35)</defaultLabelColor>
		<makesSickThought>true</makesSickThought>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<immunityPerDayNotSick>0</immunityPerDayNotSick>
				<immunityPerDaySick>0</immunityPerDaySick>
				<severityPerDayNotImmune>0.4</severityPerDayNotImmune>
				<severityPerDayImmune>0.4</severityPerDayImmune>
			</li>
		</comps>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<label>initial</label>
				<painOffset>0.3</painOffset>
				<vomitMtbDays>0.1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<label>advanced</label>
				<painOffset>0.3</painOffset>
				<vomitMtbDays>0.05</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.4</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.4</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<label>near death</label>
				<vomitMtbDays>0.01</vomitMtbDays>
				<painOffset>0.3</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.6</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.6</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.6</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>dead</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0</setMax>
					</li>
				</capMods>
			</li>
		</stages>
