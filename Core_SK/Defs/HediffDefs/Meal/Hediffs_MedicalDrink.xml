<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<HediffDef>
		<defName>MedicalDrink</defName>
		<label>antibiotics</label>  
		<description>A concentrated extract of Healroot and some hops. Tastes awful but boosts the immune system.</description>
		<labelNoun>an antibiotics</labelNoun>
		<defaultLabelColor>(255,102,102)</defaultLabelColor>
		<initialSeverity>0.35</initialSeverity>
		<hediffClass>HediffWithComps</hediffClass>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.5</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>buzzed-hidden</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.01</minSeverity>
				<label>feeling better</label>
				<painFactor>0.9</painFactor>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>0.20</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.25</minSeverity>
				<label>boosted immunedefency</label>
				<painFactor>0.8</painFactor>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>0.30</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.4</minSeverity>
				<label>hammered</label>
				<painFactor>0.5</painFactor>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>0.40</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.7</minSeverity>
				<label>overdose</label>
				<painFactor>0.3</painFactor>
				<vomitMtbDays>0.1</vomitMtbDays>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.60</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.9</minSeverity>
				<label>serious overdose</label>
				<painFactor>0.3</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>