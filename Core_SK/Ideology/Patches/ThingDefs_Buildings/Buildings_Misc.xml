<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>
			<!-- Reliquary patches -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Reliquary"]/costList</xpath>
				<value>
					<costList>
						<GoldBar>100</GoldBar>
						<ComponentMedieval>30</ComponentMedieval>
					</costList>
				</value>
			</li>
			<!-- Styling station patches -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="StylingStation"]/costList</xpath>
				<value>
					<costList>
						<Glass>20</Glass>
						<ComponentMedieval>8</ComponentMedieval>
					</costList>
				</value>
			</li>
			<!-- Lightball patches -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="LightBall"]/costList</xpath>
				<value>
					<costList>
						<ComponentIndustrial>5</ComponentIndustrial>
						<Glass>8</Glass>
						<ElectronicComponents>1</ElectronicComponents>
					</costList>
				</value>
			</li>
			<!-- Loudspeaker patches -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Loudspeaker"]/costList</xpath>
				<value>
					<stuffCategories>
						<li>Woody</li>
						<li>Metallic</li>
					</stuffCategories>
					<costStuffCount>80</costStuffCount>
					<costList>
						<ComponentIndustrial>2</ComponentIndustrial>
						<ElectronicComponents>1</ElectronicComponents>
					</costList>
				</value>
			</li>
			<!-- Drum patches -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Drum"]/costList</xpath>
				<value>
					<costList>
						<ComponentMedieval>12</ComponentMedieval>
					</costList>
				</value>
			</li>
			<!-- Pew and kneel sheet and kneel pillow and bonsai pot patches -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Pew" or defName="KneelSheet" or defName="KneelPillow" or defName="PlantPot_Bonsai"]</xpath>
				<value>
					<costList>
						<ComponentMedieval>4</ComponentMedieval>
					</costList>
				</value>
			</li>
			<!-- Slab beds patches -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="SlabBed"]/costStuffCount</xpath>
				<value>
					<costStuffCount>60</costStuffCount>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="SlabDoubleBed"]/costStuffCount</xpath>
				<value>
					<costStuffCount>120</costStuffCount>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="SlabBed" or defName="SlabDoubleBed"]/statBases/ImmunityGainSpeedFactor</xpath>
				<value>
					<ImmunityGainSpeedFactor>1</ImmunityGainSpeedFactor>
				</value>
			</li>
			<!-- Autobong patches -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Autobong"]/costList</xpath>
				<value>
					<ElectronicComponents>1</ElectronicComponents>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>
