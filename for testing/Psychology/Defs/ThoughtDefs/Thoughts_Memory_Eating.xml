<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ======= Basic quality thoughts ========= -->

  <ThoughtDef>
    <defName>AteLavishMeal</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>PickyEater</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>ate lavish meal</label>
        <description>That lavish meal was amazing. It nourished my body and my soul.</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteLavishMealPickyEater</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <requiredTraits>
      <li>PickyEater</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate lavish meal</label>
        <description>That lavish meal was amazing. It's exactly what I want to eat every day!</description>
        <baseMoodEffect>12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>AteFineMeal</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>PickyEater</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>ate fine meal</label>
        <description>I ate a really tasty fine meal. Yum!</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>AteFineMealPickyEater</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <requiredTraits>
      <li>PickyEater</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate fine meal</label>
        <description>I ate a really tasty fine meal. Just the way I like it!</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteAwfulMeal</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>3</stackLimit>
    <nullifyingTraits>
      <li>PickyEater</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>ate awful meal</label>
        <description>I had to eat a disgusting, tasteless meal. I know it keeps you alive, but nobody wants to swallow that glop.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteAwfulMealPickyEater</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>3</stackLimit>
    <requiredTraits>
      <li>PickyEater</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate awful meal</label>
        <description>I had to eat a disgusting, tasteless meal. Unacceptable. I expect to be fed better than that.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteRawFood</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>3</stackLimit>
    <nullifyingTraits>
      <li>PickyEater</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>ate raw food</label>
        <description>I had to eat raw food. Can't we cook it, or at least synthesize some nutrient paste?</description>
        <baseMoodEffect>-7</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteRawFoodPickyEater</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>3</stackLimit>
    <requiredTraits>
      <li>PickyEater</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate raw food</label>
        <description>I had to eat raw food. I don't want to live here if we can't even have a chef.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteNormalMealPickyEater</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>3</stackLimit>
    <requiredTraits>
      <li>PickyEater</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate plain meal</label>
        <description>That meal wasn't really up to my standards. I only ate it because there was nothing better.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteCorpse</defName>
    <durationDays>1.0</durationDays>
    <stackLimit>3</stackLimit>
    <stages>
      <li>
        <label>ate corpse</label>
        <description>I had to eat a corpse without even butchering or cooking it. It was horrible.</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!--=========== Special nature thoughts ============-->

  <ThoughtDef>
    <defName>AteHumanlikeMeatDirectCannibal</defName>
    <durationDays>1.0</durationDays>
    <stackedEffectMultiplier>0.25</stackedEffectMultiplier>
    <stackLimit>1</stackLimit>
    <requiredTraits>
      <li>Cannibal</li>
    </requiredTraits>
    <stages>
      <li>
        <label>raw cannibalism</label>
        <description>I ate the meat of another human, raw, like an animal. It was so... succulent.</description>
        <baseMoodEffect>20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

